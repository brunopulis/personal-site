{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "allowJs": true,
    "checkJs": false
  },
  "include": ["src/**/*", "scripts/**/*", "cli/**/*", "*.js", "*.mjs"],
  "exclude": ["node_modules", "_site"]
}
