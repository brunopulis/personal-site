		"gray-matter": "^4.0.3",
		"html-minifier-terser": "^7.2.0",
		"husky": "^9.1.7",
		"jest": "^30.2.0",
		"js-yaml": "^4.1.1",
		"lint-staged": "^16.2.7",
		"markdown-it": "^14.1.0",
		"markdown-it-abbr": "^2.0.0",
