{
	"name": "personal-site",
	"version": "1.0.0",
	"description": "My personal website",
	"author": "Bruno Pulis",
	"license": "ISC",
	"type": "module",
	"packageManager": "pnpm@10.27.0",
	"scripts": {
		"prebuild": "pnpm build:css",
    "build": "eleventy",
    "build:css": "sass src/assets/scss/main.scss src/assets/css/main.css --style compressed --quiet-deps --load-path=node_modules",
    
    "predev": "pnpm build:css",
    "dev": "eleventy --serve --incremental --quiet",
    "dev:full": "eleventy --serve",
    
    "watch:css": "sass --watch src/assets/scss:src/assets/css --quiet-deps --load-path=node_modules --style compressed --no-source-map",
    "dev:parallel": "concurrently --kill-others \"pnpm:watch:css\" \"pnpm:dev\"",
    
    "clean": "rimraf _site",
    "clean:css": "rimraf src/assets/css",
    "clean:all": "pnpm clean && pnpm clean:css && pnpm clean:og"
	},
	"keywords": [],
	"repository": {
		"type": "git",
		"url": "https://github.com/brunopulis/personal-website.git"
	},
	"dependencies": {
		"@11ty/eleventy": "^3.1.2",
		"@11ty/eleventy-fetch": "^5.1.1",
		"@11ty/eleventy-img": "^6.0.4",
		"@11ty/eleventy-plugin-rss": "^2.0.4",
		"@11ty/eleventy-plugin-syntaxhighlight": "^5.0.2",
		"@11ty/eleventy-plugin-webc": "^0.11.2",
		"@11ty/is-land": "^5.0.1",
		"@fortawesome/fontawesome-free": "^7.1.0",
		"@inquirer/prompts": "^8.1.0",
		"@inquirer/select": "^5.0.3",
		"@vercel/speed-insights": "^1.3.1",
		"@zachleat/snow-fall": "^1.0.3",
		"@zachleat/table-saw": "^1.0.7",
		"bootstrap": "^5.3.8",
		"lite-youtube-embed": "^0.3.4"
	},
	"devDependencies": {
		"@babel/preset-env": "^7.28.5",
		"@tinacms/cli": "^2.0.5",
		"@toycode/markdown-it-class": "^1.2.4",
		"@types/jest": "^30.0.0",
		"@types/node": "^25.0.2",
		"autoprefixer": "^10.4.18",
		"axe-core": "^4.11.0",
		"babel-jest": "^30.2.0",
		"concurrently": "^9.2.1",
		"cross-env": "^10.1.0",
