{
  "name": "personal-site",
  "version": "1.0.0",
  "description": "My personal website",
  "author": "Bruno Pulis",
  "license": "ISC",
  "packageManager": "pnpm@10.25.0",
  "type": "module",
  "scripts": {
    "dev": "pnpm run css:watch & eleventy --serve",
    "build": "pnpm run clean && pnpm run css:build && pnpm run build:11ty",
    "build:11ty": "cross-env ELEVENTY_ENV=production eleventy",
    "css:build": "pnpm exec tailwindcss -i ./src/assets/css/input.css -o ./src/assets/css/tailwind.css",
    "css:watch": "pnpm exec tailwindcss -i ./src/assets/css/input.css -o ./src/assets/css/tailwind.css --watch",
    "clean": "rimraf dist",
    "clean:og": "rimraf src/assets/og-images",
    "favicons": "node ./src/_config/setup/generate-favicons.js",
    "screenshots": "node ./src/_config/setup/generate-screenshots.js",
    "test:a11y": "npm run pa11y:build && (npm run pa11y:serve &) && sleep 5 && npm run pa11y:test",
    "pa11y:build": "npm run clean && cross-env ELEVENTY_ENV=test eleventy",
    "pa11y:serve": "ELEVENTY_ENV=test eleventy --serve --ignore-initial",
    "pa11y:test": "sleep 3 && pa11y-ci --config ./dist/pa11y.json"
  },
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "https://github.com/brunopulis/personal-website.git"
  },
  "dependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@11ty/eleventy-fetch": "^5.1.1",
    "@11ty/eleventy-img": "^6.0.4",
    "@11ty/eleventy-plugin-rss": "^2.0.4",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.2",
    "@11ty/eleventy-plugin-webc": "^0.11.2",
    "@11ty/is-land": "^5.0.1",
    "@vercel/speed-insights": "^1.3.1",
    "@zachleat/snow-fall": "^1.0.3",
    "@zachleat/table-saw": "^1.0.6",
    "lite-youtube-embed": "^0.3.4"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.17",
    "@tailwindcss/typography": "^0.5.19",
    "@toycode/markdown-it-class": "^1.2.4",
    "autoprefixer": "^10.4.18",
    "cross-env": "^10.1.0",
    "dayjs": "^1.11.19",
    "dotenv": "^17.2.3",
    "eleventy-plugin-broken-links": "^2.2.1",
    "fast-glob": "^3.3.3",
    "html-minifier-terser": "^7.2.0",
    "husky": "^9.1.7",
    "js-yaml": "^4.1.1",
    "lint-staged": "^16.2.7",
    "markdown-it": "^14.1.0",
    "markdown-it-abbr": "^2.0.0",
    "markdown-it-anchor": "^9.2.0",
    "markdown-it-attrs": "^4.3.1",
    "markdown-it-emoji": "^3.0.0",
    "markdown-it-footnote": "^4.0.0",
    "markdown-it-link-attributes": "^4.0.1",
    "markdown-it-mark": "^4.0.0",
    "markdown-it-prism": "^3.0.1",
    "pa11y-ci": "^4.0.1",
    "postcss": "^8.4.35",
    "prettier-plugin-css-order": "^2.1.2",
    "prettier-plugin-jinja-template": "^2.1.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "prismjs": "^1.30.0",
    "rimraf": "^6.1.2",
    "sanitize-html": "^2.17.0",
    "sharp": "^0.34.5",
    "slugify": "^1.6.6",
    "svgo": "^4.0.0",
    "tailwindcss": "^4.1.17",
    "zod": "^4.1.13",
    "zod-validation-error": "^5.0.0"
  }
}
