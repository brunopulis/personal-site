{
  "name": "personal-site",
  "version": "1.0.0",
  "description": "My personal website",
  "author": "Bruno Pulis",
  "license": "ISC",
  "type": "module",
  "packageManager": "pnpm@10.26.0",
  "scripts": {
    "build": "eleventy",
    "build:tina": "tinacms build && eleventy",
    "dev": "eleventy --serve",
    "css:build": "pnpm exec tailwindcss -i ./src/assets/css/input.css -o ./src/assets/css/tailwind.css",
    "css:watch": "pnpm exec tailwindcss -i ./src/assets/css/input.css -o ./src/assets/css/tailwind.css --watch",
    "cms": "tinacms dev -c \"pnpm dev\"",
    "clean": "rimraf _site",
    "clean:og": "rimraf src/assets/og-images",
    "favicons": "node ./src/_config/setup/generate-favicons.js",
    "screenshots": "node ./src/_config/setup/generate-screenshots.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:debug": "NODE_OPTIONS=--experimental-vm-modules node --inspect-brk node_modules/jest/bin/jest.js --runInBand",
    "cypress": "cypress open",
    "cypress:run": "cypress run",
    "cypress:headed": "cypress run --headed",
    "cypress:debug": "cypress open --dev",
    "fetch:movies": "node scripts/content/watched.js",
    "import:movies": "node scripts/content/import-movies.js",
    "import:all-movies": "node scripts/content/import-all-movies.js"
  },
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "https://github.com/brunopulis/personal-website.git"
  },
  "dependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@11ty/eleventy-fetch": "^5.1.1",
    "@11ty/eleventy-img": "^6.0.4",
    "@11ty/eleventy-plugin-rss": "^2.0.4",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.2",
    "@11ty/eleventy-plugin-webc": "^0.11.2",
    "@11ty/is-land": "^5.0.1",
    "@inquirer/prompts": "^8.1.0",
    "@inquirer/select": "^5.0.3",
    "@vercel/speed-insights": "^1.3.1",
    "@zachleat/snow-fall": "^1.0.3",
    "@zachleat/table-saw": "^1.0.7",
    "lite-youtube-embed": "^0.3.4"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.5",
    "@tailwindcss/cli": "^4.1.17",
    "@tailwindcss/typography": "^0.5.19",
    "@tinacms/cli": "^2.0.5",
    "@toycode/markdown-it-class": "^1.2.4",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.2",
    "autoprefixer": "^10.4.18",
    "axe-core": "^4.11.0",
    "babel-jest": "^30.2.0",
    "cross-env": "^10.1.0",
    "cypress": "^15.7.1",
    "cypress-axe": "^1.7.0",
    "dayjs": "^1.11.19",
    "dotenv": "^17.2.3",
    "fast-glob": "^3.3.3",
    "gray-matter": "^4.0.3",
    "html-minifier-terser": "^7.2.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "js-yaml": "^4.1.1",
    "lint-staged": "^16.2.7",
    "markdown-it": "^14.1.0",
    "markdown-it-abbr": "^2.0.0",
    "markdown-it-anchor": "^9.2.0",
    "markdown-it-attrs": "^4.3.1",
    "markdown-it-emoji": "^3.0.0",
    "markdown-it-footnote": "^4.0.0",
    "markdown-it-link-attributes": "^4.0.1",
    "markdown-it-mark": "^4.0.0",
    "markdown-it-prism": "^3.0.1",
    "node-fetch": "^3.3.2",
    "postcss": "^8.4.35",
    "prettier-plugin-css-order": "^2.1.2",
    "prettier-plugin-jinja-template": "^2.1.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "prismjs": "^1.30.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "rimraf": "^6.1.2",
    "sanitize-html": "^2.17.0",
    "sharp": "^0.34.5",
    "slugify": "^1.6.6",
    "svgo": "^4.0.0",
    "tailwindcss": "^4.1.17",
    "tinacms": "^3.1.2",
    "zod": "^4.1.13",
    "zod-validation-error": "^5.0.0"
  }
}
