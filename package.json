{
  "name": "personal-site",
  "version": "1.0.0",
  "description": "My personal website",
  "author": "Bruno Pulis",
  "license": "ISC",
  "type": "module",
  "scripts": {
    "build:css": "postcss src/assets/scss/main.scss -o _site/assets/css/main.css --minify",
    "watch:css": "postcss src/assets/scss/main.scss -o _site/assets/css/main.css --watch",
    "dev": "tinacms dev -c \"concurrently \\\"eleventy --serve --incremental\\\" \\\"pnpm watch:css\\\"\"",
    "dev:full": "tinacms dev -c \"concurrently \\\"eleventy --serve\\\" \\\"pnpm watch:css\\\"\"",
    "build": "eleventy && pnpm build:css",
    "clean": "rimraf _site",
    "clean:all": "pnpm clean && pnpm clean:og",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest"
  },
  "lint-staged": {
    "*.{js,ts,json,md}": [
      "biome check --write"
    ],
    "*.{scss,css}": [
      "biome check --write --unsafe"
    ]
  },
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "https://github.com/brunopulis/personal-website.git"
  },
  "dependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@11ty/eleventy-fetch": "^5.1.1",
    "@11ty/eleventy-img": "^6.0.4",
    "@11ty/eleventy-plugin-bundle": "^3.0.7",
    "@11ty/eleventy-plugin-rss": "^2.0.4",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.2",
    "@11ty/eleventy-plugin-webc": "^0.11.2",
    "@11ty/is-land": "^5.0.1",
    "@inquirer/prompts": "^8.2.0",
    "@inquirer/select": "^5.0.4",
    "@picocss/pico": "^2.1.1",
    "@vercel/speed-insights": "^1.3.1",
    "@zachleat/table-saw": "^1.0.7",
    "deepmerge": "^4.3.1",
    "lite-youtube-embed": "^0.3.4",
    "lucide": "^0.575.0",
    "postcss-import": "^16.1.1",
    "sass": "^1.97.3"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.6",
    "@biomejs/biome": "2.4.4",
    "@tinacms/cli": "^2.1.1",
    "@toycode/markdown-it-class": "^1.2.4",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.10",
    "autoprefixer": "^10.4.18",
    "axe-core": "^4.11.1",
    "babel-jest": "^30.2.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "cssnano": "^7.1.2",
    "cypress": "^15.9.0",
    "cypress-axe": "^1.7.0",
    "dayjs": "^1.11.19",
    "dotenv": "^17.2.3",
    "fast-glob": "^3.3.3",
    "gray-matter": "^4.0.3",
    "html-minifier-terser": "^7.2.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "js-yaml": "^4.1.1",
    "lint-staged": "^16.2.7",
    "markdown-it": "^14.1.0",
    "markdown-it-abbr": "^2.0.0",
    "markdown-it-anchor": "^9.2.0",
    "markdown-it-attrs": "^4.3.1",
    "markdown-it-emoji": "^3.0.0",
    "markdown-it-footnote": "^4.0.0",
    "markdown-it-link-attributes": "^4.0.1",
    "markdown-it-mark": "^4.0.0",
    "markdown-it-prism": "^3.0.1",
    "node-fetch": "^3.3.2",
    "postcss": "^8.4.35",
    "postcss-cli": "^11.0.1",
    "prettier-plugin-css-order": "^2.1.2",
    "prettier-plugin-jinja-template": "^2.1.0",
    "prismjs": "^1.30.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "rimraf": "^6.1.2",
    "sanitize-html": "^2.17.0",
    "sharp": "^0.34.5",
    "slugify": "^1.6.6",
    "svgo": "^4.0.0",
    "tinacms": "^3.3.1",
    "typescript": "^5.9.3",
    "zod": "^4.3.6",
    "zod-validation-error": "^5.0.0"
  }
}
