---
permalink: /feed/livros.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:content="http://purl.org/rss/1.0/modules/content/">
  <channel>
    <title>{{ meta.siteName }} - Livros</title>
    <link>{{ meta.url }}/livros</link>
    <atom:link href="{{ meta.url }}/feed/livros.xml" rel="self" type="application/rss+xml" />
    <description>Livros que li e minhas anotações</description>
    <language>{{ meta.language }}</language>
    <lastBuildDate>{{ now | toRfc822Date }}</lastBuildDate>

    {%- for book in collections.books | slice(0, 20) %}
    <item>
      <title>{{ book.data.title }}{% if book.data.author %} - {{ book.data.author }}{% endif %}</title>
      <link>{{ meta.url }}{{ book.url }}</link>
      <guid isPermaLink="true">{{ meta.url }}{{ book.url }}</guid>
      <description>
        <![CDATA[
          <strong>Autor:</strong> {{ book.data.author }}<br>
          {% if book.data.year %}<strong>Ano:</strong> {{ book.data.year }}<br>{% endif %}
          {% if book.data.rating %}<strong>Avaliação:</strong> {{ '⭐' | repeat(book.data.rating) }}<br>{% endif %}
          <p>{{ book.data.description }}</p>
        ]]>
      </description>
      <content:encoded><![CDATA[{{ book.content }}]]></content:encoded>
      <pubDate>{{ book.data.date | toRfc822Date }}</pubDate>
      <author>{{ meta.author.email }}</author>
    </item>
    {%- endfor %}
  </channel>
</rss>