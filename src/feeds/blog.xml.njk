---
permalink: /feed/blog.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:content="http://purl.org/rss/1.0/modules/content/">
  <channel>
    <title>{{ meta.siteName }} - Blog</title>
    <link>{{ meta.url }}/blog</link>
    <atom:link href="{{ meta.url }}/feed/blog.xml" rel="self" type="application/rss+xml" />
    <description>Artigos sobre JavaScript, PHP, Astro e desenvolvimento web</description>
    <language>{{ meta.language }}</language>
    <lastBuildDate>{{ now | toRfc822Date }}</lastBuildDate>

    {%- for post in collections.posts | slice(0, 20) %}
    <item>
      <title>{{ post.data.title }}</title>
      <link>{{ meta.url }}{{ post.url }}</link>
      <guid isPermaLink="true">{{ meta.url }}{{ post.url }}</guid>
      <description>{{ post.data.description }}</description>
      <content:encoded><![CDATA[{{ post.content }}]]></content:encoded>
      <pubDate>{{ post.data.pubDate | toRfc822Date }}</pubDate>
      <author>{{ meta.author.email }}</author>
      {%- if post.data.tags %}
      {%- for tag in post.data.tags %}
      {%- if tag not in ["posts", "all"] %}
      <category>{{ tag }}</category>
      {%- endif %}
      {%- endfor %}
      {%- endif %}
    </item>
    {%- endfor %}
  </channel>
</rss>