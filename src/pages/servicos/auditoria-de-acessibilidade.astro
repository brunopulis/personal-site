---
import {
	AlertCircle,
	ArrowRight,
	Award,
	CheckCircle,
	Clock,
	Code,
	Download,
	Eye,
	FileText,
	Phone,
	Settings,
	Shield,
	Target,
	Users,
	Zap,
} from "@lucide/astro";
import CTASection from "@/components/CTA.astro";
import Footer from "@/components/layout/Footer.astro";
import Header from "@/components/layout/Header.astro";
import Packages from "@/components/services/Packages.astro";
import Layout from "@/layouts/Layout.astro";

const pacotes = [
	{
		nome: "Starter",
		preco: "R$ 5.000",
		ideal: "Sites pequenos e MVPs",
		descricao:
			"Perfeito para quem está começando e precisa de um diagnóstico inicial",
		cor: "blue",
		inclui: [
			"Auditoria de até 5 páginas",
			"Relatório simplificado em PDF",
			"Lista priorizada de problemas",
			"Recomendações de correção",
			"1 reunião de apresentação (1h)",
			"Suporte por email (7 dias)",
			"Prazo: 1-2 semanas",
		],
		exemplo: "5 páginas (ex: Home, Sobre, Serviços, Contato, Blog)",
		tempo: "1-2 semanas",
	},
	{
		nome: "Professional",
		preco: "R$ 12.000",
		ideal: "Projetos médios e empresas",
		descricao: "O mais completo e recomendado para a maioria dos casos",
		destaque: true,
		cor: "red",
		inclui: [
			"Auditoria de até 15 páginas",
			"Relatório completo detalhado",
			"Planilha Excel com todos os issues",
			"Prints e vídeos dos problemas",
			"Roadmap priorizado por impacto",
			"Recomendações técnicas específicas",
			"2 reuniões (apresentação + dúvidas)",
			"Suporte por email/WhatsApp (30 dias)",
			"Revisão pós-correções (opcional)",
			"Prazo: 2-3 semanas",
		],
		bonus: [
			"Documento de boas práticas",
			"Checklist de QA acessível",
			"Templates de testes",
		],
		exemplo: "15 páginas (site completo ou app com funcionalidades principais)",
		tempo: "2-3 semanas",
	},
	{
		nome: "Enterprise",
		preco: "Sob consulta",
		ideal: "Grandes projetos e plataformas",
		descricao: "Solução customizada para necessidades complexas",
		cor: "purple",
		inclui: [
			"Auditoria completa do sistema",
			"Múltiplos produtos/plataformas",
			"Testes com usuários reais (PcD)",
			"Análise de fluxos complexos",
			"Documentação técnica completa",
			"Treinamento da equipe incluído",
			"Acompanhamento de implementação",
			"Reuniões ilimitadas",
			"Suporte prioritário (90 dias)",
			"SLA de resposta garantido",
			"Contrato anual disponível",
		],
		exemplo: "Sistema completo (20+ páginas, apps, dashboards)",
		tempo: "4-6 semanas",
	},
];

const etapas = [
	{
		numero: 1,
		nome: "Kickoff",
		duracao: "1-2 dias",
		icone: Shield,
		descricao:
			"Reunião inicial para entender seu projeto, objetivos e definir escopo",
		atividades: [
			"Reunião de alinhamento (1h)",
			"Definição de páginas/fluxos prioritários",
			"Coleta de credenciais de acesso (se necessário)",
			"Definição de personas e casos de uso",
			"Alinhamento de expectativas e cronograma",
		],
	},
	{
		numero: 2,
		nome: "Auditoria Técnica",
		duracao: "5-10 dias",
		icone: Code,
		descricao: "Análise profunda de código, estrutura e conformidade WCAG",
		atividades: [
			"Análise de código HTML/CSS/JavaScript",
			"Verificação de semântica e ARIA",
			"Testes automatizados (Axe, Wave, Lighthouse)",
			"Validação de contraste de cores",
			"Verificação de estrutura de headings",
			"Análise de formulários e validações",
			"Teste de navegação por teclado",
			"Documentação de cada problema encontrado",
		],
	},
	{
		numero: 3,
		nome: "Testes com Tecnologias Assistivas",
		duracao: "3-5 dias",
		icone: Eye,
		descricao:
			"Simulação de uso real com leitores de tela e outras ferramentas",
		atividades: [
			"Testes com NVDA (Windows)",
			"Testes com JAWS (Windows)",
			"Testes com VoiceOver (macOS/iOS)",
			"Testes com TalkBack (Android)",
			"Navegação apenas por teclado",
			"Testes com zoom (até 200%)",
			"Gravação de vídeos dos problemas",
			"Documentação de experiência do usuário",
		],
	},
	{
		numero: 4,
		nome: "Elaboração do Relatório",
		duracao: "3-5 dias",
		icone: FileText,
		descricao:
			"Compilação de todos os achados em documentação clara e acionável",
		atividades: [
			"Categorização dos problemas por severidade",
			"Priorização por impacto no usuário",
			"Criação de prints e vídeos explicativos",
			"Redação de recomendações específicas",
			"Sugestões de código para correção",
			"Criação de planilha Excel detalhada",
			"Montagem do relatório final em PDF",
			"Roadmap de implementação sugerido",
		],
	},
	{
		numero: 5,
		nome: "Apresentação e Suporte",
		duracao: "1-2 dias",
		icone: Award,
		descricao: "Entrega dos resultados e acompanhamento pós-auditoria",
		atividades: [
			"Reunião de apresentação dos resultados",
			"Explicação de cada problema encontrado",
			"Priorização conjunta das correções",
			"Esclarecimento de dúvidas técnicas",
			"Orientações sobre próximos passos",
			"Suporte contínuo por email/WhatsApp",
			"Revisão opcional após correções",
		],
	},
];

const oqueBusco = [
	{
		categoria: "Estrutura e Semântica",
		icone: Code,
		itens: [
			"HTML semântico correto",
			"Uso apropriado de landmarks (header, nav, main, footer)",
			"Estrutura de headings (h1-h6) hierárquica",
			"Uso correto de listas (ul, ol)",
			"Elementos interativos acessíveis",
		],
	},
	{
		categoria: "ARIA e Acessibilidade",
		icone: Shield,
		itens: [
			"Atributos ARIA corretos (quando necessário)",
			"Roles apropriados",
			"Labels e descriptions em elementos",
			"Live regions para conteúdo dinâmico",
			"Estados e propriedades ARIA",
		],
	},
	{
		categoria: "Navegação e Interação",
		icone: Target,
		itens: [
			"Navegação completa por teclado",
			"Ordem de foco lógica (tab order)",
			"Indicadores de foco visíveis",
			"Skip links funcionais",
			"Atalhos de teclado documentados",
		],
	},
	{
		categoria: "Conteúdo e Mídia",
		icone: Eye,
		itens: [
			"Textos alternativos em imagens",
			"Transcrições de áudio",
			"Legendas em vídeos",
			"Descrições de áudio (quando aplicável)",
			"Conteúdo de links descritivo",
		],
	},
	{
		categoria: "Design Visual",
		icone: Award,
		itens: [
			"Contraste de cores adequado (WCAG AA ou AAA)",
			"Tamanho de fonte legível",
			"Espaçamento entre elementos clicáveis",
			"Zoom até 200% sem perda de funcionalidade",
			"Informação não dependente apenas de cor",
		],
	},
	{
		categoria: "Formulários",
		icone: CheckCircle,
		itens: [
			"Labels associados aos inputs",
			"Mensagens de erro claras",
			"Validação acessível",
			"Instruções visíveis",
			"Campos obrigatórios identificados",
		],
	},
];

const ferramentas = [
	{ nome: "Axe DevTools", uso: "Testes automatizados" },
	{ nome: "WAVE", uso: "Análise visual de problemas" },
	{ nome: "Lighthouse", uso: "Score de acessibilidade" },
	{ nome: "NVDA", uso: "Leitor de tela (Windows)" },
	{ nome: "JAWS", uso: "Leitor de tela (Windows)" },
	{ nome: "VoiceOver", uso: "Leitor de tela (Mac/iOS)" },
	{ nome: "TalkBack", uso: "Leitor de tela (Android)" },
	{ nome: "Colour Contrast Analyser", uso: "Análise de contraste" },
	{ nome: "HeadingsMap", uso: "Verificação de estrutura" },
];

const faq = [
	{
		pergunta: "Qual padrão/guideline você segue?",
		resposta:
			"Trabalho baseado nas WCAG 2.1 e 2.2 (Web Content Accessibility Guidelines), níveis A e AA. Para projetos específicos, posso focar em AAA ou em outras diretrizes como Section 508 ou EN 301 549.",
	},
	{
		pergunta: "Quanto tempo leva uma auditoria?",
		resposta:
			"Depende do pacote: Starter (1-2 semanas), Professional (2-3 semanas), Enterprise (4-6 semanas). O prazo começa após o kickoff e recebimento de todos os acessos necessários.",
	},
	{
		pergunta: "O que recebo no final?",
		resposta:
			"Relatório em PDF com todos os problemas encontrados, planilha Excel com detalhamento técnico, prints/vídeos explicativos, roadmap de correções priorizadas e acesso a mim para dúvidas durante o período de suporte.",
	},
	{
		pergunta: "Você implementa as correções?",
		resposta:
			"A auditoria não inclui implementação. Porém, ofereço o serviço de remediação separadamente, ou posso fazer mentoria da sua equipe para que eles implementem. Podemos conversar sobre a melhor opção.",
	},
	{
		pergunta: "E se meu projeto for muito grande?",
		resposta:
			"Para projetos grandes, fazemos auditoria em fases. Começamos pelas páginas/fluxos mais críticos e vamos expandindo. O pacote Enterprise é flexível e customizável para estas situações.",
	},
	{
		pergunta: "Garante conformidade legal?",
		resposta:
			"Forneço análise técnica baseada em padrões internacionais. Não sou advogado, então não posso garantir conformidade legal específica. Mas o relatório pode ser usado como documentação para demonstrar esforços de acessibilidade.",
	},
];
---

<Layout title="Auditoria de Acessibilidade - Bruno Pulis">
  <Header />
  <main id="main-content">
    <section class="relative overflow-hidden bg-gradient-to-br from-red-900 via-red-800 to-red-950 py-20 text-white">
      <div class="absolute inset-0 opacity-10">
        <div class="absolute top-20 left-10 h-64 w-64 rounded-full bg-white blur-3xl"></div>
        <div class="absolute right-10 bottom-20 h-96 w-96 rounded-full bg-red-400 blur-3xl"></div>
      </div>
      <div class="mx-auto max-w-7xl px-6">
        <div class="max-w-3xl">
          <h1 class="mb-6 text-5xl leading-tight font-bold">Auditoria de Acessibilidade</h1>
          <p class="mb-6 text-2xl text-white">Descubra exatamente o que precisa ser corrigido</p>
          <p class="mb-8 text-xl leading-relaxed text-white">
            Analiso seu site, app ou documento e te mostro exatamente o que precisa melhorar - e por quê isso importa
            para seus usuários. Relatório completo, priorizado e acionável.
          </p>
          <div class="flex gap-4">
            <a
              href="#pacotes"
              class="font-semibold text-white underline underline-offset-8 transition hover:no-underline"
            >
              Ver pacotes
            </a>
            <a
              href="#etapas"
              class="font-semibold text-white underline underline-offset-8 transition hover:no-underline"
            >
              Como funciona
            </a>
          </div>
        </div>
      </div>
    </section>

    <section class="bg-white py-20">
      <div class="mx-auto max-w-6xl px-6">
        <div class="mb-16 text-center">
          <h2 class="mb-4 text-4xl font-bold text-gray-900">Por que fazer uma auditoria?</h2>
          <p class="mx-auto max-w-3xl text-xl text-gray-600">Você não pode corrigir o que não sabe que está quebrado</p>
        </div>

        <div class="grid gap-8 md:grid-cols-3">
          <div class="rounded-2xl border-2 border-red-200 bg-gradient-to-br from-red-50 to-white p-8">
            <div class="mb-6 flex h-14 w-14 items-center justify-center rounded-xl bg-red-600">
              <AlertCircle class="h-7 w-7 text-white" />
            </div>
            <h3 class="mb-4 text-2xl font-bold text-gray-900">Evite processos</h3>
            <p class="text-gray-700">
              Sites inacessíveis podem gerar processos judiciais. Uma auditoria documenta seus esforços e mostra o
              caminho para conformidade legal.
            </p>
          </div>

          <div class="rounded-2xl border-2 border-green-200 bg-gradient-to-br from-green-50 to-white p-8">
            <div class="mb-6 flex h-14 w-14 items-center justify-center rounded-xl bg-green-600">
              <Zap class="h-7 w-7 text-white" />
            </div>
            <h3 class="mb-4 text-2xl font-bold text-gray-900">Aumente seu alcance</h3>
            <p class="text-gray-700">
              15% da população tem alguma deficiência. Um site acessível alcança mais pessoas, aumenta conversões e
              melhora SEO.
            </p>
          </div>

          <div class="rounded-2xl border-2 border-blue-200 bg-gradient-to-br from-blue-50 to-white p-8">
            <div class="mb-6 flex h-14 w-14 items-center justify-center rounded-xl bg-blue-600">
              <Target class="h-7 w-7 text-white" />
            </div>
            <h3 class="mb-4 text-2xl font-bold text-gray-900">Priorize investimentos</h3>
            <p class="text-gray-700">
              Saiba exatamente onde investir. O relatório prioriza problemas por impacto, permitindo corrigir o mais
              crítico primeiro.
            </p>
          </div>
        </div>
      </div>
    </section>

    <Packages />

    <section id="etapas" class="bg-white py-20">
      <div class="mx-auto max-w-6xl px-6">
        <div class="mb-16 text-center">
          <h2 class="mb-4 text-4xl font-bold text-gray-900">Como funciona a auditoria</h2>
          <p class="text-xl text-gray-600">Processo transparente em 5 etapas</p>
        </div>

        <div class="space-y-8">
          {
            etapas.map((etapa, index) => {
              const Icon = etapa.icone
              return (
                <div class="relative">
                  {index < etapas.length - 1 && <div class="absolute top-20 bottom-0 left-8 -mb-8 w-0.5 bg-gray-200" />}

                  <div class="flex gap-6">
                    <div class="flex-shrink-0">
                      <div class="relative z-10 flex h-16 w-16 items-center justify-center rounded-xl bg-gradient-to-br from-blue-500 to-blue-600 text-2xl font-bold text-white shadow-lg">
                        {etapa.numero}
                      </div>
                    </div>

                    <div class="flex-1 rounded-xl border-2 border-gray-200 bg-white p-8 transition hover:border-blue-400">
                      <div class="mb-4 flex items-start justify-between">
                        <div>
                          <h3 class="mb-2 text-2xl font-bold text-gray-900">{etapa.nome}</h3>
                          <p class="text-gray-600">{etapa.descricao}</p>
                        </div>
                        <div class="flex items-center gap-2 rounded-lg bg-gray-100 px-4 py-2 text-sm whitespace-nowrap text-gray-600">
                          <Clock class="h-4 w-4" />
                          {etapa.duracao}
                        </div>
                      </div>

                      <div class="mt-6">
                        <h4 class="mb-3 text-sm font-bold text-gray-900">O que faço nesta etapa:</h4>
                        <ul class="grid gap-2 md:grid-cols-2">
                          {etapa.atividades.map((atividade) => (
                            <li class="flex items-start gap-2">
                              <CheckCircle class="mt-0.5 h-4 w-4 flex-shrink-0 text-green-600" />
                              <span class="text-sm text-gray-700">{atividade}</span>
                            </li>
                          ))}
                        </ul>
                      </div>
                    </div>
                  </div>
                </div>
              )
            })
          }
        </div>
      </div>
    </section>

    <section class="bg-gray-50 py-20">
      <div class="mx-auto max-w-6xl px-6">
        <div class="mb-16 text-center">
          <h2 class="mb-4 text-4xl font-bold text-gray-900">O que busco na auditoria</h2>
          <p class="text-xl text-gray-600">Análise completa baseada em WCAG 2.1/2.2</p>
        </div>

        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
          {
            oqueBusco.map((categoria) => {
              const Icon = categoria.icone
              return (
                <div class="rounded-xl border-2 border-gray-200 bg-white p-6 transition hover:border-blue-400 hover:shadow-lg">
                  <div class="mb-4 flex items-center gap-3">
                    <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-blue-100">
                      <Icon class="h-5 w-5 text-blue-600" />
                    </div>
                    <h3 class="font-bold text-gray-900">{categoria.categoria}</h3>
                  </div>
                  <ul class="space-y-2">
                    {categoria.itens.map((item) => (
                      <li class="flex items-start gap-2 text-sm text-gray-700">
                        <span class="text-blue-600">•</span>
                        <span>{item}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              )
            })
          }
        </div>
      </div>
    </section>

    <section class="bg-white py-20">
      <div class="mx-auto max-w-6xl px-6">
        <div class="mb-12 text-center">
          <h2 class="mb-4 text-3xl font-bold text-gray-900">Ferramentas que utilizo</h2>
          <p class="text-gray-600">Combinação de testes automatizados e manuais para análise completa</p>
        </div>

        <div class="grid gap-4 md:grid-cols-3">
          {
            ferramentas.map((ferramenta) => (
              <div class="flex items-center gap-3 rounded-lg border border-gray-200 bg-gray-50 p-4">
                <div class="flex h-10 w-10 flex-shrink-0 items-center justify-center rounded-lg bg-purple-100">
                  <Zap class="h-5 w-5 text-purple-600" />
                </div>
                <div class="flex-1">
                  <div class="text-sm font-semibold text-gray-900">{ferramenta.nome}</div>
                  <div class="text-xs text-gray-600">{ferramenta.uso}</div>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <section class="bg-gray-50 py-20">
      <div class="mx-auto max-w-4xl px-6">
        <div class="mb-12 text-center">
          <h2 class="mb-4 text-3xl font-bold text-gray-900">Perguntas Frequentes</h2>
        </div>

        <div class="space-y-6">
          {
            faq.map((item, index) => (
              <div class="rounded-xl border border-gray-200 bg-white p-6 shadow-sm">
                <h3 class="mb-3 text-lg font-bold text-gray-900">{item.pergunta}</h3>
                <p class="leading-relaxed text-gray-700">{item.resposta}</p>
              </div>
            ))
          }
        </div>

        <div class="mt-12 text-center">
          <p class="mb-4 text-gray-600">Ainda tem dúvidas?</p>
          <a href="/contato" class="inline-flex items-center gap-2 font-semibold text-blue-600 hover:text-blue-700">
            Entre em contato
            <ArrowRight class="h-4 w-4" />
          </a>
        </div>
      </div>
    </section>

    <CTASection
      title="Pronto para descobrir o que precisa melhorar?"
      description="Vamos agendar uma conversa sem compromisso. Te explico o processo em detalhes e tiramos todas as suas dúvidas."
      primaryButton={{
        text: 'Solicitar orçamento',
        url: '/contato',
      }}
      secondaryButton={{
        text: 'Ver projetos anteriores',
        url: '/projetos',
      }}
    />
  </main>
  <Footer />
</Layout>
