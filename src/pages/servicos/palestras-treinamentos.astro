---
import config from '@/data/site.config.json'
import testimonials from '@/data/testimonials.json'
import speaking from '@/assets/palestra.webp'

import Layout from '@/layouts/Layout.astro'
import Header from '@/components/layout/Header.astro'
import HeroSection from '@/components/layout/HeroSection.astro'
import TalksList from '@/components/speaking/TalksList.astro'
import TypeTalks from '@/components/speaking/TypeTalks.astro'
import PricingSpeaking from '@/components/speaking/PricingSpeaking.astro'
import Footer from '@/components/layout/Footer.astro'

import talks from '@/assets/talks.avif'

const talkTestimonials = testimonials.testimonials.filter((testimonial) => testimonial.type === 'talk')
