---
import Layout from "@layouts/Layout.astro";
import Header from "@components/layouts/Header.astro";
import CTASection from "@components/CTA.astro";
import Footer from "@components/layouts/Footer.astro";
import site from "@data/site.config.json";

import {
	AlertCircle,
	ArrowRight,
	BookOpen,
	CheckCircle,
	Clock,
	Code,
	Coffee,
	GraduationCap,
	MessageCircle,
	Monitor,
	Package,
	Search,
	ShieldCheck,
	Star,
	Target,
	Zap,
} from "@lucide/astro";

const iconMap = {
	ShieldCheck,
	Search,
	Code,
	Monitor,
	BookOpen,
	ArrowRight,
	Clock,
	Target,
	Package,
	CheckCircle,
	Zap,
	GraduationCap,
	AlertCircle,
	Star,
};

const services = [
	{
		id: "mentoria",
		title: "Mentoria",
		tagline: "Aprenda fazendo, com acompanhamento contínuo",
		descricao:
			"Trabalho lado a lado com você ou sua equipe para desenvolver habilidades em acessibilidade. Não é só teoria - é prática real no seu projeto.",
		url: "/servicos/mentoria",
		badge: "Mais procurado",
	},
	{
		id: "auditoria",
		title: "Auditoria de Acessibilidade",
		tagline: "Descubra exatamente o que precisa melhorar",
		descricao:
			"Analiso seu site e te mostro todos os problemas de acessibilidade, com priorização clara e recomendações práticas de correção.",
		url: "/servicos/auditoria-de-acessibilidade",
		badge: "Começo ideal",
	},
	{
		id: "palestras",
		title: "Palestras",
		icone: MessageCircle,
		tagline: "Conhecimento acessível para sua equipe",
		descricao:
			"Levo acessibilidade para empresas e eventos de forma simples e prática. Sem jargões complicados, com foco em aplicação real.",
		url: "/servicos/palestras",
		badge: "Inspirador",
		oqueinclui: [
			"Palestra personalizada para seu contexto",
			"Material didático em formato acessível",
			"Demonstrações práticas ao vivo",
			"Sessão de perguntas e respostas",
		],
	},
	{
		id: "remediacao-docs",
		title: "Remediação de Documentos",
		tagline: "PDFs e documentos verdadeiramente acessíveis",
		descricao:
			"Transformo seus documentos (PDFs, Word, PowerPoint) em versões acessíveis que atendem aos padrões.",
		url: "/servicos/remediacao-de-documentos",
		badge: "Essencial",
	},
	{
		id: "remediacao-sites",
		title: "Remediação de Sites",
		tagline: "Corrijo o código para torná-lo acessível",
		descricao:
			"Pego seu site inacessível e implemento todas as correções necessárias no código. Trabalho direto na implementação técnica.",
		url: "/servicos/remediacao-de-sites",
		badge: "Mão na massa",
	},
	{
		id: "consultoria",
		title: "Consultoria",
		tagline: "Orientação estratégica para decisões certas",
		descricao:
			"Ajudo sua empresa a definir estratégias de acessibilidade, criar políticas internas e tomar decisões informadas sobre investimentos.",
		url: "/servicos/consultoria",
		badge: "Estratégico",
	},
];
---

<Layout title="Serviços - Bruno Pulis">
  <Header />

  <main id="main-content">
    <section id="hero" aria-labelledby="hero-section">
      <div class="mx-auto grid max-w-7xl items-center gap-12 px-6 py-24 md:grid-cols-2">
        <div>
          <h1 class="mb-6 text-5xl leading-tight font-bold text-errie-black-900">Serviços</h1>
          <p class="text-xl leading-relaxed font-light text-errie-black-900">
            Ofereço seis formas principais de serviços e trabalhos.
          </p>
          <p class="mb-8 text-xl leading-relaxed font-light text-errie-black-900">
            Vamos conversar sem compromisso e descobrir juntos.
          </p>
        </div>
      </div>
    </section>

    <section id="servicos" class="bg-gray-50 py-24" aria-labelledby="services-title">
      <div class="mx-auto max-w-7xl px-6">
        <div class="mb-16 text-center">
          <h2 class="mb-4 text-4xl font-bold text-gray-900" id="services-title">Meus Serviços</h2>
          <p class="mx-auto max-w-3xl text-xl text-gray-600">
            Cada serviço é desenhado para resolver um problema específico.
          </p>
        </div>

        <div class="grid gap-8 lg:grid-cols-3">
          {
            services.map((service) => {
              return (
                <article class="rounded-2xl border-2 border-gray-200 bg-white p-8 shadow-sm transition hover:shadow-xl">
                  <header role="banner" class="mb-6 flex items-start gap-4">
                    <div class="flex-1">
                      <span class="rounded-full bg-green-100 px-3 py-1 text-xs font-bold text-green-700">
                        {service.badge}
                      </span>
                      <h3 class="mt-2 mb-1 text-2xl font-bold text-gray-900">{service.title}</h3>
                      <p class="text-base text-gray-600 italic">{service.tagline}</p>
                    </div>
                  </header>
                  <p class="mb-6 leading-relaxed text-gray-700">{service.descricao}</p>
                  <div class="flex">
                    <a
                      href={service.url}
                      class="text-blood-red-800 text-sm font-semibold transition hover:underline hover:underline-offset-8"
                    >
                      Saiba mais
                      <ArrowRight class="ml-2 inline-block h-5 w-5" aria-hidden="true" />
                    </a>
                  </div>
                </article>
              )
            })
          }
        </div>
      </div>
    </section>
		<CTASection
      icon={Coffee}
      title="Pronto para começar?"
      description="Vamos conversar sem compromisso sobre seu projeto."
      primaryButton={{
        text: 'Agendar conversa gratuita',
        url: site.socialMidia.cal,
      }}
      secondaryButton={{
        text: 'Ver outros serviços',
        url: '/servicos',
      }}
    />
  </main>
</Layout>
<Footer />
