    </section>

    <section>
      <h2 class="mb-4 font-semibold text-xl">Componentes</h2>

      <div class="space-y-6">
        <div>
          <h3 class="mb-2 font-medium text-lg">Botões</h3>
          <div class="flex space-x-4">
            <button class="bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded text-white">Primary</button>
            <button class="hover:bg-gray-50 px-4 py-2 border border-gray-300 rounded">Secondary</button>
          </div>
        </div>

        <div>
          <h3 class="mb-2 font-medium text-lg">Tags</h3>
          <div class="flex space-x-2">
            <span
              class="bg-blue-100 dark:bg-blue-900 px-3 py-1 rounded-full text-blue-800 dark:text-blue-200 text-sm">#example</span>
            <span
              class="bg-green-100 dark:bg-green-900 px-3 py-1 rounded-full text-green-800 dark:text-green-200 text-sm">#tag</span>
            <span
