---
import { PinIcon } from "@lucide/astro";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/layout/Header.astro";
import HeroSection from "@/components/layout/HeroSection.astro";
import ProjetosPessoais from "@/components/home/ProjetosPessoais.astro";
import Footer from "@/components/layout/Footer.astro";
import meImage from "@/assets/me.png";
import BackToTop from "@/components/utils/BackToTop.astro";

const skills = [
  {
    skill: 'Javascript/TypeScript'
  },

  {
    skill: 'Javascript/TypeScript'
  },

  {
    skill: 'Javascript/TypeScript'
  },

  {
    skill: 'Javascript/TypeScript'
  },
  'HTML5/CSS3',
  'Sass',
  'Tailwind CSS',
