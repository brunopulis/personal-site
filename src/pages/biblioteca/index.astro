---
import Footer from "@components/layout/Footer.astro";
import Header from "@components/layout/Header.astro";
import MediaCard from "@components/MediaCard.astro";
import books from "@data/books.json";
// biome-ignore-all lint/correctness/noUnusedImports
import Layout from "@layouts/Layout.astro";

const livrosPorAno = Object.entries(
	books
		.sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime())
		.reduce(
			(acc, book) => {
				const year = new Date(book.date).getFullYear();
				acc[year] = acc[year] || [];
				acc[year].push(book);
				return acc;
			},
			{} as Record<string, (typeof books)[0][]>,
		),
).sort((a, b) => Number(b[0]) - Number(a[0]));

export const prerender = true;
---

<Layout title="Minha Biblioteca - Bruno Pulis" description="Livros que li ao longo dos anos">
  <Header />
  <main id="main-content">
    <section class="relative overflow-hidden bg-linear-to-br from-red-900 via-red-800 to-red-950 text-white">
      <div class="absolute inset-0 opacity-10">
        <div class="absolute top-20 left-10 h-64 w-64 rounded-full bg-white blur-3xl"></div>
        <div class="absolute right-10 bottom-20 h-96 w-96 rounded-full bg-red-400 blur-3xl"></div>
      </div>
      <div class="mx-auto max-w-7xl px-6 py-20">
        <div class="max-w-3xl">
          <div class="mb-6 flex items-center gap-3">
            <h1 class="text-5xl font-bold text-white">Minha Biblioteca</h1>
          </div>
          <p class="mb-8 text-xl leading-relaxed text-white">
            Livros que estão moldando minha forma de pensar, trabalhar e viver. Leio de tudo: de acessibilidade web a
            teologia, de ficção científica a produtividade.
          </p>
          <p class="text-lg text-white">
            <strong>Por que compartilho isso?</strong>
            Porque livros mudaram minha vida e talvez possam mudar a sua também.
          </p>
        </div>
      </div>
    </section>
    <section class="mx-auto max-w-7xl px-6 py-12">
      <div class="space-y-12">
        {
          livrosPorAno.map(([year, booksInYear]) => (
            <div class="space-y-6">
              <h2 class="text-blood-red-800 text-2xl font-bold">Lidos em {year}</h2>
              <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-4">
                {booksInYear.map((book) => (
                  <MediaCard
                    title={book.title}
                    author={book.author}
                    cover={book.cover}
                    description={book.description}
                    quotes={book.quotes}
                    rating={book.rating}
                    tags={book.tags}
                  />
                ))}
              </div>
            </div>
          ))
        }
      </div>
    </section>
  </main>
  <Footer />
</Layout>
