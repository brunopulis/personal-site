---
import MediaCard from '@components/MediaCard.astro';
import books from '@data/books.json';
import { getLanguageFromPath, useTranslations } from '@i18n/utils';
import Layout from '@layout/Layout.astro';

export const prerender = true;

// Agrupa livros por ano e ordena
const livrosPorAno = Object.entries(
  books
    .sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime())
    .reduce(
      (acc, book) => {
        const year = new Date(book.date).getFullYear();
        acc[year] = acc[year] || [];
        acc[year].push(book);
        return acc;
      },
      {} as Record<string, (typeof books)[0][]>
    )
).sort((a, b) => Number(b[0]) - Number(a[0]));

// Detecta o idioma e obtém as traduções
const lang = getLanguageFromPath(Astro.url.pathname);
const t = useTranslations(lang);

// Dados da página
const pageData = {
  title: 'Minha Biblioteca',
  description: 'Livros que estão moldando minha forma de pensar, trabalhar e viver.',
  routeKey: 'books',
};
---

<Layout title={pageData.title} description={pageData.description} routeKey={pageData.routeKey}>
  <main id="main-content">
    <section id="hero" aria-labelledby="hero-section">
      <div class="mx-auto max-w-7xl px-6 py-20">
        <div class="max-w-3xl">
          <div class="mb-6 flex items-center gap-3">
            <h1 class="text-5xl font-bold text-errie-black-900" id="hero-section">
              Minha Biblioteca
            </h1>
          </div>
          <p class="mb-8 text-xl leading-relaxed text-errie-black-900">
            Livros que estão moldando minha forma de pensar, trabalhar e viver. Leio de tudo: de
            acessibilidade web a teologia, de ficção científica a produtividade.
          </p>
          <p class="text-lg text-errie-black-900">
            <strong>Por que compartilho isso?</strong>
            Porque livros mudaram minha vida e talvez possam mudar a sua também.
          </p>
        </div>
      </div>
    </section>

    <section class="mx-auto max-w-7xl px-6 py-12">
      <div class="space-y-12">
        {
          livrosPorAno.map(([year, booksInYear]) => (
            <div class="space-y-6">
              <h2 class="text-blood-red-800 text-2xl font-bold">Lidos em {year}</h2>
              <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-4">
                {booksInYear.map((book) => (
                  <MediaCard
                    title={book.title}
                    author={book.author}
                    cover={book.cover}
                    description={book.description}
                    quotes={book.quotes}
                    rating={book.rating}
                    tags={book.tags}
                  />
                ))}
              </div>
            </div>
          ))
        }
      </div>
    </section>
  </main>
</Layout>
