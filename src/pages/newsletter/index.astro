---
import Layout from '@/layouts/Layout.astro'
import Header from '@/components/Header.astro'
import Footer from '@/components/Footer.astro'
import HeroSection from '@/components/HeroSection.astro'

import { ArrowRight } from '@lucide/astro'

import { getCollection } from 'astro:content'

const letters = await getCollection('newsletter')

const sortedPosts = letters.sort((a, b) => {
	return new Date(b.data.date || 0).getTime() - new Date(a.data.date || 0).getTime()
})

---

<Layout
	title="Newsletter - Bruno Pulis"
	description="Artigos sobre desenvolvimento, acessibilidade e qualidade de software"
>
	<Header />
	<main>
		<HeroSection
			title="Pulis Letters"
			description="Junte-se a mais de 300 assinantes e receba dicas sobre acessibilidade, Obsidian e organização digital toda quinta-feira de manhã."
		/>

		<div class="container mx-auto p-6 md:p-8">
			<div class="grid grid-cols-1 gap-8 lg:grid-cols-3">
				<!-- Main Content -->
				<div class="lg:col-span-2">
					<h2 class="mb-8 text-4xl font-bold leading-tight text-gray-900 md:text-5xl">
						Edições anteriores
					</h2>

					<div class="space-y-6">
						{
							sortedPosts.map((letter, index) => (
								<div class="group cursor-pointer">
									<div class="flex items-start gap-4 rounded-lg p-4 transition-all duration-200 hover:bg-white hover:shadow-md">
										<div class="flex flex-col items-center">
											<span class="text-lg font-medium text-brand-500">#{letter.data.issue}</span>
											<div class="mt-1 h-1 w-12 bg-brand-500" />
										</div>
										<div class="flex-1">
											<h2 class="text-xl font-semibold text-gray-900 transition-colors group-hover:text-blue-600">
												<a href={'/newsletter/' + letter.id} class="block">
													{letter.data.title}
												</a>
											</h2>
											<time class="mt-1 text-sm text-gray-500">
												{new Date(letter.data.date).toLocaleDateString('pt-BR', {
													year: 'numeric',
													month: 'long',
													day: 'numeric'
												})}
											</time>
										</div>
										<ArrowRight />
									</div>
								</div>
							))
						}
					</div>
				</div>

				<!-- Sidebar -->
				<div class="lg:col-span-1">
					<div class="sticky top-8 rounded-xl border border-gray-100 bg-white p-6 shadow-sm">
						<h3 class="mb-4 text-2xl font-bold text-gray-900">Subscribe to the Newsletter</h3>
						<p class="mb-6 leading-relaxed text-gray-600">
							Join 175K+ readers of The Saturday Solopreneur for exclusive tips, strategies, and
							resources to launch, grow, & monetize your one-person internet business.
						</p>

						<form class="space-y-4">
							<input
								type="email"
								placeholder="Email Address"
								class="w-full rounded-lg border border-gray-300 px-4 py-3 outline-none transition-all focus:border-transparent focus:ring-2 focus:ring-blue-500"
							/>
							<button
								type="submit"
								class="w-full rounded-lg bg-gray-900 px-6 py-3 font-semibold text-white transition-colors duration-200 hover:bg-gray-800"
							>
								Se inscrever
							</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</main>
	<Footer />
</Layout>
