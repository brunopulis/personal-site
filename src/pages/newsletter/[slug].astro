---
import Layout from '@/layouts/Layout.astro'
import Header from '@/components/Header.astro'
import HeroSection from "@/components/HeroSection.astro"
import Footer from '@/components/Footer.astro'

import { getCollection, render } from 'astro:content'

// Gera as rotas para todos os letters
export async function getStaticPaths() {
	const letters = await getCollection('newsletter')

	return letters.map((letter) => ({
		params: { slug: letter.id }, // mantém apenas o ID do letter
		props: { letter }
	}))
}

const { letter } = Astro.props
const { title, summary, tags, modifiedDate } = letter.data
const { Content } = await render(letter)

// Formata a data para pt-BR
const formattedDate = new Date(letter.data.date).toLocaleDateString('pt-BR', {
	year: 'numeric',
	month: 'long',
	day: 'numeric'
})
---

<Layout title={`${letter.data.title} - Blog`} description={letter.data.excerpt}>
	<Header />
	<main id="main-content">
    <HeroSection
			title={letter.data.title}
			description="Junte-se a mais de 300 assinantes e receba dicas sobre acessibilidade, Obsidian e organização digital toda quinta-feira de manhã."
		/>
		<div class="container mx-auto p-6 md:p-8">
			<div class="grid grid-cols-1 gap-8 lg:grid-cols-3">
				<div class="lg:col-span-2">
					<article class="pt-32 pb-16 md:pt-40 md:pb-24">
						<div class="container mx-auto max-w-4xl">
							<div class="mb-8">
								<a
									href="/"
									class="hover:text-primary-600 dark:hover:text-primary-400 inline-flex items-center text-gray-600 transition-colors dark:text-gray-400"
								>
									<svg
										xmlns="http://www.w3.org/2000/svg"
										class="mr-2 h-5 w-5"
										viewBox="0 0 20 20"
										fill="currentColor"
									>
										<path
											fill-rule="evenodd"
											d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z"
											clip-rule="evenodd"></path>
									</svg>
									Voltar para o Blog
								</a>
							</div>

							<div class="mb-6 flex items-center">
								<span
									class="bg-primary-100 dark:bg-primary-900 text-primary-600 dark:text-primary-300 inline-block rounded-full px-3 py-1 text-sm font-medium"
								>
									{letter.data.category}
								</span>
								<span class="mx-2 text-gray-300 dark:text-gray-600">•</span>
								<time class="text-gray-600 dark:text-gray-400">{formattedDate}</time>
							</div>
							{
								letter.data.coverImage && (
									<img
										src={letter.data.coverImage}
										alt={letter.data.title}
										class="mb-10 h-auto w-full rounded-xl object-cover"
										style="max-height: 500px;"
									/>
								)
							}

							<div class="prose prose-lg dark:prose-invert max-w-none py-4">
								<Content class="py-4" />
							</div>

							<div class="mt-12 border-t border-gray-200 pt-8 dark:border-gray-700">
								<h2 class="mb-6 text-xl font-semibold text-gray-900 dark:text-white">
									Compartilhar artigo
								</h2>
								<div class="flex space-x-4">
									<a
										href={`https://twitter.com/intent/tweet?url=${encodeURIComponent(Astro.url)}&text=${encodeURIComponent(letter.data.title)}`}
										target="_blank"
										rel="noopener noreferrer"
										class="hover:bg-primary-100 hover:text-primary-600 dark:hover:bg-primary-900/50 dark:hover:text-primary-400 rounded-full bg-gray-100 p-2 text-gray-600 transition-colors dark:bg-gray-800 dark:text-gray-300"
										aria-label="Compartilhar no Twitter"
									>
										<svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
											<path
												d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"
											></path>
										</svg>
									</a>
								</div>
							</div>
						</div>
					</article>
				</div>

				<div class="lg:col-span-1">
					<aside class="sticky top-8 rounded-xl border border-gray-100 bg-white p-6 shadow-sm">
						<h3 class="mb-4 text-2xl font-bold text-gray-900">Subscribe to the Newsletter</h3>
						<p class="mb-6 leading-relaxed text-gray-600">
							Join 175K+ readers of The Saturday Solopreneur for exclusive tips, strategies, and
							resources to launch, grow, & monetize your one-person internet business.
						</p>

						<form class="space-y-4">
							<input
								type="email"
								placeholder="Email Address"
								class="w-full rounded-lg border border-gray-300 px-4 py-3 transition-all outline-none focus:border-transparent focus:ring-2 focus:ring-blue-500"
							/>
							<button
								type="submit"
								class="w-full rounded-lg bg-gray-900 px-6 py-3 font-semibold text-white transition-colors duration-200 hover:bg-gray-800"
							>
								Se inscrever
							</button>
						</form>
					</aside>
				</div>
			</div>
		</div>
	</main>
	<Footer />
</Layout>
