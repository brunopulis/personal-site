---
import site from "@/data/site.config.json";
import { Clock, Calendar, MapPin, Mail } from '@lucide/astro'

import Layout from '@/layouts/Layout.astro'
import Header from '@/components/layout/Header.astro'
import HeroSection from '@/components/layout/HeroSection.astro'
import Footer from '@/components/layout/Footer.astro'
---

<Layout title="Contato - Bruno Pulis">
  <Header />
  <main id="main-content">
    <div class="min-h-screen">
      <HeroSection
        title="Vamos trabalhar juntos?"
        description="Estou sempre interessado em novos projetos desafiadores e oportunidades de colaboração. Vamos conversar sobre como posso ajudar a transformar suas ideias em realidade digital."
      />

      <section class="bg-white px-6 py-20 lg:px-20" aria-labelledby="contact-methods-title">
        <div class="mx-auto max-w-7xl">
          <h2 id="contact-methods-title" class="mb-16 text-center text-4xl font-bold text-gray-900">
            Como Entrar em Contato
          </h2>
          <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3" role="list" aria-label="Métodos de contato">
            <div
              class="bg-card text-card-foreground group ring-opacity-20 flex cursor-pointer flex-col gap-6 rounded-xl border p-6 text-center ring-2 transition-shadow hover:shadow-lg"
              role="listitem"
            >
              <span
                data-slot="badge"
                class="focus-visible:border-ring focus-visible:ring-ring/50 aria-invalid:ring-destructive/20 dark:aria-invalid:ring-destructive/40 aria-invalid:border-destructive [a&]:hover:bg-primary/90 bg-blood-red-800)] mb-4 inline-flex w-fit shrink-0 items-center justify-center gap-1 overflow-hidden rounded-md border border-transparent px-2 py-0.5 text-xs font-medium whitespace-nowrap text-white transition-[color,box-shadow] focus-visible:ring-[3px] [&>svg]:pointer-events-none [&>svg]:size-3"
                >Preferido</span
              ><div
                class="bg-blood-red-800 mx-auto mb-4 flex h-12 w-12 items-center justify-center rounded-lg text-white transition-transform group-hover:scale-110"
                aria-hidden="true"
              >
                <Mail class="h-5 w-5" aria-hidden="true" />
              </div><h3 class="mb-2 text-lg font-semibold text-gray-900">Email</h3><p
                class="text-sm text-gray-600"
              >
                Para projetos e oportunidades
              </p>
              <a
                href="mailto:hello@brunopulis"
                class="text-blood-red-800 hover:text-blood-red-800/80 focus:ring-blood-red-text-blood-red-800 rounded-sm font-medium transition-colors focus:ring-2 focus:ring-offset-2 focus:outline-none"
                aria-label="Entrar em contato via Email: hello@brunopulis.com">{site.contact.email}</a
              >
            </div>

            <div
              class="bg-card text-card-foreground group flex cursor-pointer flex-col gap-6 rounded-xl border p-6 text-center transition-shadow hover:shadow-lg"
              role="listitem"
            >
              <div
                class="mx-auto mb-4 flex h-12 w-12 items-center justify-center rounded-lg bg-gray-100 text-gray-600 transition-transform group-hover:scale-110"
                aria-hidden="true"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="lucide lucide-phone h-6 w-6"
                  aria-hidden="true"
                  ><path
                    d="M13.832 16.568a1 1 0 0 0 1.213-.303l.355-.465A2 2 0 0 1 17 15h3a2 2 0 0 1 2 2v3a2 2 0 0 1-2 2A18 18 0 0 1 2 4a2 2 0 0 1 2-2h3a2 2 0 0 1 2 2v3a2 2 0 0 1-.8 1.6l-.468.351a1 1 0 0 0-.292 1.233 14 14 0 0 0 6.392 6.384"
                  ></path></svg
                >
              </div><h3 class="mb-2 text-lg font-semibold text-gray-900">WhatsApp</h3><p
                class="mb-3 text-sm text-gray-600"
              >
                Para conversas rápidas
              </p><a
                href="https://wa.me/5511999999999"
                class="text-blood-red-800 hover:text-blood-red-800/80 focus:ring-blood-red-text-blood-red-800 rounded-sm font-medium transition-colors focus:ring-2 focus:ring-offset-2 focus:outline-none"
               >{site.contact.cellphone}</a
              >
            </div>

            <div
              class="bg-card text-card-foreground group flex cursor-pointer flex-col gap-6 rounded-xl border p-6 text-center transition-shadow hover:shadow-lg"
              role="listitem"
            >
              <div
                class="mx-auto mb-4 flex h-12 w-12 items-center justify-center rounded-lg bg-gray-100 text-gray-600 transition-transform group-hover:scale-110"
                aria-hidden="true"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="lucide lucide-linkedin h-6 w-6"
                  aria-hidden="true"
                  ><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path><rect
                    width="4"
                    height="12"
                    x="2"
                    y="9"></rect><circle cx="4" cy="4" r="2"></circle></svg
                >
              </div><h3 class="mb-2 text-lg font-semibold text-gray-900">LinkedIn</h3><p
                class="mb-3 text-sm text-gray-600"
              >
                Rede profissional
              </p><a
                href={site.socialMidia.linkedin}
                class="text-blood-red-800 hover:text-blood-red-800/80 focus:ring-blood-red-text-blood-red-800 rounded-sm font-medium transition-colors focus:ring-2 focus:ring-offset-2 focus:outline-none"
                aria-label="Entrar em contato via LinkedIn: /in/brunopulis">/in/brunopulis</a
              >
            </div>
          </div>
        </div>
      </section>
    </div>
  </main>
  <Footer />
</Layout>
