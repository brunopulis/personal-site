---
import { getCollection } from 'astro:content';
import { getLanguageFromPath, useTranslations } from '@i18n/utils';
import Layout from '@layout/Layout.astro';
import type { Language } from '@i18n/translations';

/**
 * Gera rotas estáticas para todas as páginas em português (pt-br)
 * As páginas são armazenadas em src/content/pages/pt-br/
 * 
 * Exemplo:
 * - sobre.md → /sobre
 * - servicos.md → /servicos
 * - contato.md → /contato
 */
export async function getStaticPaths() {
  // Busca todas as páginas em português
  const pages = await getCollection('pages', ({ data }) => data.lang === 'pt-br');
  
  return pages.map(page => {
    // Remove a extensão .md do ID para criar o slug
    const slug = page.id.replace('.md', '');
    
    return {
      params: { slug },
      props: { page },
    };
  });
}

interface Props {
  page: any;
}

const { page } = Astro.props;
const { Content } = await page.render();

// Detecta o idioma a partir da URL
const lang = getLanguageFromPath(Astro.url.pathname) as Language;
const t = useTranslations(lang);
---

<Layout
  title={page.data.title}
  description={page.data.description}
  routeKey={page.data.routeKey}
>
  <main id="main-content" class="min-h-screen">
    <article class="mx-auto max-w-4xl px-6 py-16">
      <!-- Header -->
      <header class="mb-12 space-y-4">
        <h1 class="text-5xl font-bold text-errie-black-900">
          {page.data.title}
        </h1>
        {page.data.description && (
          <p class="text-xl text-gray-600">
            {page.data.description}
          </p>
        )}
      </header>

      <!-- Conteúdo do Markdown renderizado -->
      <div class="prose prose-lg max-w-none">
        <Content />
      </div>
    </article>
  </main>
</Layout>

<style is:global>
  /* Typography */
  .prose {
    color: var(--color-errie-black-900, #0a0e27);
    line-height: 1.8;
  }

  /* Headings */
  .prose h1,
  .prose h2,
  .prose h3,
  .prose h4,
  .prose h5,
  .prose h6 {
    color: var(--color-errie-black-900, #0a0e27);
    font-weight: 600;
    margin-top: 1.5em;
    margin-bottom: 0.5em;
    scroll-margin-top: 80px;
  }

  .prose h1 {
    font-size: 2.25rem;
    line-height: 1.2;
  }

  .prose h2 {
    font-size: 1.875rem;
    line-height: 1.3;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid rgba(139, 0, 0, 0.1);
  }

  .prose h3 {
    font-size: 1.5rem;
    line-height: 1.4;
  }

  .prose h4 {
    font-size: 1.25rem;
  }

  /* Paragraphs */
  .prose p {
    margin: 1rem 0;
    line-height: 1.8;
  }

  /* Links */
  .prose a {
    color: var(--color-blood-red-800, #8b0000);
    text-decoration: underline;
    text-underline-offset: 4px;
    transition: all 0.3s ease;
    font-weight: 500;
  }

  .prose a:hover {
    opacity: 0.8;
    text-decoration-thickness: 2px;
  }

  .prose a:focus-visible {
    outline: 2px solid var(--color-blood-red-800, #8b0000);
    outline-offset: 2px;
    border-radius: 2px;
  }

  /* Lists */
  .prose ul,
  .prose ol {
    margin: 1.5rem 0;
    padding-left: 2rem;
  }

  .prose li {
    margin-bottom: 0.75rem;
  }

  .prose ul li:before {
    content: "▸ ";
    color: var(--color-blood-red-800, #8b0000);
    font-weight: bold;
    margin-right: 0.5rem;
  }

  .prose ol {
    list-style-type: decimal;
  }

  .prose ol li {
    margin-left: 0.5rem;
  }

  /* Blockquotes */
  .prose blockquote {
    border-left: 4px solid var(--color-blood-red-800, #8b0000);
    padding-left: 1rem;
    margin: 1.5rem 0;
    color: #666;
    font-style: italic;
    background-color: rgba(0, 0, 0, 0.02);
    padding: 1rem;
    padding-left: 1rem;
  }

  .prose blockquote p {
    margin: 0;
  }

  /* Code */
  .prose code {
    background-color: #f3f4f6;
    color: #d91e63;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-family: 'Monaco', 'Courier New', monospace;
    font-size: 0.9em;
    font-weight: 500;
  }

  .prose pre {
    background-color: #1f2937;
    color: #f3f4f6;
    padding: 1.5rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin: 1.5rem 0;
    border: 1px solid #374151;
    line-height: 1.5;
  }

  .prose pre code {
    background-color: transparent;
    color: inherit;
    padding: 0;
    border-radius: 0;
    font-size: 0.95em;
  }

  /* Images */
  .prose img {
    border-radius: 0.5rem;
    margin: 1.5rem 0;
    max-width: 100%;
    height: auto;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  /* Tables */
  .prose table {
    width: 100%;
    border-collapse: collapse;
    margin: 1.5rem 0;
    border: 1px solid #e5e7eb;
  }

  .prose th {
    background-color: #f9fafb;
    padding: 0.75rem;
    text-align: left;
    font-weight: 600;
    border-bottom: 2px solid #e5e7eb;
  }

  .prose td {
    padding: 0.75rem;
    border-bottom: 1px solid #e5e7eb;
  }

  .prose tr:hover {
    background-color: #f9fafb;
  }

  /* Horizontal Rule */
  .prose hr {
    border: none;
    border-top: 2px solid #e5e7eb;
    margin: 2rem 0;
  }

  /* Strong and emphasis */
  .prose strong {
    font-weight: 600;
    color: var(--color-errie-black-900, #0a0e27);
  }

  .prose em {
    font-style: italic;
    color: #666;
  }

  /* Nested elements */
  .prose li > p {
    margin: 0.5rem 0;
  }

  .prose li > ul,
  .prose li > ol {
    margin: 0.5rem 0;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .prose {
      font-size: 1rem;
    }

    .prose h1 {
      font-size: 1.875rem;
    }

    .prose h2 {
      font-size: 1.5rem;
    }

    .prose h3 {
      font-size: 1.25rem;
    }

    .prose pre {
      padding: 1rem;
      font-size: 0.85em;
    }

    .prose ul,
    .prose ol {
      padding-left: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    article {
      padding: 1rem;
    }

    .prose h1 {
      font-size: 1.5rem;
    }

    .prose h2 {
      font-size: 1.25rem;
    }

    .prose h3 {
      font-size: 1.125rem;
    }

    .prose pre {
      padding: 0.75rem;
      font-size: 0.8em;
      overflow-x: auto;
    }
  }
</style>