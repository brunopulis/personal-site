---
import type { Language } from '@i18n/index';
import { getLanguageFromPath, useTranslations } from '@i18n/utils';
import Layout from '@layout/Layout.astro';
import { getCollection } from 'astro:content';

/**
 * Gera rotas estáticas para todas as páginas em português (pt-br)
 * As páginas são armazenadas em src/content/pages/pt-br/
 *
 * Exemplo:
 * - sobre.md → /sobre
 * - servicos.md → /servicos
 * - contato.md → /contato
 */
export async function getStaticPaths() {
  const pages = await getCollection('pages', ({ data }) => data.lang === 'en');

  return pages.map((page) => {
    const slug = page.id.replace(/^en\//, '').replace(/\.md$/, '');

    return {
      params: { slug },
      props: { page },
    };
  });
}

interface Props {
  page: any;
}

const { page } = Astro.props;
const { Content } = await page.render();

const currentLocale = 'en';
---

<Layout
  title={page.data.title}
  description={page.data.description}
  routeKey={page.data.routeKey}
  currentLocale={currentLocale}
>
  <article class="wrapper">
    <!-- Header -->
    <header class="mb-12 space-y-4">
      <h1 class="title">
        {page.data.title}
      </h1>
      {page.data.description && <p class="text-xl text-gray-600">{page.data.description}</p>}
    </header>

    <!-- Conteúdo do Markdown renderizado -->
    <div class="prose prose-lg max-w-none">
      <Content />
    </div>
  </article>
</Layout>

<style is:global>
  /* Typography */
  .prose {
    color: var(--color-errie-black-900, #0a0e27);
    line-height: 1.8;
  }

  /* Headings */
  .prose h1,
  .prose h2,
  .prose h3,
  .prose h4,
  .prose h5,
  .prose h6 {
    margin-top: 1.5em;
    margin-bottom: 0.5em;
    scroll-margin-top: 80px;
    color: var(--color-errie-black-900, #0a0e27);
    font-weight: 600;
  }

  .prose h1 {
    font-size: 2.25rem;
    line-height: 1.2;
  }

  .prose h2 {
    border-bottom: 2px solid rgba(139, 0, 0, 0.1);
    padding-bottom: 0.5rem;
    font-size: 1.875rem;
    line-height: 1.3;
  }

  .prose h3 {
    font-size: 1.5rem;
    line-height: 1.4;
  }

  .prose h4 {
    font-size: 1.25rem;
  }

  /* Paragraphs */
  .prose p {
    margin: 1rem 0;
    line-height: 1.8;
  }

  /* Links */
  .prose a {
    transition: all 0.3s ease;
    color: var(--color-blood-red-800, #8b0000);
    font-weight: 500;
    text-decoration: underline;
    text-underline-offset: 4px;
  }

  .prose a:hover {
    opacity: 0.8;
    text-decoration-thickness: 2px;
  }

  .prose a:focus-visible {
    outline: 2px solid var(--color-blood-red-800, #8b0000);
    outline-offset: 2px;
    border-radius: 2px;
  }

  /* Lists */
  .prose ul,
  .prose ol {
    margin: 1.5rem 0;
    padding-left: 2rem;
  }

  .prose li {
    margin-bottom: 0.75rem;
  }

  .prose ol {
    list-style-type: decimal;
  }

  .prose ol li {
    margin-left: 0.5rem;
  }

  /* Blockquotes */
  .prose blockquote {
    margin: 1.5rem 0;
    border-left: 4px solid var(--color-blood-red-800, #8b0000);
    background-color: rgba(0, 0, 0, 0.02);
    padding-left: 1rem;
    padding: 1rem;
    padding-left: 1rem;
    color: #666;
    font-style: italic;
  }

  .prose blockquote p {
    margin: 0;
  }

  /* Code */
  .prose code {
    border-radius: 0.25rem;
    background-color: #f3f4f6;
    padding: 0.25rem 0.5rem;
    color: #d91e63;
    font-weight: 500;
    font-size: 0.9em;
    font-family: 'Monaco', 'Courier New', monospace;
  }

  .prose pre {
    margin: 1.5rem 0;
    border: 1px solid #374151;
    border-radius: 0.5rem;
    background-color: #1f2937;
    padding: 1.5rem;
    overflow-x: auto;
    color: #f3f4f6;
    line-height: 1.5;
  }

  .prose pre code {
    border-radius: 0;
    background-color: transparent;
    padding: 0;
    color: inherit;
    font-size: 0.95em;
  }

  /* Images */
  .prose img {
    margin: 1.5rem 0;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    border-radius: 0.5rem;
    max-width: 100%;
    height: auto;
  }

  /* Tables */
  .prose table {
    margin: 1.5rem 0;
    border: 1px solid #e5e7eb;
    border-collapse: collapse;
    width: 100%;
  }

  .prose th {
    border-bottom: 2px solid #e5e7eb;
    background-color: #f9fafb;
    padding: 0.75rem;
    font-weight: 600;
    text-align: left;
  }

  .prose td {
    border-bottom: 1px solid #e5e7eb;
    padding: 0.75rem;
  }

  .prose tr:hover {
    background-color: #f9fafb;
  }

  /* Horizontal Rule */
  .prose hr {
    margin: 2rem 0;
    border: none;
    border-top: 2px solid #e5e7eb;
  }

  /* Strong and emphasis */
  .prose strong {
    color: var(--color-errie-black-900, #0a0e27);
    font-weight: 600;
  }

  .prose em {
    color: #666;
    font-style: italic;
  }

  /* Nested elements */
  .prose li > p {
    margin: 0.5rem 0;
  }

  .prose li > ul,
  .prose li > ol {
    margin: 0.5rem 0;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .prose {
      font-size: 1rem;
    }

    .prose h1 {
      font-size: 1.875rem;
    }

    .prose h2 {
      font-size: 1.5rem;
    }

    .prose h3 {
      font-size: 1.25rem;
    }

    .prose pre {
      padding: 1rem;
      font-size: 0.85em;
    }

    .prose ul,
    .prose ol {
      padding-left: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    article {
      padding: 1rem;
    }

    .prose h1 {
      font-size: 1.5rem;
    }

    .prose h2 {
      font-size: 1.25rem;
    }

    .prose h3 {
      font-size: 1.125rem;
    }

    .prose pre {
      padding: 0.75rem;
      overflow-x: auto;
      font-size: 0.8em;
    }
  }
</style>
