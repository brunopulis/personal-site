---
import type { Language } from '@i18n/index';
import { getLanguageFromPath, useTranslations } from '@i18n/utils';
import Layout from '@layout/Layout.astro';
import Search from 'astro-pagefind/components/Search';

export const prerender = false;

const q = Astro.url.searchParams.get('q') ?? undefined;

const currentLocale = 'en';
const lang = getLanguageFromPath(Astro.url.pathname) as Language;
const t = useTranslations(lang);

const pageData = {
  title: 'Buscar',
  description: 'Busque em todo o conteúdo do site',
  routeKey: 'search',
};
---

<Layout
  title={pageData.title}
  description={pageData.description}
  routeKey={pageData.routeKey}
  currentLocale={currentLocale}
>
  <main id="main-content">
    <div class="wrapper mx-auto max-w-7xl px-6">
      <header class="mb-12">
        <h1 class="text-4xl font-bold text-gray-900 mb-2">Buscar</h1>
        <p class="text-gray-600">Procure por artigos, projetos e conteúdos do site</p>
      </header>

      <Search id="search" query={q} className="pagefind-ui" uiOptions={{ showImages: false }} />
    </div>
  </main>
</Layout>

<style is:global>
  nav {
    display: grid;
    place-items: center;
  }

  .pagefind-ui {
    --pagefind-ui-scale: 0.75;
    --pagefind-ui-primary: navy;
    --pagefind-ui-text: black;
    --pagefind-ui-border: slategrey;
    --pagefind-ui-border-width: 1px;
    --pagefind-ui-border-radius: 0.25rem;
    --pagefind-ui-font: sans-serif;

    width: 50%;
  }

  .pagefind-ui.yellow {
    --pagefind-ui-background: lightyellow;
  }

  .pagefind-ui.red {
    --pagefind-ui-background: peachpuff;
    width: 100%;
  }

  .pagefind-ui .pagefind-ui__drawer:not(.pagefind-ui__hidden) {
    position: absolute;
    right: 0;
    left: 0;
    z-index: 9999;
    margin-top: 0px;
    box-shadow:
      0 10px 10px -5px rgba(0, 0, 0, 0.2),
      0 2px 2px 0 rgba(0, 0, 0, 0.1);
    border-bottom-right-radius: var(--pagefind-ui-border-radius);
    border-bottom-left-radius: var(--pagefind-ui-border-radius);
    background-color: var(--pagefind-ui-background);
    padding: 0 2em 1em;
    overflow-y: auto;
  }

  .pagefind-ui .pagefind-ui__result-link {
    color: var(--pagefind-ui-primary);
  }

  .pagefind-ui .pagefind-ui__result-excerpt {
    color: var(--pagefind-ui-text);
  }
</style>
