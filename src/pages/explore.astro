---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/layout/Header.astro";
import Footer from "@/components/layout/Footer.astro";
import HeroSection from "@/components/layout/HeroSection.astro";

const slashes = [
	{
		title: "Livro de visitas",
		description: "Blogs que eu sigo e recomendo.",
		link: "/guestbook",
	},
	{
		title: "Blogroll",
		description: "Blogs que eu sigo e recomendo.",
		link: "/blogroll",
	},
	{
		title: "Minhas Leituras",
		description: "Os livros que li desde 2018.",
		link: "/reading",
	},
	{
		title: "Como uso IA no meu site",
		description: "Como utilizo inteligência artificial no meu site.",
		link: "/ai",
	},
	{
		title: "Minhas Notas",
		description: "Minhas notas curtas.",
		link: "/notes",
	},
	{
		title: "Watches",
		description: "Coisas que estou fazendo agora.",
		link: "/now",
	},
	{
		title: "O que estou fazendo agora",
		description: "Coisas que estou fazendo agora.",
		link: "/watches",
	},
	{
		title: "Links de afiliado",
		description: "Meus links de afiliado.",
		link: "/referrals",
	},
];
---

<Layout title="Mais - Bruno Pulis">
  <Header />
	<main class="pt-16">
    <div class="min-h-screen">
      <section class="bg-blood-red-800 px-6 py-20 lg:px-20">
        <div class="mx-auto max-w-7xl text-center">
          <h1 class="mb-6 text-5xl font-bold text-white lg:text-6xl">
            Explore
          </h1>
          <p class="mx-auto max-w-3xl text-xl leading-relaxed text-white/90">
            Uma grande lista de todas as páginas, projetos, posts no meu site.
          </p>
        </div>
      </section>

    <section>
			<div class="container-custom py-8">
				<h2>Lista das páginas</h2>
				<p>
					Essa é minha <span lang="en">slash page</span>, você pode
					encontrar todos os tipos em <a href="https://slashpages.net/">slashes pages</a>
				</p>

				<ul  class="list-inside list-disc space-y-2">
					{
						slashes.map(slash => (
							<li><a href={slash.link}>{slash.title}</a></li>
						))
					}
				</ul>
			</div>
    </section>
  </main>
  <Footer />
</Layout>
