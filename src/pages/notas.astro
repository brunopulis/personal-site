---
import { getCollection } from "astro:content";
import { Clock } from "@lucide/astro";
import Layout from "@layout/Layout.astro";
import HeroSection from "@components/layouts/HeroSection.astro";
import ShareButton from "@components/ShareButton.astro";

const notes = await getCollection("notes");
const sortedNotes = notes.sort((a, b) => {
  return new Date(b.data.pubDate || 0).getTime() - new Date(a.data.pubDate || 0).getTime();
});

// Renderizar o conteúdo de cada nota
const notesWithContent = await Promise.all(
  sortedNotes.map(async note => {
    const { Content } = await note.render();
    return {
      note,
      Content,
    };
  })
);
---

<Layout title="Notas - Bruno Pulis">
  <main id="main-content">
    <HeroSection
      title="Notas"
      description="Pensamentos rápidos, dicas práticas e reflexões sobre qualquer coisa."
    />
    <section class="h-entry bg-gray-50 py-16">
      <div class="container-custom mx-auto">
        <div class="mx-auto">
          <div class="prose prose-lg max-w-none">
            {
              notesWithContent.length > 0 ? (
                notesWithContent.map(({ note, Content }) => (
                  <article class="mb-6 rounded-xl border border-gray-200 bg-white p-6 shadow-sm transition hover:shadow-md">
                    <div class="mb-4 flex items-start justify-between">
                      <div class="flex items-center gap-3">
                        <div>
                          <div class="font-bold text-gray-900">Bruno Pulis</div>
                          <div class="flex items-center gap-2 text-sm text-gray-500">
                            <Clock class="h-3 w-3" />
                            {new Date(note.data.pubDate).toLocaleDateString("pt-BR", {
                              year: "numeric",
                              month: "long",
                              day: "numeric",
                            })}
                          </div>
                        </div>
                      </div>
                    </div>

                    <div class="mb-4 prose prose-gray max-w-none">
                      <Content />
                    </div>

                    <div class="mb-4 flex flex-wrap gap-2">
                      {note.data.tags &&
                        note.data.tags.map((tag: string) => (
                          <span class="inline-flex items-center gap-1 rounded-full border border-gray-300 bg-gray-100 px-3 py-1 text-xs font-semibold text-gray-700">
                            #{tag}
                          </span>
                        ))}
                    </div>

                    <div class="flex items-center gap-6 border-t border-gray-100 pt-4">
                      <ShareButton
                        title={`Nota de Bruno Pulis - ${new Date(note.data.pubDate).toLocaleDateString("pt-BR")}`}
                        text={note.body}
                        url={`${Astro.site}notes/${note.slug}`}
                      />
                    </div>
                  </article>
                ))
              ) : (
                <div class="empty-state">
                  <p>Nenhuma nota encontrada.</p>
                </div>
              )
            }
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>
