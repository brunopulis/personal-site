<style>
  /* CUBE CSS */
  :root {
    --color-primary: #0066cc;
    --color-surface: #ffffff;
    --color-surface-alt: #f5f5f5;
    --color-text: #222222;
    --color-text-alt: #666666;
    --color-border: #e0e0e0;

    --space-xs: 0.25rem;
    --space-sm: 0.5rem;
    --space-md: 1rem;
    --space-lg: 1.5rem;
    --space-xl: 2rem;
    --space-2xl: 3rem;

    --radius-sm: 0.25rem;
    --radius-md: 0.5rem;
    --radius-lg: 1rem;

    --font-family:
      -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    --font-size-sm: 0.875rem;
    --font-size-base: 1rem;
    --font-size-lg: 1.25rem;
    --font-size-xl: 1.5rem;
    --font-size-2xl: 2rem;
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    background: linear-gradient(
      135deg,
      var(--color-surface) 0%,
      var(--color-surface-alt) 100%
    );
    min-height: 100vh;
    color: var(--color-text);
    font-size: var(--font-size-base);
    line-height: 1.6;
    font-family: var(--font-family);
  }

  /* Composition */
  .container {
    margin-inline: auto;
    padding-inline: var(--space-md);
    width: 100%;
    max-width: 48rem;
  }

  .stack {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }

  .stack.stack-sm {
    gap: var(--space-md);
  }

  .stack.stack-xl {
    gap: var(--space-2xl);
  }

  .cluster {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    gap: var(--space-md);
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--space-lg);
  }

  .grid.grid-sm {
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-md);
  }

  /* Utilities */
  .text-center {
    text-align: center;
  }

  .text-sm {
    font-size: var(--font-size-sm);
  }

  .text-lg {
    font-size: var(--font-size-lg);
  }

  .text-xl {
    font-size: var(--font-size-xl);
  }

  .text-2xl {
    font-size: var(--font-size-2xl);
  }

  .font-bold {
    font-weight: 700;
  }

  .text-alt {
    color: var(--color-text-alt);
  }

  .mt-2xl {
    margin-top: var(--space-2xl);
  }

  .pt-2xl {
    padding-top: var(--space-2xl);
  }

  .border-top {
    border-top: 2px solid var(--color-border);
  }

  /* Components */
  main {
    padding-block: var(--space-2xl);
  }

  .heading {
    font-weight: 700;
    font-size: var(--font-size-2xl);
    line-height: 1.2;
  }

  .subheading {
    color: var(--color-text-alt);
    font-size: var(--font-size-lg);
  }

  .card {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    transition: all 0.2s ease-out;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    background: var(--color-surface);
    padding: var(--space-lg);
    color: inherit;
    text-decoration: none;
  }

  .card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    border-color: var(--color-primary);
  }

  .card-icon {
    font-size: var(--font-size-2xl);
  }

  .card-title {
    font-weight: 700;
    font-size: var(--font-size-lg);
  }

  .card-desc {
    color: var(--color-text-alt);
    font-size: var(--font-size-sm);
  }

  /* Support Cards */
  .support-card {
    --accent-color: var(--color-primary);
  }

  .support-card.liberapay {
    --accent-color: #f1a50e;
  }
  .support-card.kofi {
    --accent-color: #13c3ff;
  }
  .support-card.pix {
    --accent-color: #1f71b8;
  }
  .support-card.paypal {
    --accent-color: #003087;
  }

  .support-card {
    border-left: 4px solid var(--accent-color);
    background: linear-gradient(135deg, rgba(31, 113, 184, 0.05), transparent);
  }

  /* Supporter Card */
  .supporter-card {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--space-md);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    background: var(--color-surface);
    padding: var(--space-md);
  }

  .supporter-info {
    flex: 1;
  }

  .supporter-name {
    font-weight: 700;
    font-size: var(--font-size-base);
  }

  .supporter-platform {
    color: var(--color-text-alt);
    font-size: var(--font-size-sm);
  }

  .supporter-icon {
    font-size: var(--font-size-xl);
  }

  /* Info Box */
  .info-box {
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    background: var(--color-surface-alt);
    padding: var(--space-lg);
  }

  .info-box-title {
    margin-bottom: var(--space-lg);
    font-weight: 700;
    font-size: var(--font-size-xl);
  }

  .info-list {
    list-style: none;
  }

  .info-list li {
    display: flex;
    gap: var(--space-md);
    padding-block: var(--space-sm);
  }

  .info-list li::before {
    min-width: 1.5rem;
    content: 'âœ“';
    color: var(--color-primary);
    font-weight: 700;
  }

  /* Responsive */
  @media (max-width: 640px) {
    .grid {
      grid-template-columns: 1fr;
    }

    .heading {
      font-size: var(--font-size-xl);
    }
  }
</style>
