{% macro langSwitcher(currentUrl, currentLang) %}
  <nav class="lang-switcher" aria-label="Language selection">
    {% if currentLang === 'pt-br' %}
      <span class="lang-current" lang="pt-br">
        Português
      </span>
      <a href="{{ currentUrl | localizedPath('en') }}" lang="en" hreflang="en">
        English
      </a>
    {% else %}
      <a href="{{ currentUrl | localizedPath('pt-br') }}" lang="pt-br" hreflang="pt-br">
        Português
      </a>
      <span class="lang-current" lang="en">
        English
      </span>
    {% endif %}
  </nav>
{% endmacro %}