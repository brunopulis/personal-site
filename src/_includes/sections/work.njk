{% macro Work(projects, locale='pt-br') %}
<section class="work">
  <h2 class="section-title">{{ 'home.work.title' | t(locale) }}</h2>
  <div class="work__grid">
    {% for p in projects %}
      <article class="work__card">
        {% if p.logo %}
          <img src="{{ p.logo }}" alt="{{ p.title }} logo" class="work__logo">
        {% endif %}
        <h3 class="work__title">{{ p.title }}</h3>
        <p class="work__role"><strong>{{ 'home.work.role' | t(locale) }}:</strong> {{ p.role }}</p>
        <p class="work__desc">{{ p.description }}</p>
        <a href="{{ p.url }}" class="work__link">{{ 'home.work.see_more' | t(locale) }}</a>
      </article>
    {% endfor %}
  </div>
</section>
{% endmacro %}