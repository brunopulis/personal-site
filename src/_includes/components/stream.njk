<section class="py-12">
  <div class="max-w-7xl mx-auto max-md:px-6">
    <div class="flex flex-col md:flex-row items-start md:items-center md:mb-4 justify-between gap-4">
      <h2 class="font-bold text-4xl text-gray-900">Recentemente</h2>
      <a href="/fluxo" class="underline underline-offset-8 hover:no-underline">todas entradas recentes</a>
    </div>
    <div class="grid gap-8 md:grid-cols-3 mb-16">
      {% set streams = collections.streams %}

      {% if streams.length %}
      {% for item in streams.slice(0, 3) %}
      <article
        class="rounded-2xl bg-gray-50 p-8 group hover:shadow-xl shadow-sm transition stream-card--{{ item.data.type }}">
        <span class="mb-4" aria-hidden="true">
          {{ item.data.type | streamIcon }}
        </span>
        <h3 class="text-errie-black-900 font-bold mb-3 text-sm">{{ item.data.title }}</h3>

        {% if item.data.detail %}
        <p class="text-errie-black-900">{{ item.data.detail }}</p>
        {% endif %}

        <div class="cluster">
          <span class="text-errie-black-900">{{ item.data.type | streamTypeLabel }}</span>
          <span aria-hidden="true">â€¢</span>
          <time class="dt-published" datetime="{{ item.data.date | formatDate(toISOString) }}">
            {{ item.data.date | formatDate('DD/MM/YYYY') }}
          </time>
        </div>
      </article>
      {% endfor %}
      {% else %}
      <p>Nenhuma feed encontrado.</p>
      {% endif %}
    </div>
  </div>
</section>