<section class="text-center py-5 bg-light rounded">
  <h2 class="h4 fw-bold">{{ cta.title }}</h2>
  <p class="text-muted mb-4">{{ cta.description }}</p>

  <a href="{{ cta.link }}" class="btn btn-success btn-lg me-2">
    {{ cta.primary }}
  </a>

  {% if cta.secondary %}
  <a href="{{ cta.link }}" class="btn btn-outline-secondary btn-lg">
    {{ cta.secondary }}
  </a>
  {% endif %}
</section>