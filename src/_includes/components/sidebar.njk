<aside class="sidebar">
  <section class="sidebar-section">
    <h3 class="sidebar-title">Tags</h3>
    <div class="tags-cloud">
      {% set topTags = collections.tagListRecurrency | limit(10) %}
      {% for item in topTags %}
      <a href="/tags/{{ item.tag | slugify }}/" class="tag-link">
        {{ item.tag }}
        <span class="tag-count">({{ item.count }})</span>
      </a>
      {% endfor %}
    </div>
  </section>

  <section class="sidebar-section">
    <h3 class="sidebar-title">Posts Recentes</h3>
    <ul class="recent-posts">
      {% set recentPosts = collections.posts | reverse %}
      {% for post in recentPosts.slice(0,5) %}
      <li class="recent-post-item">
        <a href="{{ post.url }}" class="recent-post-link">
          {{ post.data.title }}
        </a>
        <time class="recent-post-date" datetime="{{ post.data.pubDate | toISOString }}">
          {{ post.data.pubDate | formatDate('DD/MM/YYYY') }}
        </time>
      </li>
      {% endfor %}
    </ul>
  </section>

