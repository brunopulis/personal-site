<section class="mt-12 py-6 border-brand-gray-500 border-b mb-12" id="projetos" aria-labelledby="projetos-title">
  <header class="gap-6 mb-6">
    <h2 class="mb-4 font-bold text-3xl text-brand-red-500" id="projetos-title">Portf√≥lio</h2>
    <p>Alguns trabalhos que realizei</p>
  </header>

  <div class="gap-4 grid grid-cols-1">
    {% set projects = portfolio.projects %}
    {% for project in projects.slice(0, 2) %}
    <div class="group flex flex-col md:flex-row border border-brand-dark-200 rounded-xl overflow-hidden card-hover">
      <div class="relative w-full md:w-2/5 aspect-video md:aspect-auto overflow-hidden">
        <img alt="{{ project.imageAlt }}"
          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
          src="{{ project.image }}">
        <div class="absolute inset-0 bg-linear-to from-card-dark/80 to-transparent"></div>
      </div>
      <div class="flex flex-col p-8 md:w-3/5 grow">
        <h3 class="mb-4 font-bold text-brand-red-500 text-2xl">{{ project.title }}</h3>
        <p class="mb-6 grow">
          {{ project.description }}
        </p>
        <div class="flex flex-wrap gap-2 mb-8">
          {% for tech in project.technologies %}
          <span
            class="bg-brand-blue-500 px-3 py-1 border border-brand-blue-500 rounded-full font-bold text-[10px] uppercase tracking-wider">
            {{ tech }}
          </span>
          {% endfor %}
        </div>
        <div class="flex gap-4">
          {% if project.links.demo %}
          <a class="inline-flex items-center gap-2 text-brand-red-500 hover:text-brand-red-600 font-bold underline hover:no-underline"
            href="{{ project.links.demo }}">
            ver projeto <span class="sr-only">: {{ project.title }}</span>
            {% lucide "arrow-up-right", { "class": "w-4 h-4" } %}
          </a>
          {% endif %}
          {% if project.links.case %}
          <a class="inline-flex items-center gap-2 text-brand-red-500 hover:text-brand-red-600 font-bold underline hover:no-underline"
            href="{{ project.links.case }}">
            ver estudo de caso <span class="sr-only">: {{ project.title }}</span>
            {% lucide "arrow-right", { "class": "w-4 h-4" } %}
          </a>
          {% endif %}
        </div>
      </div>
    </div>
    {% endfor %}
  </div>
  <p class="mt-6">
    <a href="/portfolio"
      class="group inline-flex items-center underline text-brand-red-500 hover:text-brand-red-600 hover:no-underline transition-colors gap-2 font-bold">
      ver todos os trabalhos {% lucide "chevron-right", { class: "w-4 h-4" } %}
    </a>
  </p>
</section>