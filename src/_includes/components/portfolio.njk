<section class="mt-12 py-6" id="projetos" aria-labelledby="projetos-title">
  <header class="gap-6 mb-8">
    <h2 class="mb-4 font-bold text-3xl" id="projetos-title">Projetos em Destaque</h2>
    <p class="max-w-2xl">Alguns trabalhos que realizei, <a class="font-bold" href="/portfolio">ver portf√≥lio
        completo.</a></p>
  </header>

  <div class="gap-4 grid grid-cols-1">
    {% set projects = portfolio.projects %}
    {% for project in projects.slice(0, 2) %}
    <div class="group flex flex-col md:flex-row border border-brand-dark-200 rounded-xl overflow-hidden card-hover">
      <div class="relative w-full md:w-2/5 aspect-video md:aspect-auto overflow-hidden">
        <img alt="{{ project.imageAlt }}"
          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
          src="{{ project.image }}">
        <div class="absolute inset-0 bg-linear-to from-card-dark/80 to-transparent"></div>
      </div>
      <div class="flex flex-col p-8 md:w-3/5 grow">
        <h3 class="mb-4 font-bold text-2xl">{{ project.title }}</h3>
        <p class="mb-6 grow">
          {{ project.description }}
        </p>
        <div class="flex flex-wrap gap-2 mb-8">
          {% for tech in project.technologies %}
          <span
            class="bg-brand-blue-500/10 px-3 py-1 border border-brand-blue-500/20 rounded-full font-bold text-[10px] text-brand-blue-500 uppercase tracking-wider">
            {{ tech }}
          </span>
          {% endfor %}
        </div>
        <div class="flex gap-4">
          {% if project.links.demo %}
          <a class="inline-flex items-center gap-2 font-bold text-brand-blue-500 hover:underline"
            href="{{ project.links.demo }}">
            Ver projeto
            {% lucide "arrow-up-right", { "class": "w-4 h-4" } %}
          </a>
          {% endif %}
          {% if project.links.case %}
          <a class="inline-flex items-center gap-2 font-bold text-brand-blue-500 hover:underline"
            href="{{ project.links.case }}">
            Ver estudo de caso
            {% lucide "arrow-right", { "class": "w-4 h-4" } %}
          </a>
          {% endif %}
        </div>
      </div>
    </div>
    {% endfor %}
  </div>
  </div>
</section>