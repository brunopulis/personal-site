<section class="writing">
  <div class="flow repel">
    <h2 class="text-rosewood-950 text-step-4">Ãšltimos artigos</h2>
    <a href="/artigos" class="btn btn-outline">todos artigos</a>
  </div>

  {% set allRecentPosts = collections.posts %}
  {% if allRecentPosts.length %}
  <ul class="grid" role="list" data-layout="50-50">
    {% for post in allRecentPosts.slice(0, 6) %}
    <li class="card | shadow">
      <div class="flow">
        <h3 class="writing__title">
          <a href="{{ post.url }}" class="writing__link">
            {{ post.data.title }}
          </a>
        </h3>

        {% if post.data.description %}
        <p class="writing__detail">{{ post.data.description }}</p>
        {% endif %}
        <time datetime="{{ post.data.pubDate }}">{{ post.data.pubDate | formatDate('DD/MM/YYYY') }}</time>
      </div>
    </li>
    {% endfor %}
  </ul>
  {% else %}
  <p>Nenhuma postagem encontrada.</p>
  {% endif %}
</section>