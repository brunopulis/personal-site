<section class="region" aria-labelledby="posts-title">
  <div class="wrapper flow">
    <header class="flow">
      <h2 class="title" id="post-title">Últimos artigos</h2>
      <p>Escrevo para organizar ideias, compartilhar aprendizados
        e questionar práticas comuns da web.</p>
    </header>

    {% set posts = collections.posts %}
    <ul class="grid" data-layout="thirds" role="list">
      {% for post in posts.slice(0, 3) %}
      <li class="card h-entry">
        <h3><a href="{{ post.url }}">{{ post.data.title }}</a></h3>

        {% if post.data.description %}
        <p>{{ post.data.description }}</p>
        {% endif %}
        <time datetime="{{ post.data.pubDate }}" class="dt-published">
          Publicado em: {{ post.data.pubDate | formatDate('DD/MM/YYYY') }}
        </time>
      </li>
      {% endfor %}
    </ul>
  </div>
</section>