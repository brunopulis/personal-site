{% if pagination and pagination.pages.length > 1 %}
<nav class="mt-20 pt-10 border-t border-border-dark flex gap-4 text-sm font-medium" aria-label="Paginação">
  {% if pagination.href.previous %}
  <a class="flex items-center gap-2 text-brand-gray-500 hover:text-white transition-colors"
    href="{{ pagination.href.previous }}" rel="prev">
    {% lucide "chevron-left", { class: "w-4 h-4 text-brand-gray-500" } %}
    Anterior
  </a>
  {% else %}
  <span class="cursor-not-allowed flex items-center gap-2 text-brand-gray-500 hover:text-white transition-colors">{%
    lucide "chevron-left", { class: "w-4 h-4 text-brand-gray-500" } %} Anterior</span>
  {% endif %}
  <span class="text-brand-gray-500">Página {{ pagination.pageNumber + 1 }} de {{ pagination.pages.length }}</span>
  {% if pagination.href.next %}
  <a class="flex items-center gap-2 text-brand-gray-500 hover:text-white transition-colors"
    href="{{ pagination.href.next }}" rel="next">
    Próxima
    {% lucide "chevron-right", { class: "w-4 h-4 text-brand-gray-500" } %}
  </a>
  {% else %}
  <span class="cursor-not-allowed">Próxima {% lucide "chevron-right", { class: "w-4 h-4 text-brand-gray-500" } %}</span>
  {% endif %}
</nav>
{% endif %}