{% if pagination and pagination.pages.length > 1 %}
<nav class="cluster" style="--cluster-gap: 1rem" aria-label="Paginação">
  {% if pagination.href.previous %}
  <a href="{{ pagination.href.previous }}" rel="prev">
    ← Anterior
  </a>
  {% else %}
  <span class="cursor-not-allowed">← Anterior</span>
  {% endif %}

  <span>
    Página {{ pagination.pageNumber + 1 }} de {{ pagination.pages.length }}
  </span>

  {% if pagination.href.next %}
  <a href="{{ pagination.href.next }}" rel="next">
    Próxima →
  </a>
  {% else %}
  <span class="cursor-not-allowed">Próxima →</span>
  {% endif %}
</nav>
{% endif %}