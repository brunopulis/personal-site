    <a class="px-3 py-2 border rounded" href="{{ pagination.href.previous }}">Newer</a>
  {% else %}
    <span></span>
  {% endif %}
  {% if pagination.href.next %}
    <a class="px-3 py-2 border rounded" href="{{ pagination.href.next }}">Older</a>
  {% endif %}
</nav>