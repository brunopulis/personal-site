<div class="col-md-4">
  <div class="card h-100 shadow-sm border-2">
    <div class="card-body d-flex flex-column">

      <h3 class="h5 fw-bold">{{ plan.name }}</h3>
      <p class="text-muted mb-2">{{ plan.subtitle }}</p>

      {% if plan.description %}
      <p>{{ plan.description | safe }}</p>
      {% endif %}

      {% if plan.includes %}
      <ul class="mb-3">
        {% for item in plan.includes %}
        <li>{{ item }}</li>
        {% endfor %}
      </ul>
      {% endif %}

      {% if plan.delivery %}
      <p class="mt-auto text-muted">
        ⏱️ <strong>{{ plan.delivery }}</strong>
      </p>
      {% endif %}

    </div>
  </div>
</div>