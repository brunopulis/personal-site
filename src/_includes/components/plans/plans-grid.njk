<section class="region" aria-labelledby="plans">
  <h2 class="mb-6 font-bold text-brand-red-500 text-2xl text-center" id="plans">
    {{ plansTitle }}
  </h2>

  <div class="gap-4 lg:gap-8 grid grid-cols-1 lg:grid-cols-3">
    {% for plan in plans %}
      <article class="flex flex-col bg-white p-6 lg:p-8 border border-gray-200 rounded-lg">
        <header role="banner">
          <h3 class="mb-1 font-semibold text-brand-red-500 text-xl">{{ plan.name }}</h3>
          <p class="mb-4 min-h-12.5 text-sm grow">{{ plan.subtitle }}</p>
        </header>
        <p>{{ plan.description }}</p>
        <p class="mb-6 font-bold text-gray-900 text-3xl lg:text-4xl">{{ plan.value }}</p>

        <h3 class="mb-4 font-medium text-gray-800 text-sm">Inclu√≠do:</h3>
        <ul class="space-y-3 text-sm grow prose">
          {% for item in plan.includes %}
          <li class="flex items-start">{{item}}</li>
          {% endfor %}  
        </ul>
      </article>
    {% endfor %}
  </div>
</section>