<div class="flex items-center justify-between h-16">
  <div class="shrink-0">
    <a href="/" class="logo | cluster" {{ indicateActiveHome }}>
      {% svg "misc/logo" %}
    </a>
  </div>

  <!-- Desktop Menu -->
  <nav id="mainnav" aria-label="{{ meta.navigation.ariaTop }}" class="hidden md:flex flex-1 justify-center">
    <ul class="flex space-x-8">
      {% for item in navigation.top %}
      <li>
        <a href="{{ item.url }}" {{ helpers.getLinkActiveState(item.url, page.url) | safe }}
          class="text-gray-700 hover:text-gray-900 transition-colors font-medium">{{ item.text }}</a>
      </li>
      {% endfor %}
    </ul>
  </nav>

  <!-- Mobile Menu Button -->
  <button id="menu-btn" aria-label="Menu" class="md:hidden p-2 text-gray-700 hover:text-gray-900 focus:outline-none">
    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" class="w-6 h-6">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
    </svg>
  </button>
</div>

<!-- Mobile Menu -->
<nav id="mobile-menu" class="hidden md:hidden border-t border-gray-200 mt-4 py-4">
  <ul class="flex flex-col space-y-4">
    {% for item in navigation.top %}
      <li>
        <a href="{{ item.url }}" class="text-gray-700 hover:text-gray-900 transition-colors font-medium block" {{ helpers.getLinkActiveState(item.url, page.url) | safe }}>
          {{ item.text }}
        </a>
      </li>
    {% endfor %}  
  </ul>
</nav>

<script>
  const menuBtn = document.getElementById('menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  menuBtn.addEventListener('click', () => {
    mobileMenu.classList.toggle('hidden');
  });

  // Fechar menu ao clicar em um link
  mobileMenu.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu.classList.add('hidden');
    });
  });
</script>
