<div class="flex items-center justify-between h-16">
 <div class="flex items-center shrink-0">
    <a href="/" class="inline-flex items-center" {{ indicateActiveHome }}>
      {% svg "misc/logo" %}
    </a>
  </div>

  <!-- Desktop Menu -->
  <nav id="mainnav" aria-label="{{ meta.navigation.ariaTop }}" class="hidden md:flex flex-1 justify-center">
    <ul class="flex flex-wrap items-center gap-x-8 gap-y-2">
      {% for item in navigation.top %}
      <li>
        <a href="{{ item.url }}" {{ helpers.getLinkActiveState(item.url, page.url) | safe }}
          class="text-gray-700 hover:text-gray-900 transition-colors font-medium">{{ item.text }}</a>
      </li>
      {% endfor %}
    </ul>
  </nav>

  <!-- Mobile Menu Button -->
  <button
        id="menu-btn"
        aria-label="Menu"
        aria-expanded="false"
        class="md:hidden inline-flex items-center justify-center rounded-md p-2 text-gray-700 hover:text-gray-900 focus:outline-none focus-visible:ring-2 focus-visible:ring-gray-400"
      >
        <svg
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          class="h-6 w-6"
          aria-hidden="true"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
</div>

<!-- Mobile Menu -->
<!-- Mobile Menu -->
    <nav
      id="mobile-menu"
      aria-label="Principal"
      class="hidden md:hidden border-t border-gray-200 py-4"
    >
      <ul class="flex flex-col gap-4">
        <li><a href="/sobre/" class="block font-medium text-gray-700 hover:text-gray-900">Sobre</a></li>
        <li><a href="/agora/" class="block font-medium text-gray-700 hover:text-gray-900">Agora</a></li>
        <li><a href="/servicos/" class="block font-medium text-gray-700 hover:text-gray-900">Servi√ßos</a></li>
        <li><a href="/blog/" class="block font-medium text-gray-700 hover:text-gray-900">Blog</a></li>
        <li><a href="/trabalho/" class="block font-medium text-gray-700 hover:text-gray-900">Projetos</a></li>
        <li><a href="/contato/" class="block font-medium text-gray-700 hover:text-gray-900">Contato</a></li>
        <li><a href="/explore/" class="block font-medium text-gray-700 hover:text-gray-900">Explore</a></li>
      </ul>
    </nav>

<script>
  const menuBtn = document.getElementById('menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  menuBtn.addEventListener('click', () => {
    mobileMenu.classList.toggle('hidden');
  });

  // Fechar menu ao clicar em um link
  mobileMenu.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu.classList.add('hidden');
    });
  });
</script>
