<a href="#main" class="visually-hidden">{{ meta.skipContent }}</a>
<header class="wrapper region | repel | page-header">
  <a href="/" class="navbar-brand" data-variant="naked">
    Bruno Pulis
  </a>
  <nav data-variant="main" id="mainnav" aria-label="{{ meta.navigation.ariaTop }}">
    <ul style="--gutter: 1rem;" role="list" class="cluster">
      {% for item in navigation.top %}
      <li>
        <a href="{{ item.url }}" {% if page.url==item.text %}aria-current="page" {% endif %} data-variant="{{ item.variant }}" {% if item.class %}class="{{ item.class }}"{% endif %}>{{
          item.text }}</a>
      </li>
      {% endfor %}
    </ul>
  </nav>
</header>
