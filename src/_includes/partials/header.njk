<a href="#main" class="visually-hidden">{{ meta.skipContent }}</a>
<header class="header py-4">
    <div class="flex items-center gap-6 py-5">
      <nav class="navbar navbar-expand-lg" id="mainnav" aria-label="{{ meta.navigation.ariaTop }}">
        <div class="container">
          <a href="/" class="navbar-brand" {{ indicateActiveHome }}>
            {% svg "misc/logo" %}
          </a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false">
            <span class="navbar-toggler-icon"></span>
            <span class="visually-hidden">Menu</span>
          </button>

          <div class="collapse navbar-collapse">
              <ul class="navbar-nav mx-auto">
                {% for item in navigation.top %}
                <li class="nav-item inline-block">
                  <a href="{{ item.url }}" {{ helpers.getLinkActiveState(item.url, page.url) | safe }} class="nav-link">{{ item.text }}</a>
                </li>
                {% endfor %}
              </ul>
              <div class="d-flex gap-2">
                 <a href="/pesquisa" class="btn btn-primary" id="search">Pesquisar</a>
                 <a href="/contato" class="btn btn-primary">Contato</a>
              </div>
          </div>
        </div>
      </nav>
    </div>
  </div>
</header>
