<a href="#main" class="sr-only">{{ meta.skipContent }}</a>
<header>
  <nav class="max-w-7xl mx-auto px-6 py-6 flex flex-col md:flex-row items-center justify-between gap-y-4 md:gap-x-12"
    id="mainnav" aria-label="{{ meta.navigation.ariaTop }}">
    <a href="/"
      class="text-2xl font-black text-brand-dark-500 tracking-tighter hover:text-brand-red-500 transition-colors duration-300">
      {% svg "misc/logo", "Bruno Pulis" %}
    </a>

    <ul class="flex flex-wrap items-center justify-center md:justify-end gap-x-4 md:gap-x-8 gap-y-2">
      {% for item in navigation.top %}
      <li>
        <a href="{{ item.url }}" {% if page.url==item.text %}aria-current="page" {% endif %} class="{{ itemClass }}">
          {{ item.text }}
        </a>
      </li>
      {% endfor %}
    </ul>
  </nav>
</header>