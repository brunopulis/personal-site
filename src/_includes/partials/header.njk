<header class="border-brand-gray-500 border-b">
  <div class="flex justify-between items-center mx-auto px-6 h-20 h-card container">
    <a class="p-name font-semibold text-lg u-url" href="/">
      {% svg "misc/logo", "Bruno Pulis" %}
    </a>

    <nav>
      <div id="primary-nav" class="hidden md:block">
        {% set url = page.url or '/' %}
        {% set isHome = url == '/' %}
        {% set isBlog = (url and (url | slice(0, 6) == '/blog/')) %}
        {% set isAbout = url == '/about/' %}
        {% set isUses = url == '/uses/' %}
        {% set isNow = url == '/now/' %}
        {% set isContact = url == '/contact/' %}
        <ul class="flex md:flex-row flex-col md:space-x-6 space-y-3 md:space-y-0 md:text-sm text-base">
          {% for item in navigation.top %}
          <li>
            <a href="{{ item.url }}"
              class="nav-item block py-2 {% if item.url == url %}underline text-brand-red-500 font-bold{% endif %}" {%
              if item.url==url %}aria-current="page" {% endif %}>{{ item.text }}</a>
          </li>
          {% endfor %}
        </ul>
      </div>
    </nav>

    <button id="hamburger" class="md:hidden p-2 border border-gray-300 rounded" aria-label="Toggle menu"
      aria-controls="primary-nav" aria-expanded="false">
      <span class="block bg-brand-dark-700 mb-1 w-5 h-0.5 transition-transform bar-1"></span>
      <span class="block bg-brand-dark-700 mb-1 w-5 h-0.5 transition-opacity bar-2"></span>
      <span class="block bg-brand-dark-700 w-5 h-0.5 transition-transform bar-3"></span>
    </button>
  </div>
</header>