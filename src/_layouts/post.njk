---
layout: base
schema: BlogPosting
---

<section class="hero" id="hero" aria-labelledby="posts-title" >
  <div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
      <h1 class="hero__title" id="post-title">{{ title }}</h1>
      <p>{{ description }}</p>

      <div class="text-sm font-medium items-center mt-6 flex flex-wrap gap-6 lg:text-base mb-6 text-blood-red-800">
        {% set definedDate = pubDate %}
        {% include "partials/date.njk" %}

        {% if tags.length > 1 %}
        <p class="text-sm text-white font-bold">
          Tags:
          {% for tag in tags %}
          {% if tag != "posts" %}
          <a class="text-sm text-white hover:underline hover:underline-offset-8" href="/tags/{{ tag | slugify }}/">
            {{ tag }}
          </a>
          {% endif %}
          {% endfor %}
        </p>
        {% endif %}
      </div>
    </div>
</section>

<div class="container px-4 px-lg-5">
 <div class="row gx-4 gx-lg-5 justify-content-center">
  <article class="h-entry" itemscope itemtype="https://schema.org/BlogPosting" data-pagefind-body>
    {% if image %}
    {% image image, alt or "", credit, "eager", "feature" %}
    {% endif %}
    <div class="col-md-10 col-lg-8 col-xl-10">
      {{ content | safe }}
    </div>
  </article>

  <div class="mx-auto max-w-5xl px-6 py-6">
    {% set postTitle = title %}
    {% set postUrl = page.url %}
    {% set email = "brunopulis@protonmail.com" %}
    {% include "components/post-engagement.njk" %}
    {% include "components/newsletter.njk" %}
    {% include 'components/coffee.njk' %}
    {% include "partials/webmentions.njk" %}
  </div>

  <!--  h-card infos: https://indieweb.org/authorship -->
  <div hidden class="h-entry">
    <a class="u-url" href="{{ page.url | url | absoluteUrl(meta.url) }}">{{ title }}</a>
    <a class="p-name u-url" rel="author" href="{{ meta.url }}">{{ meta.author.name }}</a>
    <img eleventy:ignore class="u-author h-card" src="{{ meta.author.avatar | url | absoluteUrl(meta.url) }}"
      alt="{{ meta.author.name }}" />
  </div>
</div>
</div>
