---
layout: base
---

<section class="hero">
  <div class="wrapper">
    <div class="flow">
      <h1 class="title p-name">{{ title }}</h1>
      <p class="p-description">{{ description }}</p>


      {% if cta or cta2 %}
      <div class="cluster">
        {% if cta %}
        <a href="{{ cta.link }}" class="button">{{ cta.label }}</a>
        {% endif %}
        {% if cta2 %}
        <a href="{{ cta2.link }}" class="button" data-variant="outline">{{ cta2.label }}</a>
        {% endif %}
      </div>
      {% endif %}
    </div>
  </div>
</section>

<section class="region">
  <div class="wrapper h-feed">
    <div class="flow">
      {{ content | safe }}
    </div>
  </div>
</section>