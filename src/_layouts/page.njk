---
layout: base
---

<section class="hero">
  <div class="wrapper">
    <div class="flow">
      <h1 class="title p-name">{{ title }}</h1>
      <p class="p-description">{{ description }}</p>


      {% if cta %}
        <div class="flow">
          <a href="{{cta.link}}">{{cta.label}}</a>
        </div>
      {% endif %}
    </div>
  </div>
</section>

<section class="region">
  <div class="wrapper h-feed">
    <div class="flow">
      {{ content | safe }}
    </div>
  </div>
</section>