        <ul class="space-y-2 text-slate-400 text-sm">
          {% for item in data.methodology.technical_bases.items %}
          <li class="flex gap-2">
            <span class="text-primary mt-1 shrink-0" aria-hidden="true">{% lucide "check", "w-3 h-3" %}</span>
            {{ item }}
