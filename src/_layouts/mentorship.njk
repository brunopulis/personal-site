<!-- Investment Section -->
<section class="py-24 bg-brand-dark-950  px-6" id="investment" aria-labelledby="investment-title">
  <div
    class="max-w-xl mx-auto text-center border-2 border-primary rounded-3xl p-10 bg-card-dark shadow-2xl relative overflow-hidden">
    <h2 class="text-2xl font-bold mb-2 text-brand-blue-500" id="investment-title">{{ data.investment.title }}</h2>
    <p class="text-primary mb-8">{{ data.investment.description }}</p>

    <div class="mb-12">
      <div class="text-5xl font-extrabold mb-8 flex items-center justify-center text-white">
        <span class="text-xl font-normal text-primary mr-2">R$</span> {{ data.investment.price.value }} <span
          class="text-lg font-normal text-primary ml-2">à vista.</span>
      </div>
      <p class="text-sm text-primary mb-10">Ou parcele em até 12x no cartão de crédito</p>

      <a class="block w-full py-4 bg-brand-blue-500 text-brand-dark-950 no-underline rounded-xl font-extrabold text-xl hover:opacity-90 transition-opacity shadow-lg shadow-primary/40 mb-4"
        href="#">
        Garantir minha vaga
      </a>
    </div>

    <div class="flex flex-col items-center gap-6">
      <a href="{{ data.conversion.cta.link }}"
        class="block w-full py-4 bg-primary text-white rounded-xl font-extrabold text-xl hover:opacity-90 transition-opacity shadow-lg shadow-primary/40 mb-4">
        {{ data.conversion.cta.primary.label }}
      </a>
      <p class="text-xs text-primary flex items-center justify-center">
        {% lucide "lock", "w-4 h-4" %}
        Pagamento 100% seguro | Vagas limitadas
      </p>
    </div>
  </div>
  </div>
</section>

<section class="py-24 bg-brand-dark-950  px-6" aria-labelledby="guaranteed-title">
  <!-- Garantia -->
