        <div class="text-primary mb-4 group-hover:scale-110 transition-transform">
          {% lucide "wrench", "w-8 h-8" %}
        </div>
        <h3 class="text-xl font-bold text-white mb-4">{{ data.methodology.practical_solutions.title }}</h3>
        <ul class="space-y-2 text-slate-400 text-sm">
          {% for item in data.methodology.practical_solutions.items %}
          <li class="flex gap-2">
            <span class="text-primary mt-1 shrink-0">{% lucide "check", "w-3 h-3" %}</span>
            {{ item }}
          </li>
          {% endfor %}
