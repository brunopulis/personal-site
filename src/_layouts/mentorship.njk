<!-- Investment Section -->
<section class="py-12" id="investment" aria-labelledby="investment-title">
  <div
    class="relative bg-bg-brand-gray-200 shadow-2xl mx-auto p-10 p-6 border border-2 border-brand-gray-300 border-primary rounded-3xl rounded-lg-dark max-w-xl overflow-hidden text-center">
    <h2 class="mb-2 font-bold text-brand-red-500 text-2xl" id="investment-title">{{ data.investment.title }}</h2>
    <p class="mb-8 text-primary">{{ data.investment.description }}</p>

    <div class="mb-12">
      <div class="flex justify-center items-center mb-8 font-extrabold text-5xl">
        <span class="mr-2 font-normal text-primary text-xl">R$</span> {{ data.investment.price.value }} <span
          class="ml-2 font-normal text-primary text-lg">à vista.</span>
      </div>
      <p class="mb-10 text-primary text-sm">Ou parcele em até 12x no cartão de crédito</p>

      <a class="block bg-brand-red-500 hover:opacity-90 shadow-lg shadow-primary/40 mb-4 py-4 rounded-xl w-full font-extrabold text-white text-xl no-underline transition-opacity"
        href="#">Garantir minha vaga</a>
    </div>

    <div class="flex flex-col items-center gap-6">
      <a href="{{ data.conversion.cta.link }}"
        class="block bg-primary hover:opacity-90 shadow-lg shadow-primary/40 mb-4 py-4 rounded-xl w-full font-extrabold text-xl transition-opacity">
        {{ data.conversion.cta.primary.label }}
      </a>
      <p class="flex justify-center items-center text-primary text-xs">
        {% lucide "lock", "w-4 h-4 mr-1" %}
        Pagamento 100% seguro | Vagas limitadas
      </p>
    </div>
  </div>
  </div>
</section>

<section class="py-12" aria-labelledby="guaranteed-title">
  <!-- Garantia -->
