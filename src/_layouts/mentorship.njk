<!-- Audience -->
<section class="py-24 bg-slate-900 px-6" aria-labelledby="audience-title">
  <div class="max-w-5xl mx-auto">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4" id="audience-title">{{ data.target_audience.title }}
      </h2>
      <p class="text-slate-400 text-lg max-w-2xl mx-auto">{{ data.target_audience.description | safe | nl2br }}</p>
    </div>

    <div class="grid md:grid-cols-2 gap-8">
      <div class="p-8 bg-slate-950 rounded-2xl border border-green-500/20">
        <div class="flex items-center gap-3 mb-6">
          <div class="text-green-500">{% lucide "user-check", "w-8 h-8" %}</div>
          <h3 class="text-xl font-bold text-white">Essa mentoria é para você se:</h3>
        </div>
        <ul class="space-y-4">
          {% for item in data.target_audience.for_you %}
          <li class="flex gap-3 text-slate-300">
            <span class="text-green-500 shrink-0">{% lucide "check", "w-5 h-5" %}</span>
            {{ item }}
          </li>
          {% endfor %}
        </ul>
      </div>

      <div class="p-8 bg-slate-950 rounded-2xl border border-red-500/20">
        <div class="flex items-center gap-3 mb-6">
          <div class="text-red-500">{% lucide "user-x", "w-8 h-8" %}</div>
          <h3 class="text-xl font-bold text-white">Essa mentoria não é para:</h3>
        </div>
        <ul class="space-y-4">
          {% for item in data.target_audience.for_not %}
          <li class="flex gap-3 text-slate-300">
            <span class="text-red-500 shrink-0">{% lucide "x", "w-5 h-5" %}</span>
            {{ item }}
          </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
</section>

<!-- Differentiators -->
<section class="py-24 bg-slate-950 px-6" aria-labelledby="differentiators-title">
