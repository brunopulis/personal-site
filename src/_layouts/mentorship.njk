---
layout: base
formato: base
---

{% set data = mentoria[formato] %}
<section class="hero bg-slate-950">
  <header class="py-20 px-6">
    <div class="max-w-4xl mx-auto text-center">
      <span
        class="inline-block py-1 px-3 rounded-full bg-primary/10 text-primary text-xs font-bold uppercase tracking-wider mb-6 border border-primary/20">
        {{ data.hero.title }}
      </span>
      <h1 class="text-4xl md:text-6xl font-extrabold mb-6 tracking-tight leading-tight text-white">
        {{ data.hero.subtitle }}
      </h1>
      <p class="text-xl text-slate-400 mb-10 leading-relaxed max-w-2xl mx-auto">
        {{ data.hero.description }}
      </p>

      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a href="#investment"
          class="w-full sm:w-auto px-8 py-4 bg-primary text-white rounded-md font-bold text-lg hover:scale-105 transition-transform shadow-lg shadow-primary/20">
          Quero me tornar especialista
        </a>
        <a href="#methodology"
          class="w-full sm:w-auto px-8 py-4 border border-slate-800 rounded-md font-bold text-lg hover:bg-slate-900 transition-colors text-white">
          Ver metodologia
        </a>
      </div>
    </div>
  </header>
</section>

<!-- Scarcity / Urgency Alert -->
{% if data.conversion.scarcity.enabled or data.conversion.urgency.enabled %}
<div class="max-w-4xl mx-auto px-6 -mt-8 relative z-10">
  <div class="bg-amber-900/20 border border-amber-500/30 rounded-lg p-4 flex items-center gap-3 backdrop-blur-sm">
    <div class="text-amber-500 shrink-0">
      {% lucide "alarm-clock", "w-6 h-6" %}
    </div>
    <div class="text-amber-200 text-sm md:text-base">
      {% if data.conversion.scarcity.enabled %}
      <strong class="text-amber-400">{{ data.conversion.scarcity.label }}:</strong> Restam apenas {{
      data.conversion.scarcity.remaining_slots }} vagas.
      {% endif %}
      {% if data.conversion.urgency.enabled %}
      <strong class="text-amber-400 ml-2">{{ data.conversion.urgency.label }}</strong> até {{
      data.conversion.urgency.deadline | formatDate("dd/MM/yyyy") }}.
      {% endif %}
    </div>
  </div>
</div>
{% endif %}

<!-- Problem / Solution -->
<section class="py-24 bg-slate-900 px-6" aria-labelledby="problem-solution">
  <div class="max-w-5xl mx-auto grid md:grid-cols-2 gap-8">
    <article class="p-8 bg-black rounded-xl border border-slate-800 shadow-sm">
      <div class="w-12 h-12 bg-red-900/30 text-red-400 rounded-lg flex items-center justify-center mb-6">
        {% lucide "circle-alert", "w-6 h-6" %}
      </div>
      <h2 class="text-2xl font-bold mb-4 text-white" id="problem-solution">
        O problema
      </h2>
      <p class="text-slate-400">{{ data.problem | safe | nl2br }}</p>
    </article>

    <article class="p-8 bg-black rounded-xl border border-slate-800 shadow-sm">
      <div class="w-12 h-12 bg-green-900/30 text-green-400 rounded-lg flex items-center justify-center mb-6">
        {% lucide "circle-check", "w-6 h-6" %}
      </div>
      <h2 class="text-2xl font-bold mb-4 text-white" id="solution">A solução</h2>
      <p class="text-slate-400">{{ data.solution | safe | nl2br }}</p>
    </article>
  </div>
</section>

<!-- Methodology -->
<section class="py-24 bg-slate-950 px-6" id="methodology" aria-labelledby="methodology-title">
  <div class="max-w-6xl mx-auto">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4" id="methodology-title">{{ data.methodology.title }}
      </h2>
      <p class="text-slate-400 max-w-2xl mx-auto text-lg">{{ data.methodology.description }}</p>
    </div>
    <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
