---
layout: base
---

<section class="hero py-5">
  <div class="container">
    <header class="mb-5">
      <span class="badge bg-white text-black mb-3">{{ service.icon }} Serviço</span>
      <h1 class="display-5 fw-bold text-white">{{ title }}</h1>
      <p class="lead text-white">{{ service.tagline }}</p>
    </header>
  </div>
</section>

<!-- Problem / Solution -->
<section class="py-4" aria-labelledby="problem-solution">
  <div class="container">
    <div class="row g-5 mb-5">
      <div class="col-md-6">
        <h2 class="h4" id="problem-solution">O problema</h2>
        <p class="text-muted">{{ service.problem | safe | nl2br }}</p>
      </div>

      <div class="col-md-6">
        <h2 class="h4">A solução</h2>
        <p class="text-muted">{{ service.solution | safe | nl2br }}</p>
      </div>
    </div>
  </div>
</section>


<!-- Differentials -->
{% if service.differentials %}
<section class="py-4" aria-labelledby="differentials">
  <div class="container">
    <h2 class="h4 mb-3" id="differentials">Por que essa avaliação é diferente</h2>
    <ul class="list-group list-group-flush">
      {% for item in service.differentials %}
      <li class="list-group-item">✔️ {{ item }}</li>
      {% endfor %}
    </ul>
  </div>
</section>
{% endif %}

<!-- Included -->
{% if service.included %}
<section class="py-4" aria-labelledby="included">
  <div class="container">
    <h2 class="h4 mb-3" id="included">O que você recebe</h2>
    <div class="row row-cols-1 row-cols-md-2 g-3">
      {% for item in service.included %}
      <div class="col">
        <div class="border rounded p-3 h-100">
          {{ item }}
        </div>
      </div>
      {% endfor %}
    </div>
</section>
{% endif %}

<!-- Results -->
{% if service.results %}
<section class="py-4" aria-labelledby="results">
  <div class="container">
    <h2 class="h4 mb-4" id="results">Resultados esperados</h2>
    <div class="row g-4">
      {% for result in service.results %}
      <div class="col-md-4">
        <div class="card h-100 shadow-sm">
          <div class="card-body">
            <h3 class="h6 fw-bold">{{ result.title }}</h3>
            <p class="text-muted mb-0">{{ result.description }}</p>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
</section>
{% endif %}

<!-- Target -->
{% if service.target %}
<section class="py-4" aria-labelledby="target">
  <div class="container">
    <h2 class="h4 mb-3" id="target">Para quem é indicado</h2>
    <ul class="list-inline">
      {% for item in service.target %}
      <li class="list-inline-item badge bg-light text-dark border me-2 mb-2">
        {{ item }}
      </li>
      {% endfor %}
    </ul>
</section>
{% endif %}

<!-- Process -->
{% if service.processes %}
<section class="py-4" aria-labelledby="process">
  <div class="container">
    <h2 class="h4 mb-4" id="process">Como funciona</h2>
    <ol class="list-group list-group-numbered">
      {% for step in service.processes %}
      <li class="list-group-item">
        <strong>{{ step.title }}:</strong>
        <span class="text-muted">{{ step.description }}</span>
      </li>
      {% endfor %}
    </ol>
    <p class="text-muted mt-3">
      ⏱️ Prazo estimado: <strong>{{ service.timeline }}</strong>
    </p>
</section>
{% endif %}

<!-- Plans -->
{% if service.plans %}
{% set plansTitle = "Planos disponíveis" %}
{% set plans = service.plans %}
{% include "components/plans/plans-grid.njk" %}
{% endif %}

<!-- Testimonial -->
{% if service.testimonials %}
<section class="py-4" aria-labelledby="testimonial">
  <div class="container">
    <blockquote class="blockquote border-start ps-4">
      <p class="mb-2">“{{ service.testimonials.quote }}”</p>
      <footer class="blockquote-footer">
        {{ service.testimonials.cliente }} —
        <cite>{{ service.testimonials.resultado }}</cite>
      </footer>
    </blockquote>
</section>
{% endif %}

<!-- FAQ -->
{% if service.faq %}
<section class="py-4" aria-labelledby="faq">
  <div class="container">
    <h2 class="h4 mb-4" id="faq">Perguntas frequentes</h2>
    <div class="accordion" id="faq">
      {% for item in service.faq %}
      <div class="accordion-item">
        <h3 class="accordion-header" id="faq-{{ loop.index }}">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
            data-bs-target="#faq-content-{{ loop.index }}">
            {{ item.question }}
          </button>
        </h3>
        <div id="faq-content-{{ loop.index }}" class="accordion-collapse collapse" data-bs-parent="#faq">
          <div class="accordion-body">
            {{ item.answer }}
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
</section>
{% endif %}

<!-- CTA -->
{% set cta = service.cta %}
{% include "components/cta/cta-block.njk" %}