---
layout: base
---

<section class="hero">
  <div class="wrapper">
    <header>
      <span class="badge">Serviço</span>
      <h1 class="title">{{ title }}</h1>
      <p>{{ service.tagline }}</p>
    </header>
  </div>
</section>

<!-- Problem / Solution -->
<section class="region" aria-labelledby="problem-solution">
  <div class="wrapper">
    <div class="grid" data-layout="50-50">
      <article class="box">
        <h2 class="title" data-color="light" id="problem-solution">O problema</h2>
        <p class="text-muted">{{ service.problem | safe | nl2br }}</p>
      </article>

      <article class="box">
        <h2 class="title" data-color="light">A solução</h2>
        <p class="text-muted">{{ service.solution | safe | nl2br }}</p>
      </article>
    </div>
  </div>
</section>

<!-- Differentials -->
{% if service.differentials %}
<section class="region" aria-labelledby="differentials">
  <div class="wrapper flow">
    <h2 class="title text-center" id="differentials">Por que essa avaliação é diferente</h2>
    <ul class="grid" data-layout="50-50" role="list">
      {% for item in service.differentials %}
      <li class="box">{{ item }}</li>
      {% endfor %}
    </ul>
  </div>
</section>
{% endif %}

<!-- Included -->
{% if service.included %}
<section class="region" aria-labelledby="included">
  <div class="wrapper flow">
    <h2 class="title text-center" id="included">O que você recebe</h2>
    <ul class="grid" data-layout="thirds" role="list">
      {% for item in service.included %}
      <li class="box">
        <div class="border rounded p-3 h-100">
          {{ item }}
        </div>
      </li>
      {% endfor %}
    </ul>
</section>
{% endif %}

<!-- Results -->
{% if service.results %}
<section class="region" aria-labelledby="results">
  <div class="wrapper flow">
    <h2 class="title" id="results">Resultados esperados</h2>
    <ul class="grid" data-layout="thirds" role="list">
      {% for result in service.results %}
      <li class="card shadow">
        <h3 class="h6 fw-bold">{{ result.title }}</h3>
        <p class="text-muted mb-0">{{ result.description }}</p>
      </li>
      {% endfor %}
    </ul>
</section>
{% endif %}

<!-- Target -->
{% if service.target %}
<section class="region" aria-labelledby="target">
  <div class="wrapper flow">
    <h2 class="title" id="target">Para quem é indicado</h2>
    <ul class="grid" data-layout="thirds" role="list">
      {% for item in service.target %}
      <li class="box">
        {{ item }}
      </li>
      {% endfor %}
    </ul>
</section>
{% endif %}

<!-- Plans -->
{% if service.plans %}
{% set plansTitle = "Planos disponíveis" %}
{% set plans = service.plans %}
{% include "components/plans/plans-grid.njk" %}
{% endif %}

<!-- Process -->
{% if service.processes %}
<section class="region" aria-labelledby="process">
  <div class="wrapper flow">
    <h2 class="title  text-center" id="process">Como funciona</h2>
    <ol class="grid" data-layout="50-50" role="list">
      {% for step in service.processes %}
        <li class="box">
          <strong>{{ step.title }}:</strong>
          <span class="text-muted">{{ step.description }}</span>
        </li>
      {% endfor %}
    </ol>
  </div>
</section>
{% endif %}

<!-- Testimonial -->
{% if service.testimonials %}
<section class="region" aria-labelledby="testimonial">
  <div class="wrapper flow">
    <h2 class="title text-center" id="process">Depoimentos</h2>

    <div class="grid" data-layout="thirds">
      {% set testimonials = service.testimonials %}
      {% for testimonial in testimonials %}
      <blockquote class="box">
        <p class="mb-2">“{{ testimonial.quote }}”</p>
        <footer class="blockquote-footer">
          {{ testimonial.client }}
        </footer>
      </blockquote>
      {% endfor %}
    </div>
</section>
{% endif %}

<!-- FAQ -->
{% if service.faq %}
<section class="region" aria-labelledby="faq">
  <div class="wrapper flow">
    <h2 class="title text-center" id="faq">Perguntas frequentes</h2>

    <div class="grid" data-layout="50-50">
      {% for item in service.faq %}
      <details class="box accordion-item">
        <summary class="accordion-header">{{ item.question }}</summary>
        <p>{{ item.answer }}</p>
      </details>
      {% endfor %}
    </div>
  </div>
</section>
{% endif %}

<!-- CTA -->
{% set cta = service.cta %}
{% include "components/cta/cta-block.njk" %}