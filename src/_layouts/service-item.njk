<!-- FAQ -->
{% if service.faq %}
<section class="py-12" aria-labelledby="faq-section">
  <div class="mx-auto max-w-7xl">
    <h2 class="text-3xl md:text-4xl font-bold text-blood-red-800 mb-12 text-center" id="faq-section">Perguntas
      Frequentes</h2>

    <div class="space-y-6">
      {% for item in service.faq %}
      <details
        class="bg-gray-50 group border border-gray-200 rounded-lg p-6 cursor-pointer hover:border-blood-red-300 transition">
        <summary class="flex items-center justify-between font-semibold text-gray-900">
          <span>{{ item.question }}</span>
          <span class="text-blood-red-600 group-open:rotate-180 transition">▼</span>
        </summary>
        <p class="text-gray-600 mt-4 leading-relaxed">
          {{ item.answer }}
        </p>
      </details>
      {% endfor %}
    </div>
  </div>
</section>
{% endif %}

<!-- CTA Final -->
{% if service.cta %}
<section class="py-12 my-3" aria-labelledby="cta-section">
  <div class="bg-linear-to-br from-blood-red-800 to-blood-red-900 mx-auto max-w-7xl text-center space-y-8 py-12">
    <div class="space-y-4">
      <h2 class="text-3xl md:text-4xl font-bold text-white" id="cta-section">
        {{ service.cta.title }}
      </h2>
      <p class="text-lg text-white">
        {{ service.cta.description }}
      </p>
    </div>

    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <a href="mailto:brunopulis@protonmail.com?subject=Solicitação de Orçamento - {{ title }}"
        class="inline-flex items-center no-underline justify-center px-8 py-3 bg-white text-blood-red-800 font-bold rounded-lg hover:bg-blood-red-50 transition">
        {{ service.cta.primary }}
      </a>
      <a href="{{ service.cta.link }}"
        class="inline-flex items-center no-underline justify-center px-8 py-3 border-2 border-white text-white font-bold rounded-lg hover:bg-white hover:text-blood-red-800 hover:border-blood-red-800 transition">
        {{ service.cta.secondary }}
      </a>
    </div>
  </div>
</section>
{% endif %}

<style>
  .service-hero {
    background: linear-gradient(135deg, var(--accent-color), var(--accent-color-light));
    color: white;
    padding: 6rem 2rem;
    text-align: center;
  }

  .service-hero__icon {
    font-size: 1.5rem;
  }

  .service-hero__title {
    font-size: 2rem;
    font-weight: 700;
  }

  .service-hero__tagline {
    font-size: 1.25rem;
    margin-bottom: 2rem;
  }

  .service-hero__ctas {
    display: flex;
    gap: 1rem;
  }

  .service-section--alt {
    background: #f9f9f9;
  }

  .problem-solution {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    margin-bottom: 3rem;
  }

  .problem-solution__item h2 {
    color: var(--accent-color);
    margin-bottom: 1rem;
    font-size: 1.5rem;
  }

  @media (max-width: 768px) {
    .problem-solution {
      grid-template-columns: 1fr;
    }
  }

  .diferencial__list {
    list-style: none;
    padding: 0;
  }

  .diferencial__list li {
    padding: 0.75rem 0;
    padding-left: 2rem;
    position: relative;
  }

  .diferencial__list li:before {
    content: "✓";
    position: absolute;
    left: 0;
    color: var(--accent-color);
    font-weight: bold;
  }

  .service-cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .service-card {
    background: white;
    padding: 2rem;
    border-radius: 8px;
    border-top: 3px solid var(--accent-color);
    transition: transform 0.3s;
  }

  .service-card:hover {
    transform: translateY(-4px);
  }

  .results-list,
  .audience-list {
    list-style: none;
    padding: 0;
  }

  .results-list li,
  .audience-list li {
    padding: 1rem 0;
    padding-left: 2.5rem;
    position: relative;
    font-size: 1.1rem;
    line-height: 1.6;
  }

  .checkmark {
    position: absolute;
    left: 0;
    color: var(--accent-color);
    font-weight: bold;
    font-size: 1.25rem;
  }

  .process {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .process__step {
    background: white;
    padding: 1.5rem;
    border-left: 4px solid var(--accent-color);
    border-radius: 4px;
  }

  .process__timeline {
    text-align: center;
    font-size: 1.1rem;
    color: #666;
  }

  .testemunhal {
    background: white;
    padding: 3rem 2rem;
    border-radius: 8px;
    text-align: center;
  }

  .testemunhal__quote {
    font-size: 1.5rem;
    font-style: italic;
    margin-bottom: 1.5rem;
    color: var(--accent-color);
  }

  .testemunhal__meta {
    font-size: 0.95rem;
    color: #666;
  }

  .faq {
    max-width: 800px;
  }

  .faq__item {
    margin-bottom: 1rem;
    padding: 1.5rem;
    background: white;
    border-radius: 8px;
    cursor: pointer;
  }

  .faq__question {
    font-weight: 600;
    font-size: 1.1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .faq__answer {
    margin-top: 1rem;
    color: #666;
    line-height: 1.6;
  }

  .service-cta {
    text-align: center;
    padding: 4rem 2rem;
    background: linear-gradient(135deg, var(--accent-color), var(--accent-color-light));
    color: white;
    border-radius: 8px;
    margin-bottom: 4rem;
  }

  .btn {
    display: inline-block;
    padding: 0.75rem 2rem;
    border-radius: 4px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s;
    border: none;
    cursor: pointer;
  }

  .btn-primary {
    background: var(--accent-color);
    color: white;
  }

  .btn-primary:hover {
    opacity: 0.9;
    transform: translateY(-2px);
  }

  .btn-secondary {
    background: white;
    color: var(--accent-color);
  }

  .btn-secondary:hover {
    opacity: 0.9;
  }

  .btn-large {
    padding: 1rem 3rem;
    font-size: 1.1rem;
  }
</style>