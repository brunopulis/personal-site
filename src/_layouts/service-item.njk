---
layout: base
---

<section class="py-12 bg-linear-to-br from-red-900 overflow-hidden relative text-white to-red-950 via-red-800"
  id="hero">
  <div class="mx-auto max-md:px-6 max-w-7xl gap-2 grid items-center py-12">
    <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white leading-tight">{{ title }}</h1>
    <p class="text-lg text-white md:text-xl">{{ service.tagline }}</p>

    <div class="service-hero__ctas">
      <a href="/contato" class="text-white underline underline-offset-8 hover:no-underline">
        {{ service.cta.primary }}
      </a>
      <a href="#detalhes" class="text-white underline underline-offset-8 hover:no-underline">
        {{ service.cta.secondary }}
      </a>
    </div>
  </div>
</section>

<!-- O desafio -->
<section class="py-12">
  <div class="mx-auto max-w-7xl py-12">
    <div class="space-y-12">
      <div class="mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-blood-red-800 mb-6">O desafio</h2>
        <p class="text-lg text-gray-700 leading-relaxed">
          {{ service.problem | markdownify | safe }}
        </p>
      </div>

      <div>
        <h2 class="text-3xl md:text-4xl font-bold text-blood-red-800 mb-6">Minha Abordagem</h2>
        <p class="text-lg text-gray-700 leading-relaxed mb-6">
          {{ service.solution | markdownify | safe }}
        </p>

        <ul class="list-disc space-y-4 py-3">
          {% for differential in service.differentials %}
            <li class="flex gap-4 items-center text-gray-900">{{ differential }}</li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
</section>

<!-- O Que Você Recebe -->
<section class="py-12 bg-gray-50">
  <div class="mx-auto max-w-7xl">
    <h2 class="text-3xl md:text-4xl font-bold text-blood-red-800 mb-12">O que você recebe?</h2>

    <ul class="grid gap-6 md:grid-cols-2">
      {% for item in service.included %}
      <li class="font-semibold text-gray-900 mb-2 bg-white border border-gray-200 rounded-lg p-6 hover:shadow-lg transition flex items-start gap-4">
        {{ item }}
      </li>
      {% endfor %}
    </ul>
  </div>
</section>

<!-- Resultados Esperados -->
<section class="py-12">
  <div class="mx-auto max-w-7xl">
    <h2 class="text-3xl md:text-4xl font-bold text-blood-red-800 mb-12">Resultados Esperados</h2>

    <div class="grid gap-6 md:grid-cols-2">
      {% for result in service.results %}
        <div class="shrink-0 text-2xl">✓</div>
        <div>
          <h3 class="font-semibold text-gray-900">{{ result.title }}</h3>
          <p class="text-gray-600 text-sm">
            {{ result.description }}
          </p>
        </div>
    </div>
    {% endfor %}
  </div>
  </div>
</section>

<!-- Para Quem É -->
<section class="py-12 bg-gray-50">
  <div class="mx-auto max-w-7xl">
    <h2 class="text-3xl md:text-4xl font-bold text-blood-red-800 mb-12">Para quem é este serviço?</h2>

    <ul class="grid gap-6 md:grid-cols-2">
      {% for audience in service.target %}
      <li class="font-semibold text-gray-900 mb-2 bg-white border border-gray-200 rounded-lg p-6 hover:shadow-lg transition flex items-start gap-4">
          {{ audience }}
      </li>
      {% endfor %}
    </ul>
  </div>
</section>

<!-- Como Funciona -->
<section class="py-12">
  <div class="mx-auto max-w-7xl">
    <h2 class="text-3xl md:text-4xl font-bold text-blood-red-800 mb-12">Como Funciona</h2>
    <div class="grid gap-6 md:grid-cols-2">
      {% for process in service.processes %}
      <div class="flex gap-4 items-start">
        <div class="shrink-0 text-2xl">✓</div>
        <div>
          <h3 class="font-semibold text-gray-900">{{ process.title }}</h3>
          <p class="text-gray-600 text-sm">
            {{ process.description }}
          </p>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</section>

