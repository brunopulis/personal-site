---
layout: page
title: "Meus livros"
permalink: "/livros/index.html"
description: "Minha coleção de livros"
---

{% set booksByYear = collections.books | groupBy("attendedYear") %}
{% for year in booksByYear | sortKeys %}
<section class="flow" data-year="{{ year }}">
  <div class="region-header">
    <h2 class="title">Lidos em {{ year }}</h2>
    <p class="text-sm">{{ booksByYear[year] | length }} {{ "livros" if booksByYear[year] | length > 1 else "livro" }}
    </p>
  </div>

  <ul class="grid" role="list">
    {% for book in booksByYear[year] | sort(attribute="data.date") | reverse %}
    <li>
      <article>
        {% if book.data.cover %}
        <img src="{{ book.data.cover }}" alt="{{ book.data.title }}" class="img-fluid" height="270" loading="lazy"
          decoding="async" />
        {% endif %}

        <div class="flow">
          <h3>
            {% if book.data.url %}
            <a href="{{ book.data.url }}" target="_blank" rel="noopener noreferrer">
              {{ book.data.title }}
            </a>
            {% else %}
            {{ book.data.title }}
            {% endif %}
          </h3>
          {% if book.data.subtitle %}
          <p>{{ book.data.subtitle }}</p>
          {% endif %}
          {% if book.data.description %}
          <p>{{ book.data.description }}</p>
          {% endif %}
          {% if book.data.author %}
          <p>{{ book.data.author }}</p>
          {% endif %}
        </div>
      </article>
    </li>
    {% endfor %}
  </ul>
  <hr class="border-gray-700 mb-12" />
</section>
{% endfor %}