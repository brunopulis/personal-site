{% set allTalks = talks %}
{% set talksByYear = allTalks | groupBy("attendedYear") %}

{% for year in talksByYear | sortKeys %}
<section class="mb-20">
  <div class="flex items-baseline justify-between border-b border-border-dark pb-4 mb-8">
    <h2 class="text-3xl font-bold tracking-tight text-white">{{ year }}</h2>
    <p class="text-brand-gray-500 text-sm">
      {{ talksByYear[year] | length }} {{ "palestras" if talksByYear[year] | length > 1 else "palestra" }}
    </p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {% for talk in talksByYear[year] | sort(attribute="date") | reverse %}
    <article
      class="p-8 h-full bg-brand-dark-900 border border-brand-gray-200/30 rounded-xl flex flex-col justify-between hover:ring-2 hover:ring-brand-blue-500/50 transition-all">
      <div class="mb-4 flex items-center justify-between">
        {% lucide "presentation", { class: "w-4 h-4 text-brand-blue-500" } %}
        <time datetime="{{ talk.date }}" class="dt-published text-brand-blue-500 font-mono">{{ talk.date | formatDate("MMMM D, YYYY") }}</time>
      </div>
      <div class="flex-1">
        <h3 class="text-xl font-bold leading-tight text-white group-hover:text-primary transition-colors">
          {{ talk.title }}
        </h3>
      </div>

      <div class="mt-4 flex items-center gap-1.5 text-xs text-gray-500">
        {% if talk.location %}
          {% lucide "map-pin", { class: "w-4 h-4 text-brand-blue-500" } %}
        <p class="text-brand-blue-500">{{ talk.location }}</p>
        {% endif %}
      </div>

      <div class="mt-8 flex flex-wrap gap-3">
        {% if talk.slides %}
        <a href="{{ talk.slides }}" class="text-sm tracking-widest text-brand-blue-500 hover:text-brand-blue-600 border-b-2 border-transparent hover:border-brand-blue-500 transition-all duration-300">Slides</a>
        {% endif %}
        {% if talk.video %}
        <a href="{{ talk.video }}" class="text-sm tracking-widest text-brand-blue-500 hover:text-brand-blue-600 border-b-2 border-transparent hover:border-brand-blue-500 transition-all duration-300">Vídeo</a>
        {% endif %}
      </div>
    </article>
    {% endfor %}
</section>
{% endfor %}
<hr class="border-gray-700 mb-12" />