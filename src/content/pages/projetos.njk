<section class="section">
  <div class="container">
    <div class="row">
      <div class="col-12 text-center">
        <h2 class="section-title">Meus projetos</h2>
        <p>Projetos que mantenho</p>
      </div>
      {% for project in collections.projects %}
        <div class="col-md-4 mb-4 mb-md-0">
          <div class="card hover-shadow shadow">
            <div class="card-body text-center px-4 py-5">
              <h3 class="mb-4">{{ project.title }}</h3>
              <p>{{ project.description }}</p>
              <a href="{{ project.url }}" target="_blank" rel="noopener noreferrer">Ver projeto <span class="visually-hidden">{{ project.title }}</span></a>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
      
