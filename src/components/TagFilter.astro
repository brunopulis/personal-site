---
interface Props {
  allTags: string[];
}

const { allTags } = Astro.props;
---

<div class="filter-container">
  <h3>Tags</h3>
  <p class="tags-list">
    {
      allTags.map((tag) => (
        <a href={`/blog/tag/${tag.toLowerCase().replace(/\s+/g, '-')}`} class="tag-link">
          #{tag}
        </a>
      ))
    }
  </p>
</div>

<style>
  .tags-list {
    display: flex;
    gap: 0.5rem;
  }

  .tag-link {
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: all 0.2s ease;
    border-radius: 6px;
    padding: 1rem;
    color: #495057;
    font-weight: 500;
    text-decoration: none;
    text-transform: lowercase;
  }

  .tag-link:hover {
    color: #007bff;
    text-decoration: underline;
  }
</style>
