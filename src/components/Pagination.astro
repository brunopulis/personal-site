---
import { ArrowRight } from "@lucide/astro";

const { length, currentUrl, currentPage, firstUrl, prevUrl, nextUrl, lastUrl } =
  Astro.props;
const paginationList = Array.from({ length: `${length}` }, (_, i) => i + 1);
---

<nav aria-label="Blog pages" class=" inline-flex -space-x-px rounded-md shadow-xs">
  <ul>

  
  {
    firstUrl == currentUrl ? (
      <span class="pagination__link disabled">
        <i class="pi-angle-left" />
        <i class="pi-angle-left" />
      </span>
    ) : (
      <a
        href={firstUrl}
        class="flex h-10 w-10 items-center justify-center bg-blue-800 text-sm font-semibold text-white hover:bg-blue-600"
      >
        <i class="pi-angle-left" />
        <i class="pi-angle-left" />
      </a>
    )
  }

  {
    prevUrl ? (
      <a
        href={prevUrl}
        class="flex h-10 w-10 items-center justify-center bg-blue-800 text-sm font-semibold text-white hover:bg-blue-600"
      >
        <i class="pi-angle-left" />
      </a>
    ) : (
      <span class="pagination__link disabled">
        <i class="pi-angle-left" />
      </span>
    )
  }

  {
    paginationList.map(num => (
      <a
        href={`${firstUrl}${num == 1 ? "" : "/" + num}`}
        class={`pagination__link ${currentPage == num ? "disabled active" : ""}`}
      >
        {num}
      </a>
    ))
  }

  {
    !nextUrl ? (
      <span class="pagination__link disabled">
        <i class="pi-angle-right" />
      </span>
    ) : (
      <a
        href={nextUrl}
        class="flex h-10 w-10 items-center justify-center bg-blue-800 text-sm font-semibold text-white hover:bg-blue-600"
      >
        <i class="pi-angle-right" />
      </a>
    )
  }

  {
    lastUrl == currentUrl ? (
      <span class="pagination__link disabled">
        <i class="pi-angle-right" />
        <i class="pi-angle-right" />
      </span>
    ) : (
      <a
        href={lastUrl}
        class="flex h-10 w-10 items-center justify-center bg-red-900 text-sm font-semibold text-white hover:bg-red-950"
      >
        <ArrowRight class="h-10 w-10 bg-red-950" />
      </a>
    )
  }
  </ul>
</nav>
