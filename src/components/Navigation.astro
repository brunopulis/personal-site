---
import pulisLogo from '@assets/images/horizontal/blood.svg';
import type { Language, TranslationKey } from '@i18n/index';
import type { RouteKey } from '@i18n/routes';
import { getLocalizedPath, languages, useTranslations } from '@i18n/utils';
import { Image } from 'astro:assets';

interface Props {
  currentLang: Language;
  currentRoute?: RouteKey;
}

const { currentLang, currentRoute } = Astro.props;
const t = useTranslations(currentLang);

const navItems: Array<{ key: string; routeKey: RouteKey }> = [
  { key: 'nav.about', routeKey: 'about' },
  { key: 'nav.now', routeKey: 'now' },
  { key: 'nav.blog', routeKey: 'blog' },
  { key: 'nav.stream', routeKey: 'stream' },
  { key: 'nav.work', routeKey: 'work' },
  { key: 'nav.contact', routeKey: 'contact' },
  { key: 'nav.more', routeKey: 'more' },
];

function isActiveRoute(routeKey: RouteKey): boolean {
  return currentRoute === routeKey;
}

function getLanguageSwitchUrl(targetLang: Language): string {
  const routeKey = currentRoute || 'index';
  return getLocalizedPath(routeKey, targetLang);
}
---

<header class="header">
  <div class="header__wrapper">
    <!-- Logo -->
    <div class="header__logo">
      <a
        href={getLocalizedPath('index', currentLang)}
        class="header__logo-link"
        aria-label="Ir para página inicial"
      >
        <Image src={pulisLogo} class="w-auto" alt="Bruno Pulis" loading="eager" />
      </a>
    </div>

    <nav class="header__nav" aria-label="Main navigation">
      <ul class="header__list">
        {
          navItems.map(({ key, routeKey }) => {
            const isActive = isActiveRoute(routeKey);
            return (
              <li class="header__item">
                <a
                  href={getLocalizedPath(routeKey, currentLang)}
                  class={`header__link ${isActive ? 'header__link--active' : ''}`}
                  aria-current={isActive ? 'page' : undefined}
                >
                  {t(key as any)}
                </a>
              </li>
            );
          })
        }
      </ul>
    </nav>

    <!-- Seletor de Idioma -->
    <div class="header__language-switcher" aria-label="Selecione o idioma">
      {
        Object.entries(languages).map(([langCode, langData]) => (
          <a
            href={getLanguageSwitchUrl(langCode as Language)}
            class={`header__lang-link ${
              currentLang === langCode ? 'header__lang-link--active' : ''
            }`}
            aria-label={`Switch to ${langData.label}`}
            aria-current={currentLang === langCode ? 'language' : undefined}
          >
            {langCode.toUpperCase()}
          </a>
        ))
      }
    </div>
  </div>
</header>

<style>
  .header__wrapper {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 2rem;
    margin: 0 auto;
    width: 100%;
    max-width: 1200px;
  }

  /* Logo */

  /* Navegação */
  .header__nav {
    flex: 1;
  }

  .header__list {
    display: flex;
    gap: 0.5rem;
    list-style: none;
  }

  .header__item {
    margin: 0;
  }

  .header__link {
    display: inline-block;
    position: relative;
    transition: all 0.3s;
    border-radius: 0.375rem;
    padding: 0.5rem 1rem;
    color: var(--color-errie-black-900, #0a0e27);
    font-weight: 500;
    text-decoration: none;
  }

  .header__link:hover {
    background-color: rgba(139, 0, 0, 0.05);
    color: var(--color-blood-red-800, #8b0000);
  }

  .header__link:focus-visible {
    outline: 2px solid var(--color-blood-red-800, #8b0000);
    outline-offset: 2px;
  }

  .header__link--active {
    border-bottom: 2px solid var(--color-blood-red-800, #8b0000);
    color: var(--color-blood-red-800, #8b0000);
    font-weight: 600;
  }

  /* Seletor de Idioma */
  .header__language-switcher {
    display: flex;
    flex-shrink: 0;
    gap: 0.5rem;
    border-left: 1px solid rgba(0, 0, 0, 0.1);
    padding-left: 1.5rem;
  }

  .header__lang-link {
    display: inline-flex;
    justify-content: center;
    align-items: center;
    transition: all 0.3s;
    border: 1px solid transparent;
    border-radius: 0.375rem;
    background-color: transparent;
    padding: 0 0.75rem;
    min-width: 2.5rem;
    height: 2.5rem;
    color: var(--color-errie-black-900, #0a0e27);
    font-weight: 600;
    font-size: 0.875rem;
    text-decoration: none;
  }

  .header__lang-link:hover {
    background-color: rgba(0, 0, 0, 0.05);
    color: var(--color-blood-red-800, #8b0000);
  }

  .header__lang-link:focus-visible {
    outline: 2px solid var(--color-blood-red-800, #8b0000);
    outline-offset: 2px;
  }

  .header__lang-link--active {
    border-color: var(--color-blood-red-800, #8b0000);
    background-color: var(--color-blood-red-800, #8b0000);
    color: white;
  }

  /* Responsivo */
  @media (max-width: 768px) {
    .header__wrapper {
      gap: 1rem;
      padding: 1rem;
    }

    .header__list {
      flex-wrap: wrap;
      gap: 0.25rem;
    }

    .header__link {
      padding: 0.375rem 0.75rem;
      font-size: 0.95rem;
    }
  }

  @media (max-width: 640px) {
    .header__wrapper {
      flex-direction: column;
      align-items: stretch;
    }

    .header__nav {
      order: 2;
    }

    .header__list {
      flex-direction: column;
    }

    .header__language-switcher {
      order: 3;
      margin-top: 1rem;
      border-top: 1px solid rgba(0, 0, 0, 0.1);
      border-left: none;
      padding: 1rem 0 0 0;
    }
  }
</style>
