---
import { talks } from "@data/talks.json";

// Validar se talks é um array antes de filtrar
const talksList = Array.isArray(talks) ? talks : [];

// Separar palestras futuras e passadas com validação
const upcomingTalks = talksList
	.filter((talk) => talk?.isUpcoming)
	.sort((a, b) => new Date(a.date).getTime() - new Date(b.date).getTime());

const pastTalks = talksList
	.filter((talk) => !talk?.isUpcoming)
	.sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime());

// Função para formatar data
const formatDate = (date: string) => {
	return new Date(date).toLocaleDateString("pt-BR", {
		year: "numeric",
		month: "long",
		day: "numeric",
	});
};
---

<section id="talks">
  <div>
    <div>
      <h2>Palestras</h2>
      <p>
        Descubra minhas palestras anteriores e futuras sobre acessibilidade da Web, desenvolvimento front-end e
        qualidade de software.
      </p>
    </div>

    {/* Upcoming Talks */}
    <div class="mb-16">
      <h3 class="mb-8 text-2xl font-bold text-red-950">Próximas Palestras</h3>
      {
        upcomingTalks.length > 0 ? (
          <ul class="list-disc">
            {upcomingTalks.map((talk) => (
              <li class="mb-6 flex list-inside flex-col">
                <h4 class="mb-2 line-clamp-2 text-xl font-semibold">{talk.title}</h4>
                <p class="mb-4 line-clamp-3 text-gray-900">{talk.description}</p>
                <div class="mb-2 flex items-center text-gray-500">
                  <time class="text-sm">{formatDate(talk.date)}</time>
                </div>
                <div class="flex items-center text-gray-500">
                  <span class="text-sm">{talk.location}</span>
                </div>
              </li>
            ))}
          </ul>
        ) : (
          <div class="mb-16">
            <div class="">
              <h3 class="mb-4 text-2xl font-bold text-gray-900">Sem palestras agendadas</h3>
              <p class="mb-6 text-gray-900">
                No momento não existem palestras agendadas. Gostaria de me convidar para falar no seu evento?
              </p>
              <a
                href="/contact/?subject=Quero uma palestra"
                class="text-blood-red inline-flex items-center font-medium underline transition-colors"
              >
                Agendar palestra
              </a>
            </div>
          </div>
        )
      }
    </div>

    {/* Past Talks */}
    {
      pastTalks.length > 0 && (
        <div>
          <h3 class="mb-8 text-2xl font-bold text-red-950">Palestras Anteriores</h3>
          <ul class="list-disc">
            {pastTalks.map((talk) => (
              <li class="mb-6 flex list-inside flex-col">
                <h4 class="mb-2 line-clamp-2 text-xl font-semibold">{talk.title}</h4>
                <div class="mb-2 flex items-center text-gray-800">
                  <time class="text-sm">{talk.date}</time>
                </div>
                <div class="flex items-center text-gray-800">
                  <span class="text-sm">{talk.location}</span>
                </div>
              </li>
            ))}
          </ul>
        </div>
      )
    }
  </div>
</section>

<style>
  /* Opcional: Adicionar estilos para fallback de imagem */
  img {
    background-color: #f3f4f6;
  }
</style>
