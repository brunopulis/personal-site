---
import { ArrowRight, CheckCircle, Clock, Target } from "@lucide/astro";

interface ServiceCard {
	id: string;
	title: string;
	tagline: string;
	description: string;
	duracao: string;
	investimento: string;
	badge?: string;
	deliveries: string[];
	link: string;
	linkText: string;
}

const {
	id,
	title,
	tagline,
	description,
	duration,
	investiment,
	badge,
	deliveries = [],
	link,
	linkText = "Saiba mais",
} = Astro.props;
---

<article class="rounded-2xl border-2 border-gray-200 bg-white p-8 shadow-sm transition hover:shadow-xl">
  <div class="mb-6 flex items-start gap-4">
    <div class="flex-1">
      <span class="rounded-full bg-green-100 px-3 py-1 text-xs font-bold text-green-700">
        {badge}
      </span>
      <h3 class="mt-2 mb-1 text-2xl font-bold text-gray-900">{title}</h3>
      <p class="text-base text-gray-600 italic">{tagline}</p>
    </div>
  </div>

  <p class="mb-6 leading-relaxed text-gray-700">{description}</p>
  <div class="mb-6 flex flex-wrap gap-4 border-b border-gray-200 pb-6 text-sm text-gray-600">
    <div class="flex items-center gap-2">
      <Clock class="h-4 w-4" aria-hidden="true" />
      <span>{duration}</span>
    </div>
    <div class="flex items-center gap-2">
      <Target class="h-4 w-4" aria-hidden="true"/>
      <span>{investiment}</span>
    </div>
  </div>

  <div class="mb-6">
    <h4 class="mb-3 text-sm font-bold tracking-wide text-gray-900">O que vocÃª recebe</h4>
    <ul class="space-y-2">
      {
        servico.oqueinclui.slice(0, 4).map((item, i) => (
          <li key={i} class="flex items-start gap-2">
            <CheckCircle class="mt-0.5 h-4 w-4 flex-shrink-0 text-green-600" aria-hidden="true" />
            <span class="text-sm text-gray-700">{item}</span>
          </li>
        ))
      }
    </ul>
  </div>

  <div class="flex">
    <a
      href={servico.url}
      class="text-blood-red-800 text-sm font-semibold transition hover:underline hover:underline-offset-8"
    >
      Saiba mais
      <ArrowRight class="ml-2 inline-block h-5 w-5" aria-hidden="true" />
    </a>
  </div>
</article>
