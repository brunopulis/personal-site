---
import { Users, Briefcase, Award, Globe, ShieldCheck, Lightbulb } from '@lucide/astro'

const iconComponents = {
	Users,
	Briefcase,
	Award,
	Globe,
	ShieldCheck,
	Lightbulb
}

const benefits = [
	{
		icon: 'Users',
		title: 'Inclusão Total',
		description:
			'Garanta que todas as pessoas, independentemente de suas habilidades, possam acessar suas informações.'
	},
	{
		icon: 'Briefcase',
		title: 'Conformidade Legal',
		description:
			'Evite riscos legais e multas ao garantir que seus documentos sigam as normas de acessibilidade.'
	},
	{
		icon: 'Award',
		title: 'Melhoria da Reputação',
		description:
			'Demonstre compromisso com a diversidade e inclusão, fortalecendo a imagem da sua marca.'
	},
	{
		icon: 'Globe',
		title: 'Alcance Ampliado',
		description:
			'Expanda seu público potencial incluindo os mais de 45 milhões de brasileiros com alguma deficiência.'
	},
	{
		icon: 'ShieldCheck',
		title: 'Qualidade Garantida',
		description:
			'Nossos especialistas revisam cada documento para garantir o cumprimento total das diretrizes WCAG.'
	},
	{
		icon: 'Lightbulb',
		title: 'Melhor Usabilidade',
		description:
			'Documentos acessíveis são mais organizados e fáceis de usar para todos os usuários.'
	}
]
---

<section id="benefits" class="bg-gray-100 py-16">
	<div class="container mx-auto px-4">
		<div class="mb-16 text-center">
			<h2 class="mb-4 text-3xl font-bold text-gray-800 md:text-4xl">
				Benefícios da Remediação de Documentos
			</h2>
			<p class="mx-auto max-w-3xl text-xl text-gray-600">
				Tornar seus documentos acessíveis traz inúmeras vantagens para sua organização e para a
				sociedade como um todo.
			</p>
		</div>

		<div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
			{
				benefits.map((benefit) => {
          const IconComponent = iconComponents[benefit.icon]

					return (
			<div class="bg-white rounded-lg p-6 shadow-md hover:shadow-lg transition-shadow duration-300">
			  <div class="flex items-start">
				<IconComponent
				  aria-hidden="true"
				  class="h-9 w-9 text-teal-600 flex-shrink-0 mr-4 text-center dark:text-teal-400"
				/>
				<div>
				  <h3 class="text-xl font-bold mb-2 text-gray-800">{benefit.title}</h3>
				  <p class="text-gray-600">{benefit.description}</p>
				</div>
			  </div>
					  </div>
          )
        })
      }
		</div>

		<div class="mt-16 text-center">
			<a
				href="#calculator"
				class="inline-block rounded-md bg-teal-600 px-8 py-3 font-medium text-white transition-colors duration-300 hover:bg-teal-700"
			>
				Calcular Seu Orçamento
			</a>
		</div>
	</div>
</section>
