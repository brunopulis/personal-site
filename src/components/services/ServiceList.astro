---
import { CheckCircle } from "@lucide/astro";

const services = [
	{
		icon: "Presentation",
		color: "green",
		title: "Palestras e Workshops",
		url: "/services/speaking",
		description:
			"Compartilhando conhecimento sobre acessibilidade digital e desenvolvimento inclusivo.",
		features: [
			"Eventos corporativos",
			"Conferências técnicas",
			"Workshops práticos",
			"Treinamentos in-company",
		],
		image:
			"https://images.unsplash.com/photo-1475721027785-f74eccf877e2?auto=format&fit=crop&q=80",
	},
	{
		icon: "Users2", // Corrigido de User2 para Users2
		color: "purple",
		title: "Consultoria em Acessibilidade",
		url: "/services/consulting",
		description:
			"Avaliação e orientação para tornar seu site ou aplicação mais acessível.",
		features: [
			"Auditoria de acessibilidade",
			"Testes web e mobile",
			"Correções de bugs",
			"Testes e remediação de documentos",
		],
		image:
			"https://images.unsplash.com/photo-1517245386807-bb43f82c33c4?auto=format&fit=crop&q=80",
	},
	{
		icon: "Code2",
		color: "green",
		title: "Desenvolvimento Acessível",
		url: "/services/development",
		description:
			"Criação de sites e aplicações web seguindo as diretrizes WCAG e melhores práticas de acessibilidade.",
		features: [
			"HTML semântico e estruturado",
			"Suporte a leitores de tela",
			"Design responsivo e adaptável",
			"Testes de acessibilidade",
		],
		image:
			"https://images.unsplash.com/photo-1461749280684-dccba630e2f6?auto=format&fit=crop&q=80",
	},
];
---

<section class="py-20">
  <div class="container-custom mx-auto px-4">
		<div class="mb-16 text-center"> 
			<h2 class="text-errie-black-900 mb-4 text-4xl font-bold" id="packages-section">
				Pacotes de Auditoria
				</h2> <p class="text-errie-black-900 text-xl">
				Precisa de uma auditoria? Veja os pacotes prontos
				</p>
		</div>
    <div class="grid gap-4 md:grid-cols-3">
      {
        services.map((service) => {
          return (
            <div class="card border border-gray-200 p-6 dark:border-gray-700">
              <h3 class="mb-2 text-xl font-semibold text-gray-900 dark:text-white">
                <a href={service.url} class="text-gray-900 underline-offset-8 hover:underline dark:text-white">
                  {service.title}
                </a>
              </h3>
              <p class="mb-6 text-gray-600 dark:text-gray-300">{service.description}</p>
              <ul class="space-y-3">
                {service.features.map((feature) => (
                  <li class="flex items-center gap-3">
                    <CheckCircle class="h-5 w-5 shrink-0 text-green-500" aria-hidden="true" />
                    <span class="text-gray-700 dark:text-gray-300">{feature}</span>
                  </li>
                ))}
              </ul>
            </div>
          )
        })
      }
    </div>
  </div>
</section>
