---
const { currentLocale } = Astro;
const currentPath = Astro.url.pathname.replace(`/${currentLocale}`, '').replace(/^\//, '') || '';

const languages = {
  pt: 'PortuguÃªs',
  en: 'English',
};
---

<div class="language-picker">
  {
    Object.entries(languages).map(([lang, label]) => (
      <a
        href={lang === 'pt' ? `/${currentPath}` : `/${lang}/${currentPath}`}
        class={currentLocale === lang ? 'active' : ''}
        aria-label={`Switch to ${label}`}
      >
        {label}
      </a>
    ))
  }
</div>

<style>
  .language-picker {
    display: flex;
    gap: 1rem;
  }

  .language-picker a {
    transition: background-color 0.2s;
    border-radius: 4px;
    padding: 0.5rem 1rem;
    color: #333;
    text-decoration: none;
  }

  .language-picker a:hover {
    background-color: #f0f0f0;
  }

  .language-picker a.active {
    background-color: #007bff;
    color: white;
  }
</style>
