---
import { ArrowRight } from '@lucide/astro';

interface Props {
  url: string;
  text: string;
}

const { text, url } = Astro.props;

---

<div class="mt-16 text-center">
  <a
    href={url}
    class="btn-primary bg-brand-950 text-white hover:bg-brand-950/90"
  >
    {text}
    <ArrowRight class="w-5 h-5 ml-2" />
  </a>
</div>
