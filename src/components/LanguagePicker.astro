---
const { currentLocale } = Astro;
const currentPath = Astro.url.pathname.replace(`/${currentLocale}`, '').replace(/^\//, '') || '';

const languages = {
  'pt': 'PortuguÃªs',
  'en': 'English',
};
---

<div class="language-picker">
  {Object.entries(languages).map(([lang, label]) => (
    <a 
      href={lang === 'pt' ? `/${currentPath}` : `/${lang}/${currentPath}`}
      class={currentLocale === lang ? 'active' : ''}
      aria-label={`Switch to ${label}`}
    >
      {label}
    </a>
  ))}
</div>

<style>
  .language-picker {
    display: flex;
    gap: 1rem;
  }
  
  .language-picker a {
    padding: 0.5rem 1rem;
    text-decoration: none;
    color: #333;
    border-radius: 4px;
    transition: background-color 0.2s;
  }
  
  .language-picker a:hover {
    background-color: #f0f0f0;
  }
  
  .language-picker a.active {
    background-color: #007bff;
    color: white;
  }
</style>
