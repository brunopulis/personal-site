---
import { SUPPORT_PLATFORMS, SUPPORT_REASONS } from '@data/support-plataforms';

interface Props {
  t: (key: string) => string;
}
const { t } = Astro.props;
---

<div class="support-section">
  <div class="support-grid">
    {
      SUPPORT_PLATFORMS.map((platform) => (
        <a href={platform.url} class="support-card" data-platform={platform.id}>
          <div class="card-icon">{platform.icon}</div>
          <h3 class="card-title">{t(`support.platforms.${platform.id}.name`)}</h3>
          <p class="card-desc">{t(`support.platforms.${platform.id}.desc`)}</p>
        </a>
      ))
    }
  </div>

  <div class="info-box">
    <h2 class="info-title title">{t('support.why-title')}</h2>
    <ul class="reasons-list" role="list">
      {SUPPORT_REASONS.map((reason) => <li>{t(`support.reasons.${reason}`)}</li>)}
    </ul>
  </div>
</div>

<style>
  .support-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
  }

  .support-card {
    transition: all 0.2s;
    border: 1px solid #e0e0e0;
    border-radius: 0.5rem;
    padding: 1.5rem;
    color: inherit;
    text-decoration: none;
  }

  .support-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
  }

  .support-card[data-platform='liberapay'] {
    border-left: 4px solid #f1a50e;
  }

  .support-card[data-platform='kofi'] {
    border-left: 4px solid #13c3ff;
  }

  .support-card[data-platform='pix'] {
    border-left: 4px solid #1f71b8;
  }

  .support-card[data-platform='paypal'] {
    border-left: 4px solid #003087;
  }

  .card-icon {
    margin-bottom: 0.5rem;
    font-size: 2rem;
  }

  .card-title {
    margin-bottom: 0.5rem;
    font-weight: 700;
    font-size: 1.25rem;
  }

  .card-desc {
    color: #666;
    font-size: 0.875rem;
  }

  .info-title {
    margin-bottom: 1rem;
    font-weight: 700;
    font-size: 1.25rem;
  }

  .reasons-list {
    list-style: none;
  }

  .reasons-list li {
    display: flex;
    gap: 1rem;
  }
</style>
