import FileTreeItem from './FileTreeItem.astro';

const { lang = 'pt-br' } = Astro.props;

const COLLAPSE_SECTIONS = ['blog', 'produtos', 'loja'];

// 2. BUSCAR ARQUIVOS
const staticFiles = import.meta.glob('../pages/**/*.{astro,md,mdx,html}');

// 3. PROCESSAR E FILTRAR URLs
const filteredUrls = Object.keys(staticFiles)
  .filter((path) => {
    const isDynamic = path.includes('[');
    const isSelf = path.includes('sitemap') || path.includes('mapa-do-site'); // Evita listar a pr칩pria p치gina de mapa
    const isPrivate = path.split('/').some((p) => p.startsWith('_'));
    return !isDynamic && !isSelf && !isPrivate;
  })
  .map((path) => {
    // Limpa caminho: ../pages/en/about.astro -> /en/about
    let url =
      path
        .replace(/^\.\.\/pages/, '')
        .replace(/\.(astro|md|mdx|html)$/, '')
        .replace(/\/index$/, '') || '/';

    return { url, name: url.split('/').pop() || 'home' };
  })
  .filter((item) => {
    // FILTRO DE IDIOMA
    const isEnglishUrl = item.url.startsWith('/en');

    if (lang === 'pt') {
      // Se quero PT, excluo URLs que come칞am com /en
      return !isEnglishUrl;
    } else {
      // Se quero EN, s칩 aceito URLs que come칞am com /en
      return isEnglishUrl;
    }
  })
  .filter((item) => {
    // FILTRO DE SUBITENS (COLLAPSE)
    for (const section of COLLAPSE_SECTIONS) {
      // Verifica se 칠 subitem de se칞칚o colapsada (ex: /blog/post-1)
      // O regex garante que pegamos /blog/algo mas n칚o o /blog raiz
      if (item.url.includes(`/${section}/`)) return false;
    }
    return true;
  });

// 4. MONTAR 츼RVORE
function buildTree(urls) {
  // Define a raiz baseada no idioma
  const rootUrl = lang === 'en' ? '/en' : '/';
  const rootName = lang === 'en' ? '/en (home)' : '/ (in칤cio)';

  const root = { name: 'root', children: [], url: rootUrl };

  urls.sort((a, b) => a.url.localeCompare(b.url));

  urls.forEach(({ url, name }) => {
    if (url === rootUrl) return; // Pula a raiz pois j치 definimos manualmente

    // Remove a raiz do caminho para processar a 치rvore
    // Ex: /en/about -> about
    const relativePath = url.replace(rootUrl === '/' ? /^\// : '/en/', '');
    const parts = relativePath.split('/').filter(Boolean);

    let currentLevel = root;

    parts.forEach((part, index) => {
      const isLast = index === parts.length - 1;
      let existingPath = currentLevel.children.find(
        (child) => child.name === part
      );

      if (existingPath) {
        currentLevel = existingPath;
        if (isLast) existingPath.url = url;
      } else {
        const newPart = {
          name: isLast ? name : part,
          url: isLast ? url : null,
          children: [],
        };
        currentLevel.children.push(newPart);
        currentLevel = newPart;
      }
    });
  });
  return root;
}

const tree = buildTree(filteredUrls);
---

