  <ul>
    <li class="root-item">
      <span class="icon">游</span>
      <a href={lang === 'en' ? '/en' : '/'}>
        {lang === 'en' ? '/en (root)' : '/ (raiz)'}
      </a>
      <ul>
        {tree.children.map((item) => <FileTreeItem item={item} />)}
      </ul>
    </li>
  </ul>
</div>

