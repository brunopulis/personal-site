---
import { Icon } from "astro-icon/components";
---
<section id="contact" class="section bg-gray-50 dark:bg-gray-800/50">
  <div class="container px-5 mx-auto">
    <div class="grid md:grid-cols-2 gap-12">
      <div class="slide-up">
          <div class="card p-6 border border-gray-200 dark:border-gray-700">
          <h3 class="text-xl font-semibold mb-6 text-gray-900 dark:text-white">Envie sua mensagem</h3>

          <form x-data="{ name: '', email: '', message: '', submitted: false, errors: {} }">
            <div class="mb-4">
              <label for="name" class="block text-sm font-bold cursor-pointer  text-gray-700 dark:text-gray-300 mb-1">Nome</label>
              <input
                type="text"
                id="name"
                x-model="name"
                class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:outline-hidden focus:ring-2 focus:ring-primary-500 dark:focus:ring-primary-400"
                placeholder="Seu nome"
              />
              <p class="text-red-500 text-sm mt-1" x-show="errors.name" x-text="errors.name"></p>
            </div>

            <div class="mb-4">
              <label for="contact-email" class="block text-sm font-bold cursor-pointer   text-gray-700 dark:text-gray-300 mb-1">Email</label>
              <input
                type="email"
                id="contact-email"
                x-model="email"
                class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:outline-hidden focus:ring-2 focus:ring-primary-500 dark:focus:ring-primary-400"
                placeholder="Your email"
              />
              <p class="text-red-500 text-sm mt-1" x-show="errors.email" x-text="errors.email"></p>
            </div>

            <div class="mb-4">
              <label for="contact-subject" class="block text-sm font-bold cursor-pointer   text-gray-700 dark:text-gray-300 mb-1">Assunto</label>
              <input
                type="text"
                id="contact-subject"
                name="contact-subject"
                x-model="subject"
                class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:outline-hidden focus:ring-2 focus:ring-primary-500 dark:focus:ring-primary-400"
                placeholder="Seu assunto"
              />
              <p class="text-red-500 text-sm mt-1" x-show="errors.subject" x-text="errors.subject"></p>
            </div>

            <div class="mb-6">
              <label for="message" class="block text-sm font-bold cursor-pointer text-gray-700 dark:text-gray-300 mb-1">Mensagem</label>
              <textarea
                id="message"
                x-model="message"
                rows="5"
                class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:outline-hidden focus:ring-2 focus:ring-primary-500 dark:focus:ring-primary-400"
                placeholder="Your message"
              ></textarea>
              <p class="text-red-500 text-sm mt-1" x-show="errors.message" x-text="errors.message"></p>
            </div>

            <div x-show="!submitted">
              <button
                type="submit"
                class="w-full btn-primary"
                x-on:click.prevent="
                  errors = {};
                  if (!name) errors.name = 'Por favor, insira seu nome';
                  else if (name.length < 3) errors.name = 'Seu nome deve ter pelo menos 3 caracteres';
                  if (!email) errors.email = 'Por favor, insira seu email';
                  else if (!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email)) errors.email = 'Por favor, informe um e-mail vÃ¡lido';
                  if (!message) errors.message = 'Por favor, informe sua mensagem';
                  if (Object.keys(errors).length === 0) {
                    submitted = true;
                  }
                "
              >
                Enviar
              </button>
            </div>

            <div class="text-center p-6 bg-primary-50 dark:bg-primary-900/30 rounded-lg" x-show="submitted" x-cloak>
              <svg class="w-12 h-12 text-primary-500 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">Message Sent!</h3>
              <p class="text-gray-600 dark:text-gray-300">
                Thank you for reaching out. We'll get back to you as soon as possible.
              </p>
            </div>
          </form>
        </div>
      </div>

      <div class="slide-up" style="animation-delay: 150ms">
      
      </div>
    </div>
  </div>
</section>