---
import { Image } from 'astro:assets'
import { ExternalLink, ArrowRight } from '@lucide/astro'

import magraDeVerdade from '@/assets/images/projects/magra-de-verdade.webp'
import bibliotecaDaRevolucao from '@/assets/images/projects/biblioteca-da-revolucao.webp'
import henriqueNoal from '@/assets/images/projects/henrique-noal.webp'

const projectsData = {
  projects: [
    {
      title: 'Magra de Verdade',
      description:
        'Tornei esta página de vendas totalmente acessível, permitindo que pessoas com deficiência visual pudessem conhecer o produto.',
      tags: ['WordPress', 'Elementor', 'WCAG AA'],
      image: magraDeVerdade,
      url: 'https://magradeverdade.com/',
    },
    {
      title: 'Biblioteca da Revolução',
      description: 'Redesign completo focando em leitores de tela e navegação simplificada para um público diverso.',
      tags: ['WordPress', 'A11y', 'Design'],
      image: bibliotecaDaRevolucao,
      url: 'https://bibliotecadarevolucao.com.br/',
    },
    {
      title: 'Henrique Noal',
      description: 'Landing page moderna com performance e acessibilidade desde o início do projeto.',
      tags: ['Astro', 'Tailwind', 'A11y'],
      image: henriqueNoal,
      url: 'https://henriquenoal.com.br/',
    },
  ],
}

const projects = projectsData.projects
---

<section id="projetos" class="bg-gray-900 py-24 text-white">
  <div class="mx-auto max-w-6xl px-6">
    <div class="mb-16 text-center">
      <h2 class="mb-4 text-4xl font-bold">Projetos recentes</h2>
      <p class="text-xl text-white">Cada um com uma história e um impacto real</p>
    </div>

    <div class="grid gap-8 md:grid-cols-3">
      {
        projects.map((project) => (
          <div class="group cursor-pointer overflow-hidden rounded-2xl bg-gray-800 transition hover:scale-105 hover:transform">
            <div class="relative overflow-hidden">
              <Image
                src={project.image}
                alt={project.title}
                class="h-48 w-full object-cover transition duration-300 group-hover:scale-110"
                loading="lazy"
              />
            </div>
            <div class="p-6">
              <h3 class="mb-3 text-2xl font-bold">{project.title}</h3>
              <p class="mb-4 text-white">{project.description}</p>
              <div class="mb-4 flex flex-wrap gap-2">
                {project.tags.map((tag, count) => (
                  <span class="rounded-full bg-gray-700 px-3 py-1 text-xs text-white">{tag}</span>
                ))}
              </div>
              <a
                href="#"
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center gap-2 font-semibold text-white transition-all group-hover:gap-3"
              >
                Ver projeto completo
                <ExternalLink class="h-4 w-4" aria-hidden="true" />
              </a>
            </div>
          </div>
        ))
      }
    </div>

    <div class="mt-12 text-center">
      <a
        href="/projetos"
        class="inline-flex items-center gap-2 rounded-lg bg-white px-6 py-3 font-semibold text-gray-900 transition hover:bg-gray-100"
      >
        Ver todos os projetos
        <ArrowRight class="h-4 w-4" aria-hidden="true" />
      </a>
    </div>
  </div>
</section>
