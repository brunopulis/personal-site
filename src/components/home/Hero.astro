---
import me from '@assets/images/me.jpeg';
import type { Language, RouteKey } from '@i18n/index';
import { Image } from 'astro:assets';

interface Props {
  t: (key: string) => string;
  currentLang: Language;
  getLocalizedPath: (routeKey: RouteKey, lang: Language) => string;
}

const { t, currentLang, getLocalizedPath } = Astro.props;
---

<section class="hero" id="hero" aria-labelledby="hero-section">
  <div class="wrapper">
    <div data-layout="50-50" class="grid">
      <div class="hero__content">
        <h1 class="hero__title" id="hero-section" set:html={t('home.greetings')} />
        <p>{t('home.about_me')}</p>
        <p set:html={t('home.objective')} />

        <ul class="hero__list" role="list">
          <li class="hero__item">
            <a href={getLocalizedPath('about', currentLang)} class="hero__link">
              {t('home.about_link')}
            </a>
          </li>
          <li class="hero__item">
            <a href={getLocalizedPath('now', currentLang)} class="hero__link">
              {t('home.about_now')}
            </a>
          </li>
        </ul>
      </div>
      <figure>
        <Image
          src={me}
          alt="Bruno Pulis"
          class="u-photo mx-auto h-80 w-80 rounded-2xl border-4 border-white/20 object-cover shadow-2xl"
          loading="eager"
        />
      </figure>
    </div>
  </div>
</section>
