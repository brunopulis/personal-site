---
import { testimonials } from '@/data/testimonials.json';
---

<section class="bg-white px-6 py-20 lg:px-20" id="testimonials">
  <div class="mx-auto max-w-6xl">
    <div class="mx-auto mb-16 max-w-3xl text-center">
      <span
        class="bg-blood-red-800 text-white mb-4 inline-block rounded-full px-4 py-1 text-sm font-medium"
      >
        Depoimentos
      </span>
      <h2 class="mb-6 text-2xl text-errie-black-900 font-bold" aria-labelledby="testimonials">O que dizem sobre meu trabalho</h2>
      <p class="text-errie-black-700 mx-auto text-lg leading-relaxed">
        Feedback de clientes e parceiros que trabalharam comigo em projetos transformadores.
      </p>
    </div>

    <div class="grid gap-8 md:grid-cols-3">
      {
        testimonials.slice(-6).map((testimonial, index) => (
          <div
            class="flex flex-col gap-6 rounded-xl border-0 bg-gray-50 p-8 text-center shadow-sm transition-shadow hover:shadow-lg slide-up  border-gray-200"
            style={`animation-delay: ${index * 150}ms`}
          >
            <div class="mb-6">
              {[...Array(5)].map(() => (
                <svg
                  class="text-warning-400 inline-block h-5 w-5"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>

            <blockquote class="mb-6 text-errie-black-900 italic">
              "{testimonial.content}"
            </blockquote>

            <div class="flex items-center justify-center">
              <div>
                <p class="font-semibold text-blood-red-800">
                  {testimonial.author}
                </p>
                <p class="text-sm text-errie-black-900">
                  {testimonial.position}
                </p>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
