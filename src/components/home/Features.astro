---
import { ArrowRight } from "@lucide/astro";

const features = [
  {
    title: "Mentoria",
    description:
      "Não adianta só entregar um relatório. Eu trabalho com você ou sua equipe para implementar acessibilidade de verdade no dia a dia.",
    url: "/servicos/mentoria",
  },
  {
    title: "Auditoria",
    description:
      "Analiso seu site ou documento e te mostro exatamente o que precisa melhorar (e por quê isso importa para seus usuários).",
    url: "/servicos/auditoria-de-acessibilidade",
  },
  {
    title: "Palestras",
    description:
      "Levo acessibilidade para empresas e eventos de forma prática, sem jargões complicados.",
    url: "/servicos/palestras",
  },
];
---

<section class="py-24">
  <div class="max-w-6xl mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-bold text-gray-900 mb-4">Como posso te ajudar</h2>
      <p class="text-xl text-errie-black-600">Três formas principais de trabalharmos juntos</p>
    </div>

    <div class="grid md:grid-cols-3 gap-8">
      {
        features.map(feature => (
          <article class="bg-gray-50 p-8 rounded-2xl shadow-sm hover:shadow-xl transition group">
            <div class="flex items-center gap-3 mb-4">
              <h3 class="text-2xl font-bold text-gray-900">{feature.title}</h3>
            </div>
            <p class="text-errie-black-900 mb-4">{feature.description}</p>
            <a
              href={feature.url}
              aria-label={`Saber mais sobre: ${feature.title}`}
              class="text-blood-red-800 font-semibold flex items-center gap-2 group-hover:gap-3 transition-all"
            >
              Saber mais
              <ArrowRight class="w-4 h-4" aria-hidden="true" />
            </a>
          </article>
        ))
      }
    </div>

    <div class="text-center pt-8">
      <a
        href="/servicos"
        class="inline-flex items-center gap-2 font-semibold text-blood-red-800 hover:underline"
      >
        Explorar todos os serviços
        <ArrowRight class="h-4 w-4" aria-hidden="true" />
      </a>
    </div>
  </div>
</section>
