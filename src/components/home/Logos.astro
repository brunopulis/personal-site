---
import { Image } from 'astro:assets'

import laraBrenner from '@/assets/clients/lara-brenner.svg'
import reponto from '@/assets/clients/reponto.svg'
import mariaInclusiva from '@/assets/clients/maria-inclusiva.svg'
import elleven from '@/assets/clients/elleven.svg';
import una from '@/assets/clients/una.svg';
import uniBh from '@/assets/clients/uni-bh.svg';
import estacio from '@/assets/clients/estacio.svg';
import cotemig from '@/assets/clients/cotemig.svg';
---

<section class="py-12">
  <div class="max-w-screen-xl flex flex-wrap items-center justify-center mx-auto">
    <h2 class="block antialiased tracking-normal font-semibold text-blood-red leading-relaxed text-2xl mb-8">
      Empresas que confiam no meu trabalho
    </h2>

		<div class="mt-8 grid grid-cols-1 gap-6 overflow-hidden sm:grid-cols-4 sm:rounded-2xl lg:grid-cols-4">
      <div class="flex items-center justify-center p-4 sm:p-8 lg:p-8">
        <img class="max-h-12 w-full object-contain" src={laraBrenner.src} alt="Lara Brenner" loading="lazy" decoding="async" fetchpriority="high" width="230" height="48">
      </div>
      <div class="flex items-center justify-center p-4 sm:p-8 lg:p-8">
        <img class="max-h-12 w-full object-contain" src={reponto.src} alt="Reponto" loading="lazy" decoding="async" fetchpriority="high" width="230" height="48">
      </div>
      <div class="flex items-center justify-center p-4 sm:p-8 lg:p-8">
        <img class="max-h-12 w-full object-contain" src={mariaInclusiva.src} alt="Maria Inclusiva" loading="lazy" decoding="async" fetchpriority="high" width="230" height="48">
      </div>
      <div class="flex items-center justify-center p-4 sm:p-8 lg:p-8">
        <img class="max-h-12 w-full object-contain" src={elleven.src} alt="Elleven" loading="lazy" decoding="async" fetchpriority="high" width="230" height="48">
      </div>
      <div class="flex items-center justify-center p-4 sm:p-8 lg:p-8">
        <img class="max-h-12 w-full object-contain" src={una.src} alt="Una" loading="lazy" decoding="async" fetchpriority="high" width="230" height="48">
      </div>
      <div class="flex items-center justify-center p-4 sm:p-8 lg:p-8">
        <img class="max-h-12 w-full object-contain" src={uniBh.src} alt="Uni BH" loading="lazy" decoding="async" fetchpriority="high" width="230" height="48">
      </div>
      <div class="flex items-center justify-center p-4 sm:p-8 lg:p-8">
        <img class="max-h-12 w-full object-contain" src={estacio.src} alt="Estacio de Sa" loading="lazy" decoding="async" fetchpriority="high" width="230" height="48">
      </div>
      <div class="flex items-center justify-center p-4 sm:p-8 lg:p-8">
        <img class="max-h-12 w-full object-contain" src={cotemig.src} alt="Cotemig" loading="lazy" decoding="async" fetchpriority="high" width="230" height="48">
      </div>
    </div>
	</div>
</section>
