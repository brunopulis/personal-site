---
import creativeCommons from '@assets/images/buttons/cc.png';
import coffeePowered from '@assets/images/buttons/coffee-powered.png';
import faithTech from '@assets/images/buttons/faith-tech.png';
import human from '@assets/images/buttons/human.svg';
import indieweb from '@assets/images/buttons/indieweb.png';
import mastodon from '@assets/images/buttons/mastodon.gif';
import microformats from '@assets/images/buttons/microformats.png';
import obsidianUser from '@assets/images/buttons/obsidian-user.png';
import peoplePledge from '@assets/images/buttons/people-pledge.png';
import validCSS from '@assets/images/buttons/valid-css.gif';
import validHtml from '@assets/images/buttons/valid-html5.gif';
import rssFeed from '@assets/images/buttons/valid-rss.png';
import wcagAA from '@assets/images/buttons/wcag-aa.png';
import webStandards from '@assets/images/buttons/web-standards.png';
import webmentions from '@assets/images/buttons/webmentions.png';
---

<footer class="footer">
  <div class="wrapper flow">
    <!-- Bio -->
    <div class="mb-12 text-center max-w-2xl mx-auto">
      <p class="text-gray-700 leading-relaxed">
        Desenvolvedor e engenheiro de acessibilidade, apaixonado por criar experiências digitais
        excepcionais que conectam pessoas e transformam negócios.
      </p>
    </div>

    <div class="footer__columns | grid" data-layout="sidebar">
      <div class="footer__column | flow">
        <h3 class="footer__heading | text-step-0">Trabalho</h3>
        <ul class="footer__list | flow" role="list">
          <li><a href="/sobre" class="footer__link">Sobre</a></li>
          <li><a href="/projetos" class="footer__link">Projetos</a></li>
          <li><a href="/servicos" class="footer__link">Serviços</a></li>
          <li><a href="/newsletter" class="footer__link">Newsletter</a></li>
        </ul>
      </div>

      <div class="footer__column | flow">
        <h3 class="footer__heading | text-step-0">Pessoal</h3>
        <ul class="footer__list | flow" role="list">
          <li><a href="/blogroll" class="footer__link">Blogroll</a></li>
          <li>
            <a href="/livros" class="footer__link">Minha Biblioteca</a>
          </li>
          <li>
            <a href="/filmes" class="footer__link">Meus Filmes</a>
          </li>
          <li>
            <a href="/notas" class="footer__link">Minhas Notas</a>
          </li>
        </ul>
      </div>

      <div class="footer__column | flow">
        <h3 class="footer__heading | text-step-0">Meta</h3>
        <ul class="footer__list | flow" role="list">
          <li>
            <a href="/agora" class="footer__link">Now</a>
          </li>
          <li>
            <a href="/acessibilidade" class="footer__link">Declaração de Acessibilidade</a>
          </li>
          <li>
            <a href="/uso-ia" class="footer__link">Uso de IA</a>
          </li>
          <li>
            <a href="/feed.xml" class="footer__link">RSS</a>
          </li>
          <li>
            <a href="/pgp" class="footer__link">Chave PGP</a>
          </li>
        </ul>
      </div>
    </div>

    <!-- a11y Webring -->
    <div class="webring | cluster">
      <div class="webring__content | cluster" data-layout="cluster">
        <span class="color-secondary">Membro do</span>
        <a href="https://a11y-webring.club" class="webring__link"> a11y-webring.club </a>
        <span class="color-tertiary">•</span>
        <a href="https://a11y-webring.club/prev" class="webring__nav">← anterior</a>
        <a href="https://a11y-webring.club/random" class="webring__nav">aleatório</a>
        <a href="https://a11y-webring.club/next" class="webring__nav">próximo →</a>
      </div>
    </div>

    <!-- 88x31 Buttons Section -->
    <div class="buttons-section | flow">
      <h3 class="buttons-section__title | text-step--1 text-center">Badges & Buttons</h3>

      <ul class="footer__badge | grid" role="list">
        <li>
          <img
            src={validHtml.src}
            alt="Accessibility Engineer"
            width="88"
            height="31"
            loading="lazy"
            class="pixelated"
          />
        </li>
        <li>
          <img
            src={validCSS.src}
            alt="Accessibility Engineer"
            width="88"
            height="31"
            loading="lazy"
            class="pixelated"
          />
        </li>
        <li>
          <a href="/feed.xml">
            <img
              src={rssFeed.src}
              alt="Accessibility Engineer"
              width="88"
              height="31"
              loading="lazy"
              class="pixelated"
            />
          </a>
        </li>
        <li>
          <a
            href="https://www.w3.org/WAI/WCAG2AA-Conformance"
            title="Explanation of WCAG 2 Level AA conformance"
            target="_blank"
            rel="noopener noreferrer"
          >
            <img
              src={wcagAA.src}
              alt="Level AAA conformance, W3C WAI Web Content Accessibility Guidelines 2.2"
              width="88"
              height="32"
              loading="lazy"
            />
          </a>
        </li>
        <li>
          <a href="https://peoplepledge.org/" target="_blank" rel="noopener noreferrer">
            <img
              src={peoplePledge.src}
              alt="Accessibility Engineer"
              width="88"
              height="31"
              loading="lazy"
              class="pixelated"
            />
          </a>
        </li>
        <li>
          <img
            src={human.src}
            alt="Accessibility Engineer"
            width="88"
            height="31"
            loading="lazy"
            class="pixelated"
          />
        </li>
        <li>
          <a href="https://mastodon.social/@brunopulis@mastodon.social" rel="me">
            <img
              src={mastodon.src}
              alt="Accessibility Engineer"
              width="88"
              height="31"
              loading="lazy"
              class="pixelated"
            />
          </a>
        </li>
        <li>
          <a href="https://indieweb.org" target="_blank" rel="noopener noreferrer">
            <img
              src={indieweb.src}
              alt="Parte da Indie web"
              width="88"
              height="31"
              loading="lazy"
              class="pixelated"
            />
          </a>
        </li>
        <li>
          <img
            src={webmentions.src}
            alt="Esse site suporta webmentions"
            width="88"
            height="31"
            loading="lazy"
            class="pixelated"
          />
        </li>
        <li>
          <img
            src={microformats.src}
            alt="Esse site suporta webmentions"
            width="88"
            height="31"
            loading="lazy"
            class="pixelated"
          />
        </li>
        <li>
          <img
            src={faithTech.src}
            alt="Fe e tecnologia"
            width="88"
            height="31"
            loading="lazy"
            class="pixelated"
          />
        </li>
        <li>
          <img
            src={coffeePowered.src}
            alt="Fe e tecnologia"
            width="88"
            height="31"
            loading="lazy"
            class="pixelated"
          />
        </li>
        <li>
          <img
            src={obsidianUser.src}
            alt="Usuario de Obsidian"
            width="88"
            height="31"
            loading="lazy"
            class="pixelated"
          />
        </li>
        <li>
          <a
            href="https://archiveready.com/check?url=https://brunopulis.com/"
            title="Website Archivability Testing"
            ><img src="https://archiveready.com/img/archiveready-badge.png" alt="" /></a
          >
        </li>
        <li>
          <a href="http://creativecommons.org/licenses/by-sa/4.0/" rel="nofollow">
            <img
              src={creativeCommons.src}
              alt="CC BY-SA 4.0"
              width="88"
              height="31"
              loading="lazy"
              class="pixelated"
            />
          </a>
        </li>
      </ul>
    </div>

    <!-- Social Links -->
    <div class="social | cluster">
      <ul class="footer__list | flow" role="list">
        <li>
          <a
            href="https://github.com/brunopulis"
            target="_blank"
            rel="noopener noreferrer"
            class="footer__link"
            aria-label="GitHub"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path
                fill-rule="evenodd"
                d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                clip-rule="evenodd"></path>
            </svg>
          </a>
        </li>

        <li>
          <a
            href="https://youtube.com/@brunopulis"
            target="_blank"
            rel="noopener noreferrer"
            class="footer__link"
            aria-label="YouTube"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path
                d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"
              ></path>
            </svg>
          </a>
        </li>

        <li>
          <a
            href="https://linkedin.com/in/brunopulis"
            target="_blank"
            rel="noopener noreferrer"
            class="footer__link"
            aria-label="LinkedIn"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path
                d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
              ></path>
            </svg>
          </a>
        </li>
      </ul>
    </div>

    <!-- Copyright & License -->
    <div class="footer__copyright | text-center text-step--1">
      <p>Feito com <span role="img" aria-label="amor">❤️</span> em BH</p>
      <p>
        © 2012 <a href="https://brunopulis.com/sobre" class="text-blue-600 hover:text-blue-700"
          >Bruno Pulis</a
        > • Conteúdo licenciado por <a
          href="https://creativecommons.org/licenses/by-sa/4.0/"
          class="text-blue-600 hover:text-blue-700"
          target="_blank"
          rel="noopener noreferrer">CC-BY-SA</a
        >.
      </p>
    </div>
  </div>
</footer>
