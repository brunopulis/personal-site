---
import { FileText } from '@lucide/astro';

interface Props {
  title: string;
  description: string;
  primaryButton: {
    text: string;
    url: string;
  };
  secondaryButton?: {
    text: string;
    url: string;
  };
  icon?: any;
}

const { title, description, primaryButton, secondaryButton, icon: Icon = FileText } = Astro.props;
---

<aside class="bg-gray-900 py-20 text-white">
  <div class="mx-auto max-w-4xl px-6 text-center">
    <Icon class="mx-auto mb-6 h-16 w-16 opacity-90" aria-hidden="true" />
    <h2 class="mb-4 text-4xl font-bold">{title}</h2>
    <p class="mx-auto mb-8 max-w-2xl text-xl text-blue-100">
      {description}
    </p>
    <div class="flex flex-wrap justify-center gap-4">
      <a
        href={primaryButton.url}
        class="flex items-center text-lg font-semibold text-white transition underline underline-offset-8 hover:no-underline"
      >
        {primaryButton.text}
      </a>
      {
        secondaryButton && (
          <a
            href={secondaryButton.url}
            class="flex items-center text-lg font-semibold text-white transition underline underline-offset-8 hover:no-underline"
          >
            {secondaryButton.text}
          </a>
        )
      }
    </div>
  </div>
</aside>
