---
import { ArrowRight, FileText } from "@lucide/astro";

interface Props {
	title: string;
	description: string;
	primaryButton: {
		text: string;
		url: string;
	};
	secondaryButton?: {
		text: string;
		url: string;
	};
	icon?: any; // Permite passar qualquer ícone do lucide
}

const {
	title,
	description,
	primaryButton,
	secondaryButton,
	icon: Icon = FileText, // FileText como ícone padrão
} = Astro.props;
---

<aside class="bg-gray-900 py-20 text-white">
  <div class="mx-auto max-w-4xl px-6 text-center">
    <Icon class="mx-auto mb-6 h-16 w-16 opacity-90" />
    <h2 class="mb-4 text-4xl font-bold">{title}</h2>
    <p class="mx-auto mb-8 max-w-2xl text-xl text-blue-100">
      {description}
    </p>
    <div class="flex flex-wrap justify-center gap-4">
      <a
        href={primaryButton.url}
        class="inline-flex items-center gap-2 rounded-lg bg-white px-8 py-4 text-lg font-semibold text-gray-900 transition hover:bg-blue-50"
      >
        {primaryButton.text}
        <ArrowRight class="h-5 w-5" />
      </a>
      {
        secondaryButton && (
          <a
            href={secondaryButton.url}
            class="inline-flex items-center gap-2 rounded-lg border border-blue-500 bg-blue-700 px-8 py-4 text-lg font-semibold text-white transition hover:bg-blue-600"
          >
            {secondaryButton.text}
          </a>
        )
      }
    </div>
  </div>
</aside>
