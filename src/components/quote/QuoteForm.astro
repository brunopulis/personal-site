---
import { Send } from '@lucide/astro'

const serviceOptions = [
  'Desenvolvimento Acessível',
  'Consultoria em Acessibilidade',
  'Palestras e Workshops',
  'Correção de Documentos',
  'Auditoria WCAG',
  'Treinamento de Equipe',
]
---

<div>
  <h2 class="mb-6 text-3xl font-bold">Detalhes do Projeto</h2>
  <p class="pt-4 pb-4 text-sm text-gray-500">
    Campos com * são obrigatórios. Você receberá uma resposta detalhada em até 48 horas.
  </p>

  <form id="quote-form" class="my-6 space-y-8">
    <!-- Informações Pessoais -->
    <fieldset class="rounded-lg bg-gray-50 p-6 shadow-lg">
      <legend class="mb-6 text-xl font-semibold">Informações de Contato</legend>
      <div class="grid gap-4">
        <div>
          <label for="name" class="text-errie-black-900 mb-2 block text-sm font-medium">
            Nome Completo <span class="text-blood-red-800 font-bold">*</span>
          </label>
          <input
            type="text"
            id="name"
            name="name"
            required
            class="focus:ring-blood-red-800 w-full rounded-lg border border-gray-300 bg-white px-4 py-3 focus:border-transparent focus:ring-2"
          />
        </div>
        <div>
          <label for="email" class="text-errie-black-900 mb-2 block text-sm font-medium">
            Email <span class="text-blood-red-800 font-bold">*</span>
          </label>
          <input
            type="email"
            id="email"
            name="email"
            required
            class="focus:ring-blood-red-800 w-full rounded-lg border border-gray-300 bg-white px-4 py-3 focus:border-transparent focus:ring-2"
          />
        </div>
        <div>
          <label for="phone" class="text-errie-black-900 mb-2 block text-sm font-medium"> Telefone </label>
          <input
            type="tel"
            id="phone"
            name="phone"
            class="focus:ring-blood-red-800 w-full rounded-lg border border-gray-300 bg-white px-4 py-3 focus:border-transparent focus:ring-2"
          />
        </div>
        <div>
          <label for="company" class="text-errie-black-900 mb-2 block text-sm font-medium"> Empresa </label>
          <input
            type="text"
            id="company"
            name="company"
            class="focus:ring-blood-red-800 w-full rounded-lg border border-gray-300 bg-white px-4 py-3 focus:border-transparent focus:ring-2"
          />
        </div>
      </div>
      <div class="mt-4">
        <label for="website" class="text-errie-black-900 mb-2 block text-sm font-medium">
          Website Atual (se houver)
        </label>
        <input
          type="url"
          id="website"
          name="website"
          placeholder="https://exemplo.com"
          class="focus:ring-blood-red-800 w-full rounded-lg border border-gray-300 bg-white px-4 py-3 focus:border-transparent focus:ring-2"
        />
      </div>
    </fieldset>

    <!-- Serviços -->
    <fieldset class="rounded-lg bg-gray-50 p-6 shadow-lg">
      <legend class="mb-6 text-xl font-semibold">Serviços de Interesse *</legend>
      <div class="grid gap-3 md:grid-cols-2">
        {
          serviceOptions.map((service) => (
            <label class="flex cursor-pointer items-center gap-3 rounded-lg border border-gray-200 bg-white p-3 hover:bg-gray-50">
              <input
                type="checkbox"
                name="services"
                value={service}
                class="text-blood-red-800 focus:ring-blood-red-800 border-blood-red-800 h-4 w-4 rounded"
              />
              <span class="text-errie-black-900 font-bold">{service}</span>
            </label>
          ))
        }
      </div>
    </fieldset>

    <!-- Detalhes do Projeto -->
    <fieldset class="rounded-lg bg-gray-50 p-6 shadow-lg">
      <legend class="mb-6 text-xl font-semibold">Detalhes do Projeto</legend>
      <div class="mb-4 grid gap-4 md:grid-cols-2">
        <div>
          <label for="projectType" class="text-errie-black-900 mb-2 block text-sm font-medium"> Tipo de Projeto </label>
          <select
            id="projectType"
            name="projectType"
            class="focus:ring-blood-red-800 w-full rounded-lg border border-gray-300 bg-white px-4 py-3 focus:border-transparent focus:ring-2"
          >
            <option value="">Selecione o tipo</option>
            <option value="novo-site">Novo Site</option>
            <option value="redesign">Redesign</option>
            <option value="aplicacao-web">Aplicação Web</option>
            <option value="e-commerce">E-commerce</option>
            <option value="sistema-interno">Sistema Interno</option>
            <option value="outro">Outro</option>
          </select>
        </div>
        <div>
          <label for="timeline" class="text-errie-black-900 mb-2 block text-sm font-medium"> Prazo Desejado </label>
          <select
            id="timeline"
            name="timeline"
            class="focus:ring-blood-red-800 w-full rounded-lg border border-gray-300 bg-white px-4 py-3 focus:border-transparent focus:ring-2"
          >
            <option value="">Selecione o prazo</option>
            <option value="urgente">Urgente (até 2 semanas)</option>
            <option value="1-mes">1 mês</option>
            <option value="2-3-meses">2-3 meses</option>
            <option value="3-6-meses">3-6 meses</option>
            <option value="flexivel">Flexível</option>
          </select>
        </div>
      </div>
      <div class="mb-4">
        <label for="budget" class="text-errie-black-900 mb-2 block text-sm font-medium"> Orçamento Estimado </label>
        <select
          id="budget"
          name="budget"
          class="focus:ring-blood-red-800 w-full rounded-lg border border-gray-300 bg-white px-4 py-3 focus:border-transparent focus:ring-2"
        >
          <option value="">Selecione a faixa</option>
          <option value="ate-2500">Até R$ 2.500</option>
          <option value="2500-5000">R$ 2.500 - R$ 5.000</option>
          <option value="5000-10000">R$ 5.000 - R$ 10.000</option>
          <option value="10000-20000">R$ 10.000 - R$ 20.000</option>
          <option value="acima-20000">Acima de R$ 20.000</option>
          <option value="a-definir">A definir</option>
        </select>
      </div>
      <div class="mb-4">
        <label for="description" class="text-errie-black-900 mb-2 block text-sm font-medium">
          Descrição do Projeto *
        </label>
        <textarea
          id="description"
          name="description"
          rows="4"
          required
          class="focus:ring-blood-red-800 w-full rounded-lg border border-gray-300 bg-white px-4 py-3 focus:border-transparent focus:ring-2"
          placeholder="Descreva seu projeto, objetivos e o que você espera alcançar..."></textarea>
      </div>
      <div class="mb-4">
        <label for="requirements" class="text-errie-black-900 mb-2 block text-sm font-medium">
          Requisitos Específicos de Acessibilidade
        </label>
        <textarea
          id="requirements"
          name="requirements"
          rows="3"
          class="focus:ring-blood-red-800 w-full rounded-lg border border-gray-300 bg-white px-4 py-3 focus:border-transparent focus:ring-2"
          placeholder="Ex: Conformidade WCAG 2.1 AA, suporte a leitores de tela específicos, etc."></textarea>
      </div>
      <div class="mb-4">
        <label for="targetAudience" class="text-errie-black-900 mb-2 block text-sm font-medium"> Público-alvo </label>
        <input
          type="text"
          id="targetAudience"
          name="targetAudience"
          class="focus:ring-blood-red-800 w-full rounded-lg border border-gray-300 bg-white px-4 py-3 focus:border-transparent focus:ring-2"
          placeholder="Ex: Pessoas com deficiência visual, idosos, usuários de dispositivos móveis..."
        />
      </div>
      <div>
        <label for="additionalInfo" class="text-errie-black-900 mb-2 block text-sm font-medium">
          Informações Adicionais
        </label>
        <textarea
          id="additionalInfo"
          name="additionalInfo"
          rows="3"
          class="focus:ring-blood-red-800 w-full rounded-lg border border-gray-300 bg-white px-4 py-3 focus:border-transparent focus:ring-2"
          placeholder="Qualquer informação adicional que possa ser relevante para o orçamento..."></textarea>
      </div>
    </fieldset>

    <button
      type="submit"
      class="focus-visible:border-ring focus-visible:ring-ring/50 aria-invalid:ring-destructive/20 dark:aria-invalid:ring-destructive/40 aria-invalid:border-destructive bg-blood-red-800 hover:bg-blood-red-800/90 inline-flex h-10 shrink-0 items-center justify-center gap-2 rounded-md px-8 py-4 text-sm font-medium whitespace-nowrap text-white transition-all outline-none focus-visible:ring-[3px] disabled:pointer-events-none disabled:opacity-50 has-[>svg]:px-4 [&_svg]:pointer-events-none [&_svg]:shrink-0 [&_svg:not([class*='size-'])]:size-4"
    >
      <Send class="mr-2 inline-block h-5 w-5" />
      Solicitar Orçamento
    </button>
  </form>
</div>

<script>
  document.getElementById('quote-form').addEventListener('submit', function (e) {
    e.preventDefault()
    // Aqui você pode coletar os dados do formulário e enviar via fetch/AJAX ou manipular como preferir
    alert('Formulário enviado! (implemente o envio conforme sua necessidade)')
  })
</script>
