---
import { Quote } from '@lucide/astro';

interface TestimonialCardProps {
  name: string;
  role: string;
  image: string;
  content: string;
}

const { name, role, image, content } = Astro.props;
---

<article
  class="border-grey/20 rounded-lg border bg-white p-8"
  aria-labelledby={`testimonial-${name.replace(/\s+/g, '-').toLowerCase()}`}
>
  <Quote class="text-blood-red-800 mb-4 h-8 w-8" aria-hidden="true" />
  <p class="text-errie-black-900 mb-6">
    {content}
  </p>

  <div class="flex items-center">
    <img src={image} alt={`Foto de ${name}`} class="mr-4 h-12 w-12 rounded-full object-cover" />
    <div>
      <h3
        id={`testimonial-${name.replace(/\s+/g, '-').toLowerCase()}`}
        class="text-errie-black-900 font-bold"
      >
        {name}
      </h3>
      <p class="text-errie-black-900 text-sm">{role}</p>
    </div>
  </div>
</article>
