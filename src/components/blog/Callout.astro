---
interface Props {
  type?: 'info' | 'warning' | 'success' | 'error';
  title?: string;
  children: any;
}

const { type = 'info', title, children } = Astro.props;

const icons = {
  info: 'üí°',
  warning: '‚ö†Ô∏è',
  success: '‚úÖ',
  error: '‚ùå',
};

const colors = {
  info: 'blue',
  warning: 'yellow',
  success: 'green',
  error: 'red',
};
---

<div class={`callout callout-${type}`} role="note">
  {
    title && (
      <div class="callout-title">
        <span class="callout-icon" aria-hidden="true">
          {icons[type]}
        </span>
        <strong>{title}</strong>
      </div>
    )
  }
  <div class="callout-content">
    <slot />
  </div>
</div>

<style define:vars={{ color: colors[type] }}>
  .callout {
    margin: 1.5rem 0;
    border-left: 4px solid var(--color-accent, #3b82f6);
    border-radius: 0.5rem;
    background: var(--color-bg, #f8fafc);
    padding: 1rem 1.25rem;
  }

  .callout-info {
    --color-accent: #3b82f6;
    --color-bg: #eff6ff;
    --color-text: #1e40af;
  }

  .callout-warning {
    --color-accent: #f59e0b;
    --color-bg: #fffbeb;
    --color-text: #92400e;
  }

  .callout-success {
    --color-accent: #10b981;
    --color-bg: #f0fdf4;
    --color-text: #065f46;
  }

  .callout-error {
    --color-accent: #ef4444;
    --color-bg: #fef2f2;
    --color-text: #991b1b;
  }

  .callout-title {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.75rem;
    color: var(--color-text);
  }

  .callout-icon {
    font-size: 1.25rem;
    line-height: 1;
  }

  .callout-content {
    color: var(--color-text);
  }

  .callout-content :global(p:first-child) {
    margin-top: 0;
  }

  .callout-content :global(p:last-child) {
    margin-bottom: 0;
  }

  @media (prefers-color-scheme: dark) {
    .callout-info {
      --color-bg: #1e3a8a;
      --color-text: #dbeafe;
    }

    .callout-warning {
      --color-bg: #78350f;
      --color-text: #fef3c7;
    }

    .callout-success {
      --color-bg: #064e3b;
      --color-text: #d1fae5;
    }

    .callout-error {
      --color-bg: #7f1d1d;
      --color-text: #fecaca;
    }
  }
</style>
