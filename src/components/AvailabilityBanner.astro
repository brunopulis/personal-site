---
interface Props {
	isAvailable: boolean
	message?: string
}

const { isAvailable, message } = Astro.props

const defaultMessage = isAvailable
	? 'Disponível para freelas'
	: 'Indisponível para freelas'

const bgColor = isAvailable ? 'bg-green-500' : 'bg-red-600'
---

<div class="text-center lg:text-right" id="availability-banner">
	<div class="inline-flex items-center rounded-full bg-white px-3 sm:px-4 py-1.5  shadow-md sm:py-2">
		<p class="text-sm font-bold text-black text-[12px] sm:text-base md:text-lg">
      {message || defaultMessage}
    </p>

    <span class={`${bgColor} ml-2 h-2.5 w-2.5 rounded-full sm:mr-2.5 sm:h-3 sm:w-3`}></span>
	</div>
</div>
