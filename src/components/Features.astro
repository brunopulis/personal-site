---

import { ChevronRight } from "@lucide/astro";

const features = [
  {
    title: "Mentoria e Consultoria",
    description: "Ajudamos você ou sua equipe a colocar a acessibilidade em prática.",
    icon: "M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2 M16 3.128a4 4 0 0 1 0 7.744 M22 21v-2a4 4 0 0 0-3-3.87",
    color: "primary",
  },
  {
    title: "Auditoria de acessibilidade",
    description:
      "Analisamos seu site, aplicativo ou documento digital.",
    icon: "M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z",
    color: "secondary",
  },
  {
    title: "Palestras e Treinamentos",
    description:
      "Levamos conhecimento acessível para empresas e eventos.",
    icon: "M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z",
    color: "accent",
  }
];
---

<section class="bg-gray-50 py-20" id="features">
  <div class="container-custom">
    <div class="mx-auto mb-16 max-w-3xl text-center">
      <span
        class="bg-primary-100 dark:bg-primary-900 text-primary-600 dark:text-primary-300 mb-4 inline-block rounded-full px-4 py-1 text-sm font-medium"
      >
        Meus serviços
      </span>
      <h2 class="mb-6 text-gray-900 dark:text-white">O que eu faço</h2>
      <p class="text-errie-black-900 dark:text-gray-300">
        Oferecemos soluções completas em acessibilidade digital para tornar seus produtos
        inclusivos e conformes com as melhores práticas.
      </p>
    </div>

    <div class="mb-12 grid gap-8 md:grid-cols-3">
      {
        features.map((feature, index) => (
          <article
            class="card slide-up border border-gray-200 p-6 dark:border-gray-700 flex flex-col"
            style={`animation-delay: ${index * 100}ms`}
          >
            <div
              class={`h-12 w-12 rounded-lg bg-${feature.color}-100 dark:bg-${feature.color}-900/30 mb-6 flex items-center justify-center`}
            >
              <svg
                class={`h-6 w-6 text-${feature.color}-600 dark:text-${feature.color}-400`}
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d={feature.icon}
                />
              </svg>
            </div>
            <h3 class="mb-3 text-xl font-semibold text-gray-900 dark:text-white">
              {feature.title}
            </h3>
            <p class="text-gray-600 dark:text-gray-300">
              {feature.description}
            </p>

            <a href="" class="mt-6 inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium disabled:pointer-events-none disabled:opacity-50 [&_svg]:pointer-events-none [&_svg:not([class*='size-'])]:size-4 shrink-0 [&_svg]:shrink-0 outline-none focus-visible:border-ring focus-visible:ring-ring/50 focus-visible:ring-[3px] aria-invalid:ring-destructive/20 dark:aria-invalid:ring-destructive/40 aria-invalid:border-destructive border bg-background text-foreground hover:bg-accent hover:text-accent-foreground dark:bg-input/30 dark:border-input dark:hover:bg-input/50 h-9 px-4 py-2 has-[>svg]:px-3 group-hover:bg-[var(--color-burgundy)] group-hover:text-white group-hover:border-[var(--color-burgundy)] transition-colors">
              Saiba mais <span class="sr-only">sobre {feature.title}</span>
            </a>
          </article>
        ))
      }
    </div>
    <div class="text-center">
      <a href="/servicos" class="focus-visible:border-ring focus-visible:ring-ring/50 aria-invalid:ring-destructive/20 dark:aria-invalid:ring-destructive/40 aria-invalid:border-destructive inline-flex h-10 shrink-0 items-center justify-center gap-2 rounded-md bg-blood-red-800 px-8 py-4 text-sm font-medium whitespace-nowrap text-white transition-all outline-none hover:bg-blood-red-800/90 focus-visible:ring-[3px] disabled:pointer-events-none disabled:opacity-50 has-[>svg]:px-4 [&_svg]:pointer-events-none [&_svg]:shrink-0 [&_svg:not([class*='size-'])]:size-4">
        Explorar serviços
        <ChevronRight aria-hidden="true" class="ml-2 h-5 w-5" />
      </a>
    </div>
  </div>
</section>
