{
  "root": ".",
  "ignore": ["node_modules", "dist", "public"],
  "formatter": {
    "indent_style": "space",
    "indent_size": 2,
    "line_width": 120,
    "semi": true,
    "single_quote": true,
    "trailing_comma": "all"
  },
  "linter": {
    "rules": {
      "no-unused-vars": "error",
      "semi": ["error", "always"],
      "quotes": ["error", "single"],
      "comma-dangle": ["error", "always-multiline"]
    },
    "overrides": {
      "*.ts": {
        "parser": "typescript"
      },
      "*.tsx": {
        "parser": "typescript"
      },
      "*.js": {
        "parser": "babel"
      },
      "*.jsx": {
        "parser": "babel"
      },
      "*.astro": {
        "parser": "astro"
      }
    }
  },
  "files": ["src/**/*.{ts,tsx,js,jsx,astro,css,scss}"]
}
