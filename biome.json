{
	"linter": {
		"enabled": true,
		"rules": { "recommended": false },
		"includes": [
			"**",
			"!**/.husky",
			"!**/.vscode",
			"!**/node_modules",
			"!**/public",
			"!**/dist",
			"!**/.yarn"
		]
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": [
			"node_modules",
			"dist",
			".astro",
			"build",
			"*.min.js",
			"*.min.css",
			"src/styles/global.css",
			"src/styles/tailwind.css"
		]
	}
}
